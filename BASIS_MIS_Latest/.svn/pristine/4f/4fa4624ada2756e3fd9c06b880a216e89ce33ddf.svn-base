0010 REM "CSM - Product ID Maintenance (Valid Product Exchanges)"
0020 REM "Program CSM.AE"
0040 REM 
0070 SETERR 9000
0080 SETESC 9000
0200 REM " --- IOLIST's"
0210 CSM13D: IOLIST B0$(1),B1$(1)
0500 REM " --- Initializations"
0510 DIM B0$(9),B1$(23)
0520 LET B0$(1)=N0$+"D"+A0$(3,3)
0580 LET L2=8,L9=21,L=L2
0700 REM " --- Background"
0710 PRINT 'SB'
0720 PRINT @(2,7),"Seq",@(8),"Exchange for Product",@(38),"Sale Type"
0730 PRINT 'SF'
0900 REM " --- Display any existing lines"
0920 GOSUB 5100
0930 IF Q1=0 THEN GOTO 1400
0990 GOTO 4000
1000 REM " --- Overflow"
1010 IF L>L9 THEN PRINT @(0,22),'CL',@(0,L2),'LD',
1020 IF L>L9 THEN LET L=L9
1100 REM " --- Get Next Key"
1110 LET K$=KEY(CSM13_DEV,END=1300)
1120 IF POS(K$(1,6)=B0$(1,6))<>1 THEN GOTO 1300
1130 READ (CSM13_DEV)IOL=CSM13D
1170 GOSUB 5000
1180 LET I0=3
1190 GOTO 3300
1400 REM " --- Seq"
1410 LET B0=NUM(B0$(7,3))+10
1412 PRINT @(2,L),B0:"000",
1420 LET V0$="Z",V1$="KER",V2$=STR(B0),V3$="",V0=3,V1=2,V2=L,I0=0
1430 GOSUB 7000
1440 IF V3=4 THEN PRINT @(V1,L),'CL'; GOTO 4000
1450 IF NUM(V$)=0 THEN GOTO 1412
1460 LET B0$(7,3)=V$
1480 FIND (CSM13_DEV,KEY=B0$,DOM=1600)IOL=CSM13D
1490 IF B0$<=K9$ THEN GOSUB 5400
1500 REM 
1510 GOSUB 5000
1520 LET I0=1
1590 GOTO 3200
1600 REM " --- New Record"
1610 LET B1$(1)="",B2$(1)=""
1620 GOSUB 5000
1690 GOTO 3200
2000 REM " --- Valid Product"
2020 LET V0$="S",V1$="CE^",V2$=B1$(1,3),V3$="",V0=3,V1=10,V2=L,IO=2
2030 LET V4$="Enter a product "+B0$(4,3)+" can be exchanged for  <F3>=Lookup"
2040 GOSUB 7000
2045 ON V3 GOTO 2060,2060,2090,2050,2060
2050 CALL "CSC.LK",FILES$[2],V1,V2,V$,V0,30,"Product IDs"
2055 IF V$="" THEN GOTO 2000
2060 LET B1$(1,3)=V$
2070 FIND (CSM01_DEV,KEY=N0$+B1$(1,3),DOM=2000)*,PROD_DESC$
2080 PRINT @(V1,V2),B1$(1,3),; REM @(15,V2),PRod_DESC$(1,20)
2090 GOTO 3200
2100 REM " --- Type of Sale"
2120 LET V0$="S",V1$="CE^",V2$=B1$(4,3),V3$="",V0=3,V1=40,V2=L
2130 LET V4$="Enter the sale type for this echange  <F3>=Lookup"
2140 GOSUB 7000
2145 ON V3 GOTO 2160,2160,2190,2150,2160
2150 CALL "CSC.LK",FILES$[10],V1,V2,V$,V0,30,"Types of Sale"
2160 LET B1$(4,3)=V$
2170 READ (CSM07_DEV,KEY=N0$+V$,DOM=2100)
2180 PRINT @(V1,V2),B1$(4,3)
2190 GOTO 3200
3200 REM " --- Sequence control"
3210 IF V3=4 THEN IF I0>1 THEN GOTO 3300
3220 IF V3<>2 THEN GOTO 3250
3230 IF I0>0 THEN LET I0=I0-1
3240 GOTO 3260
3250 LET I0=I0+1
3260 ON I0 GOTO 1400,2000,2100,3300
3300 REM " --- Line Correct?"
3310 LET V4$="<Enter>=Continue     <D>=Delete     <F2>=Change"
3320 LET V0$="S",V1$="C^",V2$="",V3$="",V0=1,V1=78,V2=L,K9$=B0$
3330 GOSUB 7000
3340 ON V3 GOTO 3350,3300,3200,3300,3350
3350 IF V$="" THEN GOTO 3400
3360 IF V$="D" THEN GOTO 3700
3390 GOTO 3300
3400 REM " --- Write"
3410 WRITE (CSM13_DEV,KEY=B0$)IOL=CSM13D
3450 LET L=L+1
3460 IF V3=4 THEN GOTO 4000
3490 GOTO 1000
3700 REM " --- Remove"
3710 REMOVE (CSM13_DEV,KEY=B0$,DOM=3720)
3750 PRINT @(0,L),'CL',
3760 IF V3=4 THEN GOTO 4000
3790 GOTO 1000
4000 REM " --- Options"
4010 LET V4$="Is The Above Information Correct (Y/N/Delete/List/Review)?"
4020 LET V0$="S",V1$="C^",V2$="Y",V3$="",V0=6,V1=FNV(V4$),V2=22
4030 GOSUB 7000
4040 ON V3 GOTO 4050,4000,4000,4000,4100
4050 IF V$="L" OR V$="LIST" THEN GOTO 4500
4070 IF V$="R" OR V$="REVIEW" THEN GOTO 4600
4080 IF V$="DELETE" THEN GOTO 4200
4090 ON POS(V$="YN") GOTO 4000,4100,4700
4100 REM " --- Return to header"
4110 GOSUB 5400
4190 GOTO 4900
4200 REM " --- Delete"
4210 LET V4$="Delete ALL Exchange Products For "+A0$(3,3)
4220 CALL "SYC.YN",0,V4$,0,V$,V3
4230 IF V$<>"YES" THEN GOTO 0800
4280 LET B0$(1)=N0$+"A"+A0$(3,3)
4290 READ (CSM13_DEV,KEY=B0$,DOM=4300)
4300 REM " --- Remove next CSM-13 record"
4310 LET K$=KEY(CSM13_DEV,END=4400)
4320 IF POS(B0$(1,6)=K$)<>1 THEN GOTO 4400
4330 REMOVE (CSM13_DEV,KEY=K$)
4390 GOTO 4300
4400 REM " --- Delete completed"
4420 READ (CSM13_DEV,KEY=N0$+"D"+A0$(3,3),DOM=4430)
4430 LET K$=KEY(CSM13_DEV,END=4100)
4490 GOTO 4100
4500 REM " --- List"
4510 LET B0$(7)=""
4520 GOSUB 5100
4590 GOTO 4000
4600 REM " --- Review"
4610 LET B0$(7)=""
4650 REM " --- Restart"
4660 READ (CSM13_DEV,KEY=B0$(1,6),DOM=4670)
4670 GOSUB 5400
4690 GOTO 1000
4700 REM " --- Not correct"
4710 READ (CSM13_DEV,KEY=B0$(1,6)+$FF$,DOM=4790)
4790 GOTO 1000
4900 REM " --- Run menu overlay"
4990 RUN "CSM.AA"
5000 REM " --- Display"
5020 PRINT @(2,L),B0$(7,3),@(10),B1$(1,3),@(40),B1$(4,3)
5090 RETURN 
5100 REM " --- List"
5105 LET Q1=0
5110 GOSUB 5400
5120 READ (CSM13_DEV,KEY=B0$,DOM=5130)
5130 LET K$=KEY(CSM13_DEV,END=5300)
5140 IF POS(B0$(1,6)=K$)<>1 THEN GOTO 5300
5160 READ (CSM13_DEV)IOL=CSM13D
5190 IF L<=L9 THEN GOTO 5250
5200 REM " --- Continue"
5210 LET V4$="Press <Enter> To Continue:"
5215 LET V0$="S",V1$="CE",V2$="",V3$="",V0=1,V1=FNV(V4$),V2=22
5220 GOSUB 7000
5230 IF V3=4 THEN GOTO 5300
5240 GOSUB 5400
5250 GOSUB 5000
5260 LET L=L+1,K9$=B0$
5290 GOTO 5130
5300 RETURN 
5400 REM " --- Clear Screen"
5420 PRINT @(0,L2),'CE',
5440 LET L=L2
5490 RETURN 
7000 REM " --- Standard Input Routine (15May95)"
7010 CALL "SYC.IA",V0$,V1$,V2$,V3$,V4$,PGM(-2),V0,V1,V2,V$,V,V3,DISPLAY_LEN
7020 IF V3=999 THEN GOTO 7200
7030 IF V3=127 THEN GOTO 7100
7090 RETURN 
7100 REM " --- Escape During Input"
7110 CALL "SYC.ES",ERR=7200,PGM(-2),TCB(8),E$,E2,V3
7120 IF V3<>127 THEN GOTO 7000
7130 PRINT @(0,E2),'CL','CURSOR'("ON"),E$,'LF'
7200 REM " --- Error During Input"
7210 ESCAPE
7290 GOTO 7000
8000 REM " --- Functions"
8010 DEF FNA$(Q$,Q2$)=STR(MOD((ASC(Q$)-32)*POS(" "<>Q2$(2,1)),100):"00")
8020 DEF FNB$(Q1$)=FNA$(Q1$(2),Q1$)+"/"+FNA$(Q1$(3),Q1$)+"/"+FNA$(Q1$(1),Q1$)
8080 DEF FNP$(Q$)=CVS(Q$,2)
8085 DEF FNV(Q$)=42+INT(LEN(Q$)/2)
9000 REM " --- Standard Error Routine (15May95)"
9010 IF ERR=127 THEN GOTO 9300
9020 CALL "SYC.EA",ERR=9090,EXIT_CTRL,PGM(-2),ERR,TCB(5),E$,E1,E2
9030 IF E1=1 THEN GOTO 9100
9040 IF E1=3 THEN GOTO 9200
9080 PRINT @(0,E2),'CL','CURSOR'("ON"),E$,'LF'
9090 ESCAPE
9100 REM " --- Retry"
9190 RETRY
9200 REM " --- Return"
9290 GOTO 9900
9300 REM " --- Standard Escape Routine"
9310 CALL "SYC.ES",ERR=9350,PGM(-2),TCB(8),E$,E2,V3
9320 IF V3<>127 THEN GOTO 9390
9330 PRINT @(0,E2),'CL','CURSOR'("ON"),E$,'LF'
9350 ESCAPE
9390 RETURN 
9900 RUN "SYS.AA"
9999 END
