0090 ENTER LINE_LISTING$,LINE_NO$,PROG_NAME$,ERROR,MODE
1000 REM " --- Adjust CALL/ENTER list
1010 LET LINE=NUM(LINE_NO$),XMODE=0,STATEMENT$="",MODE=0,ROW=0
1050 CALL "SYC.EA",ERR=9900,XMODE,PROG_NAME$,ERROR,LINE,STATEMENT$,MODE,ROW
1100 REM " --- Check for escape"
1110 IF MODE<>2 THEN GOTO 9900
1120 CALL "SYC.ES",ERR=9900,PROG_NAME$,TCB(8),STATEMENT$,ROW,FKEY
1130 IF FKEY=127 THEN LET MODE=2 ELSE LET MODE=3
9900 REM " --- Exit"
9990 EXIT 
9999 END
