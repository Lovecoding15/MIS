0010 REM "SAX - Rebuild Sales Analysis Cross Reference
0020 REM "Program SAX.AA"
0022 REM "+-----------------------------------------------------------+"
0024 REM "| ADD+ON Software, Inc. Advantage/V Version 6.0.0 - 15May96 |"
0026 REM "|      Copyright (c) 1996 Open Systems Holdings Corp.       |"
0028 REM "|                  All Rights Reserved                      |"
0030 REM "+-----------------------------------------------------------+"
0040 REM 
0060 BEGIN 
0085 SETESC 9000
0090 SETERR 9000
0100 REM " --- Open/Lock Files
0110 LET FILES=2
0120 DIM FILES$[FILES],OPTIONS$[FILES],CHANNELS[FILES]
0125 LET FILES$[1]="SAM-01",FILES$[2]="SAM-21"
0150 LET OPTIONS$[2]="CL"
0160 CALL "SYC.DA",1,1,1,FILES$[ALL],OPTIONS$[ALL],CHANNELS[ALL],BATCH,STATUS
0165 IF STATUS>0 THEN GOTO 9900
0170 LET SAM01_DEV=CHANNELS[1]
0200 REM " --- IOLists
0220 SAM21A: IOLIST XREF$
0700 REM " --- Background
0760 LET V4$="Do You Wish To Rebuild Sales Analysis Cross References"
0770 CALL "SYC.YN",0,V4$,0,V$,V3
0780 IF V$<>"YES" THEN GOTO 9900
0790 CALL "SYC.NB","Processing",34,COLUMN
0900 REM " --- Clear and lock x-ref
0960 CALL "SYC.DA",1,2,2,FILES$[ALL],OPTIONS$[ALL],CHANNELS[ALL],BATCH,STATUS
0965 IF STATUS>0 THEN GOTO 9900
0970 LET SAM21_DEV=CHANNELS[2]
1000 REM " --- Position file
1040 READ (SAM01_DEV,KEY="",DOM=READSAM01)
1100 REM " --- Read through SAM-01
1105 READSAM01: 
1130 LET K$=KEY(SAM01_DEV,END=DONE)
1170 PRINT @(COLUMN,11),K$(1,2)," ",K$(3,2)," ",K$(6),
1200 REM " --- Rebuild X-ref (SAM-21)
1220 LET XREF$=K$(1,4)+K$(11,23)+K$(5,6)
1270 WRITE (SAM21_DEV,KEY=XREF$)IOL=SAM21A
1290 GOTO NEXTSAM01
1300 REM " --- Loop up for next SAM01
1305 NEXTSAM01: 
1310 READ (SAM01_DEV)
1320 GOTO READSAM01
4000 REM " --- All done
4005 DONE: 
4090 GOTO 9900
8000 REM " --- Functions"
9000 REM " --- Standard Error Routine (15May95)"
9010 IF ERR=127 THEN GOTO 9300
9020 CALL "SYC.EA",ERR=9090,EXIT_CTRL,PGM(-2),ERR,TCB(5),E$,E1,E2
9030 IF E1=1 THEN GOTO 9100
9040 IF E1=3 THEN GOTO 9200
9080 PRINT @(0,E2),'CL','CURSOR'("ON"),E$,'LF'
9090 ESCAPE
9100 REM " --- Retry"
9190 RETRY
9200 REM " --- Return"
9290 GOTO 9900
9300 REM " --- Standard Escape Routine"
9310 CALL "SYC.ES",ERR=9350,PGM(-2),TCB(8),E$,E2,V3
9320 IF V3<>127 THEN GOTO 9390
9330 PRINT @(0,E2),'CL','CURSOR'("ON"),E$,'LF'
9350 ESCAPE
9390 RETURN 
9800 REM " --- Display Parameter record error"
9880 LET LINE_ERR$=LST(PGM(TCB(5)))
9890 CALL "SYC.YA",LINE_ERR$,N2$,ERR
9900 RUN "SYS.AA"
9999 END
