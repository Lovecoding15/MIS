0040 REM 
0090 SETERR 9000
0095 SETESC 9000
0100 REM " --- Open/Lock Files "
0200 REM " --- IOLISTS"
0210 ART05A: IOLIST A0$
0220 ART01A: IOLIST X0$,X[0],X[1]
0320 ART11A: IOLIST C0$,C1$,C[0],C[1]
0500 REM " --- Initialize data "
0520 DIM X[2],C[2]
0700 REM " --- Background "
0710 CALL "SYC.NB","Removing Invoice: ",7,COLUMN
0940 REM " --- Disallow 'M'enu option in Error Routine
0950 LET EXIT_CTRL=1
1000 REM " --- Initial File Read "
1020 READ (ART05_DEV,KEY=N0$,DOM=1030)
1100 REM " --- File Read "
1110 LET K0$=KEY(ART05_DEV,END=4000)
1120 READ (ART05_DEV,END=4000)IOL=ART05A
1140 IF POS(N0$=A0$)<>1 THEN GOTO 4000
1200 REM " --- Check "
1220 IF A0$(22,3)>P9$ THEN GOTO 1100
1300 REM " --- Initialize Totals "
1310 LET T0=0,O9=0
1400 REM " --- Open Invoice ? "
1420 FIND (ART01_DEV,KEY=A0$(1,4)+A0$(15,6)+A0$(8,7)+"00",DOM=1800)IOL=ART01A
1430 IF X0$(24,3)>P9$ THEN GOTO 1700
1440 LET T0=X[0]
1500 REM " --- Invoice Detail "
1505 READ (ART11_DEV,KEY=X0$(1,19),DOM=1510)
1510 LET K$=KEY(ART11_DEV,END=1600)
1520 IF POS(K$(1,17)=X0$)=0 THEN GOTO 1600
1530 READ (ART11_DEV,KEY=K$)IOL=ART11A
1535 LET T0=T0+C[0]+C[1]
1590 GOTO 1510
1600 REM " --- Keep Or Remove? "
1620 IF T0<>0 THEN GOTO 1700
1640 GOTO 1800
1700 REM " --- Next Invoice "
1710 GOTO 1100
1800 REM " --- Remove Invoice "
1810 PRINT @(COLUMN,11),A0$(5,7),
1820 REMOVE (ART05_DEV,KEY=K0$,DOM=1830)
1890 GOTO 1100
4000 REM " --- End "
4100 GOTO 9900
8000 REM " --- Functions "
8010 DEF FNA$(Q$,Q2$)=STR(MOD((ASC(Q$)-32)*POS(" "<>Q2$(2,1)),100):"00")
8020 DEF FNB$(Q1$)=FNA$(Q1$(2),Q1$)+"/"+FNA$(Q1$(3),Q1$)+"/"+FNA$(Q1$(1),Q1$)
8030 DEF FNC$(Q1$)=FNA$(Q1$(2),Q1$)+FNA$(Q1$(3),Q1$)+FNA$(Q1$(1),Q1$)
8040 DEF FND$(Q$)=CHR(FNYY_YEAR(Q$(5,2))+32)+CHR(NUM(Q$(1,2))+32)+CHR(NUM(Q$(3,2))+32)
8145 REM " --- FNYY21_YY$ Un-Convert 21st Century 2-Char Year to 2-Char Year"
8150 DEF FNYY21_YY$(Q1$)
8155 LET Q3$=" 01234567890123456789",Q1$(1,1)=Q3$(POS(Q1$(1,1)=" 0123456789ABCDEFGHIJ"))
8160 RETURN Q1$
8165 FNEND
8170 REM " --- FNYY_YEAR Convert 2-Char Year to 21st Century Numeric Year"
8175 DEF FNYY_YEAR(Q1$)
8180 LET Q=NUM(FNYY21_YY$(Q1$)); IF Q<50 THEN LET Q=Q+100
8185 RETURN Q
8190 FNEND
8200 REM " --- FNF$ AlphaNumeric Masking Function"
8210 DEF FNF$(Q1$,Q2$)
8220 IF Q2$="" THEN LET Q2$=FILL(LEN(Q1$),"0")
8230 RETURN STR(-NUM(Q1$,ERR=ALPHA_FNF):Q2$,ERR=ALPHA_FNF)
8240 ALPHA_FNF: 
8245 LET Q=1,Q0=0
8250 WHILE LEN(Q2$(Q))
8255 IF POS(Q2$(Q,1)="-()") THEN LET Q0=Q0+1 ELSE LET Q2$(Q,1)="X"
8260 LET Q=Q+1
8265 WEND
8270 IF LEN(Q1$)>LEN(Q2$)-Q0 THEN LET Q1$=Q1$(1,LEN(Q2$)-Q0)
8280 RETURN STR(Q1$:Q2$)
8290 FNEND
9000 REM " --- Standard Error Routine (15May95)"
9010 IF ERR=127 THEN GOTO 9300
9020 CALL "SYC.EA",ERR=9090,EXIT_CTRL,PGM(-2),ERR,TCB(5),E$,E1,E2
9030 IF E1=1 THEN GOTO 9100
9040 IF E1=3 THEN GOTO 9200
9080 PRINT @(0,E2),'CL','CURSOR'("ON"),E$,'LF'
9090 ESCAPE
9100 REM " --- Retry"
9190 RETRY
9200 REM " --- Return"
9290 GOTO 9900
9300 REM " --- Standard Escape Routine"
9310 CALL "SYC.ES",ERR=9350,PGM(-2),TCB(8),E$,E2,V3
9320 IF V3<>127 THEN GOTO 9390
9330 PRINT @(0,E2),'CL','CURSOR'("ON"),E$,'LF'
9350 ESCAPE
9390 RETURN 
9900 RUN "SYS.AA"
9999 END
