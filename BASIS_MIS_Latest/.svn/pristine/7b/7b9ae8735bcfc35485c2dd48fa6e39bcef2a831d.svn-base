0010 REM "BMX - Rebuitd XRef Utility
0020 REM "Program  BMX.AA"
0022 REM "+-----------------------------------------------------------+"
0024 REM "| ADD+ON Software, Inc. Advantage/V Version 6.0.0 - 15May96 |"
0026 REM "|      Copyright (c) 1996 Open Systems Holdings Corp.       |"
0028 REM "|                  All Rights Reserved                      |"
0030 REM "+-----------------------------------------------------------+"
0040 REM 
0060 BEGIN 
0085 SETESC 9000
0090 SETERR 9000
0100 REM " --- Open/Lock Files"
0110 LET FILES=5
0120 DIM FILES$[FILES],OPTIONS$[FILES],CHANNELS[FILES]
0125 LET FILES$[1]="BMM-02",FILES$[2]="BMM-03",FILES$[3]="BMM-04"
0130 LET FILES$[4]="BMM-06",FILES$[5]="SYS-01"
0155 LET OPTIONS$[1]="L"
0160 CALL "SYC.DA",1,1,5,FILES$[ALL],OPTIONS$[ALL],CHANNELS[ALL],BATCH,STATUS
0170 IF STATUS>0 THEN GOTO 9900
0180 LET BMM02_DEV=CHANNELS[1],BMM03_DEV=CHANNELS[2],BMM04_DEV=CHANNELS[3]
0185 LET BMM06_DEV=CHANNELS[4],SYS01_DEV=CHANNELS[5]
0200 REM " --- IOLists
0220 BMM02A: IOLIST W0$(1),W1$(1),W2$,W[ALL]
0230 BMM03A: IOLIST W0$(1),W1$,W[ALL]
0240 BMM04A: IOLIST Z0$(1)
0250 BMM06A: IOLIST Z0$(1)
0300 SYS01T: IOLIST X$,F0$,X$,X$,F4$,F5$
0400 REM " --- Parameters
0410 FIND (SYS01_DEV,KEY="T"+FID(0),DOM=9800)IOL=SYS01T
0420 LET N0$=F0$(16,2),N1$=F4$,N2$="BM",N3$=F4$
0500 REM " --- Init Data
0800 REM " --- Options
0810 LET V4$="Do You Wish To Rebuild Bill Of Material Cross-References"
0820 CALL "SYC.YN",0,V4$,0,V$,V3
0830 IF V$<>"YES" THEN GOTO 9900
0900 REM " --- Clear Files
0910 CALL "SYC.NB","Updating",27,COLUMN
0930 CALL "SYC.FA",BMM04_DEV
0950 CALL "SYC.FA",BMM06_DEV
2000 REM " --- Rebuild BMM-04
2005 DIM W0$(25),W1$(20),W[10],Z0$(45)
2010 READ (BMM02_DEV,END=3000)IOL=BMM02A
2020 IF W1$="" THEN GOTO 2000
2030 IF W2$(4,1)<>"S" THEN GOTO 2000
2040 PRINT @(COLUMN,11),W0$(3),
2050 LET Z0$(1)=W0$(1,2)+W1$+W0$(3)
2060 WRITE (BMM04_DEV,KEY=Z0$)IOL=BMM04A
2090 GOTO 2000
3000 REM " --- Rebuild BMM-06
3005 DIM W0$(25),W1$(110),W[11],Z0$(28)
3010 READ (BMM03_DEV,END=3500)IOL=BMM03A
3020 IF LEN(W1$)<3 THEN GOTO 3000
3030 IF W1$(4,1)<>"S" THEN GOTO 3000
3040 PRINT @(COLUMN,11),W1$(1,3)," ",W0$(3),
3050 LET Z0$(1)=W0$(1,2)+W1$(1,3)+W0$(3)
3060 WRITE (BMM06_DEV,KEY=Z0$)IOL=BMM06A
3070 GOTO 3000
4000 REM " --- End Of Rebuild
4020 GOTO 9900
9000 REM " --- Standard Error Routine (15May95)"
9010 IF ERR=127 THEN GOTO 9300
9020 CALL "SYC.EA",ERR=9090,EXIT_CTRL,PGM(-2),ERR,TCB(5),E$,E1,E2
9030 IF E1=1 THEN GOTO 9100
9040 IF E1=3 THEN GOTO 9200
9080 PRINT @(0,E2),'CL','CURSOR'("ON"),E$,'LF'
9090 ESCAPE
9100 REM " --- Retry"
9190 RETRY
9200 REM " --- Return"
9210 SETERR 9000
9290 GOTO 9900
9300 REM " --- Standard Escape Routine"
9310 CALL "SYC.ES",ERR=9350,PGM(-2),TCB(8),E$,E2,V3
9320 IF V3<>127 THEN GOTO 9390
9330 PRINT @(0,E2),'CL','CURSOR'("ON"),E$,'LF'
9350 ESCAPE
9390 RETURN 
9800 REM " --- Display Parameter record error"
9810 LET LINE_ERR$=LST(PGM(TCB(5)))
9820 CALL "SYC.YA",LINE_ERR$,N2$,ERR
9900 RUN "SYS.AA"
9999 END
