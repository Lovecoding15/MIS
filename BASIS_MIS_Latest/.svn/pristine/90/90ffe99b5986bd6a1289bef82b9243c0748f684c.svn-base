0810 CALL "SYC.WC",1,0,80,0,0,8,0
0820 PRINT 'SB',@(0,3),"Customer:",@(21)," Order:",@(38),"Ship-To:",@(55),"By:",@(64),"Invoice:",@(4,4),"Bill:",@(41),"Ship:",
0890 PRINT 'SF',
4000 REM " --- Run Overlay"
4090 RUN "OPE.CB"
6000 REM " --- Get OP Terminal Information"
6005 GET_OP_TERMINAL: 
6010 FIND (ARM07_DEV,KEY=N0$+FID(0),DOM=6050)IOL=ARM07A
6040 RETURN 
6050 REM " --- Warning"
6060 DIM MESSAGE$[1]
6070 LET MESSAGE$[0]="OP Terminal Record Missing For This Terminal (<Enter>=Continue)"
6080 CALL "SYC.XA",2,MESSAGE$[ALL],0,22,-1,V$,V3
6090 EXITTO 9900
9000 REM " --- Standard Error Routine (15May95)"
9010 IF ERR=127 THEN GOTO 9300
9020 CALL "SYC.EA",ERR=9090,EXIT_CTRL,PGM(-2),ERR,TCB(5),E$,E1,E2
