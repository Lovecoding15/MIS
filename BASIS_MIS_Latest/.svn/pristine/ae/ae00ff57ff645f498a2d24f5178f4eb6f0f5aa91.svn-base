0445 CALL "SYC.VA","GL",INFO$[ALL]
0450 LET GL$=INFO$[20]
0455 IF GL$<>"Y" THEN GOTO 0500
0480 FIND (SYS01_DEV,KEY=N0$+"GL00",DOM=9800)IOL=GLS01A
0482 FOR X=0 TO 4
0484 LET G[X]=NUM(G2$(X*2+1,2),ERR=0486)
0486 NEXT X
0488 LET G[2]=FNYY_YEAR(G2$(5,2))
0500 REM " --- Initializations"
0550 LET R0$="N",R1$="",R2$="",R5$="",R6$=GL$,P=P[3],Y=P[2]
0555 LET R6$="N"; REM "WA:200
0560 CALL "SYC.PA",SYS01_DEV,P,Y,R3$,R4$,STATUS
0570 LET M0=LEN(M0$),M1=LEN(M1$),G5=LEN(G5$)
0600 REM " --- Additional File Opens"
0610 IF GL$<>"Y" THEN GOTO 0700
0630 CALL "SYC.DA",1,11,13,FILES$[ALL],OPTIONS$[ALL],CHANNELS[ALL],BATCH,STATUS
0640 IF STATUS>0 THEN GOTO 9900
0650 LET ARW07_DEV=CHANNELS[11],GLM01_DEV=CHANNELS[12],GLW04_DEV=CHANNELS[13]
0700 REM " --- Background
0710 FOR X=4 TO 14 STEP 2
0720 CALL "SYC.WC",1,0,80,0,0,X,0
0730 NEXT X
0735 IF GL$="Y" THEN CALL "SYC.WC",1,0,80,0,0,16,0
0740 PRINT 'SB',@(8,3),"Alpha Or Numeric Sort Sequence:",@(20,5),"Beginning Customer:",@(23,7),"Ending Customer:",@(16,9),"Beginning Receipt Date:",@(19,11),"Ending Receipt Date:",@(21,13),"Cash Receipt Code:",'SF',
0750 IF GL$="Y" THEN PRINT 'SB',@(13,15),"Include G/L Account Recap:",'SF',
0760 PRINT @(40,3),"Numeric",@(40,5),"First",@(40,7),"Last",@(40,9),FNB$(R3$),@(40,11),FNB$(R4$),@(40,13),"All",
0770 IF GL$="Y" THEN PRINT @(40,15),R6$,
1000 REM " --- Alpha/Numeric
1010 LET V0$="S",V1$="KRCE",V2$=R0$,V3$="AN",V0=1,V1=40,V2=3,V4$="A=Alpha Sequence   N=Customer Number Sequence",I0=0
1015 IF POS(V2$="AN")=0 THEN LET V2$="N"
1020 GOSUB 7000
1025 IF V3=4 THEN GOTO 9900
1030 LET R0$=V$
1040 IF R0$="A" THEN PRINT @(V1,V2),"Alpha",'CL', ELSE PRINT @(V1,V2),"Numeric",'CL',
1050 GOTO 3900
1200 REM " --- Beginning Customer
1210 LET V0$="M",V1$="KC",V2$=R1$,V3$=P1$,V4$="Enter A Valid Customer Number (<F1>=First/<F3>=Lookup)",V0=6,V1=40,V2=5
1215 IF R0$="A" THEN LET V0$="S",V1$="C",V3$="",V4$="Enter The Beginning Alternate Sequence (<F1>=First)",V0=10
1217 PRINT @(V1,V2),'CL',
1220 GOSUB 7000
1225 IF V3=2 THEN GOTO 3900
1240 IF V3<>3 OR R0$="A" THEN GOTO 1250
1242 CALL "SYC.LC",V$
1245 IF V$="" THEN GOTO 1200
1250 IF V3=1 THEN LET V$=""
1255 IF V$="" THEN PRINT @(V1,V2),"First",'CL',
1260 IF R0$="A" OR (R0$="N" AND V$="") THEN GOTO 1280
1265 FIND (ARM01_DEV,KEY=N0$+V$,DOM=1200)IOL=ARM01A
1270 PRINT @(V1,V2),FNF$(V$(1,P[0]),M0$),"  ",B1$(1,30),'CL'
1280 LET R1$=V$
1290 GOTO 3900
1400 REM " --- Ending Customer
1410 LET V0$="M",V1$="KC",V2$=R2$,V3$=P1$,V4$="Enter A Valid Customer Number (<F1>=Last/<F3>=Lookup)",V0=6,V1=40,V2=7
1415 IF R0$="A" THEN LET V0$="S",V1$="C",V3$="",V4$="Enter The Ending Alternate Sequence (<F1>=Last)",V0=10
1417 PRINT @(V1,V2),'CL',
1420 GOSUB 7000
1430 IF V3=2 THEN GOTO 3900
1440 IF V3<>3 OR R0$="A" THEN GOTO 1450
1442 CALL "SYC.LC",V$
1445 IF V$="" THEN GOTO 1400
1450 IF V3=1 THEN LET V$=""
1455 IF V$="" THEN PRINT @(V1,V2),"Last",'CL'
1460 IF R0$="A" OR (R0$="N" AND V$="") THEN GOTO 1480
1465 FIND (ARM01_DEV,KEY=N0$+V$,DOM=1400)IOL=ARM01A
1470 PRINT @(V1,V2),FNF$(V$(1,P[0]),M0$),"  ",B1$(1,30),'CL'
1480 LET R2$=V$
1485 IF R2$<R1$ THEN GOTO 1400
1490 GOTO 3900
1600 REM " --- Beginning Date
1620 LET V0$="D",V1$="",V2$=R3$,V0=8,V1=40,V2=9,V4$="Enter Starting Receipt Date (<F1>=First)"
1640 GOSUB 7000
1645 IF V3=2 THEN GOTO 3900
1650 IF V3=1 THEN LET V$=""
1660 IF V$="" THEN PRINT @(V1,V2),"First",'CL',
1680 LET R3$=V$
1690 GOTO 3900
1800 REM " --- Ending Date
1820 LET V0$="D",V1$="",V2$=R4$,V0=8,V1=40,V2=11,V4$="Enter Ending Receipt Date (<F1>=Last)"
1840 GOSUB 7000
1845 IF V3=2 THEN GOTO 3900
1850 IF V3=1 THEN LET V$=""
1860 IF V$="" THEN PRINT @(V1,V2),"Last",'CL',
1880 LET R4$=V$
1890 GOTO 3900
1900 REM " --- Cash Receipt Code
1920 LET V0$="S",V1$="C",V2$=R5$,V3$="",V0=3,V1=40,V2=13,V4$="Enter A Valid Cash Receipt Code (<F1>=All/<F3>=Lookup)"
1930 GOSUB 7000
1931 IF V3=2 THEN GOTO 3900
1932 IF V3<>3 THEN GOTO 1940
1934 GOSUB 6100
1936 IF V$="" THEN GOTO 1900
1940 IF V3=1 THEN LET V$=""
1950 IF V$="" THEN PRINT @(V1,V2),"All",'CL',; GOTO 1980
1955 LET V$=V$+"   ",V$=V$(1,3)
1960 FIND (ARM10_DEV,KEY=N0$+"C"+V$,DOM=1900)IOL=ARM10C
1970 PRINT @(V1+5,V2),X0$(7,20)
1980 LET R5$=V$
1990 GOTO 3900

2000 REM " --- Include G/L Recap?
2010 IF GL$<>"Y" THEN GOTO 3900
2012 rem ' ensure that this answer is always N (kew part of the conversion to docout)
2014 GOTO 3900
2020 LET V0$="Y",V1$="C",V2$=R6$,V3$="",V4$="Y=Yes   N=No",V0=1,V1=40,V2=15
2030 REM IF POS("YN"=V2$)=0 THEN LET V2$="Y"
2040 GOSUB 7000
2080 LET R6$=V$
2090 GOTO 3900

3900 REM " --- New Field
3920 IF V3<>2 THEN GOTO 3950
3930 IF I0>0 THEN LET I0=I0-1
3940 GOTO 3960
3950 LET I0=I0+1
3960 ON I0 GOTO 1000,1200,1400,1600,1800,1900,2000,4000
4000 REM " --- Correct?
4010 LET V0$="Y",V1$="CE",V2$="Y",V3$="",V4$="Is The Above Information Correct (Y/N)?",V0=1,V1=FNV(V4$),V2=22
4020 GOSUB 7000
4040 ON V3 GOTO 4050,4000,4000,4000,9900
4050 ON POS(V$="YN") GOTO 4000,4060,1000
4090 RUN "ARR.GB"
6100 REM " --- Cash receipt Lookup
6110 LET V4=1,V5=ARM10_DEV,V6=4,V7=3,V8=7,V9=20,V5$="C"
6120 CALL "SYC.LZ",V1,V2,V4,V5,V6,V7,V8,V9,V$,V5$,N0$
6190 RETURN 
7000 REM " --- Standard Input Routine (15May95)"
7010 CALL "SYC.IA",V0$,V1$,V2$,V3$,V4$,PGM(-2),V0,V1,V2,V$,V,V3,DISPLAY_LEN
7020 IF V3=999 THEN GOTO 7200
7030 IF V3=127 THEN GOTO 7100
7090 RETURN 
7100 REM " --- Escape During Input"
7110 CALL "SYC.ES",ERR=7200,PGM(-2),TCB(8),E$,E2,V3
7120 IF V3<>127 THEN GOTO 7000
7130 PRINT @(0,E2),'CL','CURSOR'("ON"),E$,'LF'
7200 REM " --- Error During Input"
7210 ESCAPE
7290 GOTO 7000
8000 REM " --- Functions
8010 DEF FNA$(Q$,Q2$)=STR(MOD((ASC(Q$)-32)*POS(" "<>Q2$(2,1)),100):"00")
8020 DEF FNB$(Q1$)=FNA$(Q1$(2),Q1$)+"/"+FNA$(Q1$(3),Q1$)+"/"+FNA$(Q1$(1),Q1$)
8080 DEF FNV(Q$)=42+INT(LEN(Q$)/2)
8145 REM " --- FNYY21_YY$ Un-Convert 21st Century 2-Char Year to 2-Char Year"
8150 DEF FNYY21_YY$(Q1$)
8155 LET Q3$=" 01234567890123456789",Q1$(1,1)=Q3$(POS(Q1$(1,1)=" 0123456789ABCDEFGHIJ"))
8160 RETURN Q1$
8165 FNEND
8170 REM " --- FNYY_YEAR Convert 2-Char Year to 21st Century Numeric Year"
8175 DEF FNYY_YEAR(Q1$)
8180 LET Q=NUM(FNYY21_YY$(Q1$)); IF Q<50 THEN LET Q=Q+100
8185 RETURN Q
8190 FNEND
8200 REM " --- FNF$ AlphaNumeric Masking Function"
8210 DEF FNF$(Q1$,Q2$)
8220 IF Q2$="" THEN LET Q2$=FILL(LEN(Q1$),"0")
8230 RETURN STR(-NUM(Q1$,ERR=ALPHA_FNF):Q2$,ERR=ALPHA_FNF)
8240 ALPHA_FNF: 
8245 LET Q=1,Q0=0
8250 WHILE LEN(Q2$(Q))
8255 IF POS(Q2$(Q,1)="-()") THEN LET Q0=Q0+1 ELSE LET Q2$(Q,1)="X"
8260 LET Q=Q+1
8265 WEND
8270 IF LEN(Q1$)>LEN(Q2$)-Q0 THEN LET Q1$=Q1$(1,LEN(Q2$)-Q0)
8280 RETURN STR(Q1$:Q2$)
8290 FNEND
9000 REM " --- Standard Error Routine (15May95)"
