0180 LET ARM01_DEV=CHANNELS[1],ARM02_DEV=CHANNELS[2],ARM04_DEV=CHANNELS[3]
0185 LET ARM10_DEV=CHANNELS[4],ART01_DEV=CHANNELS[5],ART06_DEV=CHANNELS[6]
0190 LET ART11_DEV=CHANNELS[7],ART16_DEV=CHANNELS[8],ART26_DEV=CHANNELS[9]
0195 LET SYS01_DEV=CHANNELS[10]
0200 REM " --- IOLists
0220 ARM01A: IOLIST B0$,B1$
0260 SYS01T: IOLIST X$,F0$,X$,X$,X$,F4$,F5$
0270 ARS01A: IOLIST P0$,P1$,P2$,P3$,P4$,M0$,M1$,M2$,M3$
