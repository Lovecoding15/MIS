6440 LET W0$(56,7)=P8$
6450 WRITE (APE04_DEV2,KEY=W$)IOL=APE04A2
6470 GOSUB 6800
6480 GOTO 6500
6490 GOSUB 5400
6500 IF T9$<>"" THEN RETURN 
6510 DIM X1$(M0),B1$(121),T[2]
6520 LET T2$=A0$
6530 IF A0$(5,4)="TEMP" THEN GOTO 6600
6550 FIND (APM01_DEV,KEY=N0$+A0$(5,6),DOM=6570)IOL=APM01A
