0010 REM "ARM STANDARD MESSAGE CODE MAINTENANCE LISTING
0020 REM "Program ARM.GB"
0022 REM "+-----------------------------------------------------------+"
0024 REM "| ADD+ON Software, Inc. Advantage/V Version 6.0.0 - 15May96 |"
0026 REM "|      Copyright (c) 1996 Open Systems Holdings Corp.       |"
0028 REM "|                  All Rights Reserved                      |"
0030 REM "+-----------------------------------------------------------+"
0040 REM 
0085 SETESC 9000
0090 SETERR 9000
0100 REM " --- Open/Lock Files"
0170 CALL "SYC.GA",7,1,"","",STATUS
0175 IF STATUS THEN GOTO 9900
0200 REM " --- IOLists"
0210 ARM10G1: IOLIST A0$,A1$
0220 ARM10G2: IOLIST B0$,B1$
0500 REM " --- Init Data"
0510 DIM HEADINGS$[2]
0550 LET H0=80,H=0,H1$=N4$+" Listing",L9=50,L=L9+1,T0=0
0560 LET HEADINGS$[0]=N1$,HEADINGS$[1]=H1$,WHEN$=F0$(7,3),CLOCK$=""
0700 REM " --- Background"
1000 REM " --- Initial Read"
1020 READ (ARM10_DEV,KEY=N0$+"G",DOM=1030)
1100 REM " --- Main Read"
1120 READ (ARM10_DEV,END=4000)IOL=ARM10G1
1130 READ (ARM10_DEV,END=4000)IOL=ARM10G2
1200 REM " --- Breaks"
1220 IF A0$(1,3)<>N0$+"G" THEN GOTO 4000
2000 REM " --- Print"
2020 IF L+11>L9 THEN GOSUB 5000
2040 PRINT (7)@(0),A0$(4,2),@(5),A0$(7,20),
2200 LET T0=T0+1
2400 FOR X=0 TO 4
2405 PRINT (7)@(32),X+1,
2410 PRINT (7)@(36),A1$(X*40+1,40)
2420 LET L=L+1
2490 NEXT X
2500 FOR X=0 TO 4
2505 PRINT (7)@(32),X+6,
2510 PRINT (7)@(36),B1$(X*40+1,40)
2520 LET L=L+1
2590 NEXT X
2600 PRINT (7)""
2610 LET L=L+1
2900 GOTO 1100
4000 REM " --- Options"
4020 PRINT (7)'LF',@(10),"Total Records:",T0
4100 GOTO 9900
5000 REM " --- Heading"
5010 LET L=HEADINGS+1
5020 CALL "SYC.HA",7,HEADINGS$[ALL],2,H,H0,WHEN$,CLOCK$,STATUS
5030 IF STATUS>0 THEN EXITTO 9900
5050 PRINT (7)"Standard Message"
5060 PRINT (7)"Code",@(8),"Description",@(33),"Detail Lines"
5070 PRINT (7)""
5080 LET L=L+3
5090 RETURN 
9000 REM " --- Standard Error Routine (15May95)"
9010 IF ERR=127 THEN GOTO 9300
9020 CALL "SYC.EA",ERR=9090,EXIT_CTRL,PGM(-2),ERR,TCB(5),E$,E1,E2
9030 IF E1=1 THEN GOTO 9100
9040 IF E1=3 THEN GOTO 9200
9080 PRINT @(0,E2),'CL','CURSOR'("ON"),E$,'LF'
9090 ESCAPE
9100 REM " --- Retry"
9190 RETRY
9200 REM " --- Return"
9210 SETERR 9000
9290 GOTO 9900
9300 REM " --- Standard Escape Routine"
9310 CALL "SYC.ES",ERR=9350,PGM(-2),TCB(8),E$,E2,V3
9320 IF V3<>127 THEN GOTO 9390
9330 PRINT @(0,E2),'CL','CURSOR'("ON"),E$,'LF'
9350 ESCAPE
9390 RETURN 
9900 RUN "SYS.AA"
9999 END
