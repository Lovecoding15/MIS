0010 REM "BMR - Operations Where Used Listing
0020 REM "Program BMR.DA"
0022 REM "+-----------------------------------------------------------+"
0024 REM "| ADD+ON Software, Inc. Advantage/V Version 6.0.0 - 15May96 |"
0026 REM "|      Copyright (c) 1996 Open Systems Holdings Corp.       |"
0028 REM "|                  All Rights Reserved                      |"
0030 REM "+-----------------------------------------------------------+"
0040 REM 
0050 BEGIN 
0085 SETESC 9000
0090 SETERR 9000
0100 REM " --- Open/Lock Files
0110 LET FILES=6
0120 DIM FILES$[FILES],OPTIONS$[FILES],CHANNELS[FILES]
0125 LET FILES$[1]="BMM-01",FILES$[2]="BMM-03",FILES$[3]="BMM-06"
0130 LET FILES$[4]="BMM-08",FILES$[5]="IVM-01",FILES$[6]="SYS-01"
0160 CALL "SYC.DA",1,1,6,FILES$[ALL],OPTIONS$[ALL],CHANNELS[ALL],BATCH,STATUS
0170 IF STATUS<>0 THEN GOTO 9900
0175 LET BMM01_DEV=CHANNELS[1],BMM03_DEV=CHANNELS[2],BMM06_DEV=CHANNELS[3]
0180 LET BMM08_DEV=CHANNELS[4],IVM01_DEV=CHANNELS[5],SYS01_DEV=CHANNELS[6]
0200 REM " --- IOLists
0230 BMM08A: IOLIST X0$
0300 SYS01T: IOLIST X$,F0$,X$,X$,X$,F4$,F5$
0310 BMS01A: IOLIST P0$,P1$,P2$,P3$,P4,X5,P6
0320 IVS01A: IOLIST X$,P5$,P6$,X$,X$,X$,P7$,P8$,P9$
0400 REM " --- Parameters
0410 FIND (SYS01_DEV,KEY="T"+FID(0),DOM=9800)IOL=SYS01T
0420 LET N0$=F0$(16,2),N1$=F4$,N2$="BM",N3$=F5$
0430 FIND (SYS01_DEV,KEY=N0$+N2$+"00",DOM=9800)IOL=BMS01A
0440 FIND (SYS01_DEV,KEY=N0$+"IV"+"00",DOM=9800)IOL=IVS01A
0450 DIM P[2],DESC[3]
0470 FOR X=1 TO 3
0475 LET DESC[X]=NUM(P6$((X-1)*2+9,2))
0480 NEXT X
0490 LET P[0]=NUM(P6$(1,2))
0495 PRECISION NUM(P6$(5,1))
0500 REM " --- Init Data
0520 LET L9=59,L=L9+1
0530 DIM W0$(2),Z0$(80)
0540 DIM A[11],B[11]
0580 LET M0=P[0],P1=LEN(P1$)
0590 IF M0<6 THEN LET M0=6
0700 REM " --- Background
0710 FOR X=4 TO 6 STEP 2
0720 CALL "SYC.WC",1,0,80,0,0,X,0
0730 NEXT X
0740 PRINT 'SB',@(20,3),"Starting Operation:",@(22,5),"Ending Operation:",'SF',
1000 REM " --- Starting Operation
1020 LET V0$="S",V1$="CEK",V2$=OPFROM$,V3$="",V0=3,V1=40,V2=3,I0=0
1030 LET V4$="<F1>=First, <F3>=Lookup"
1035 PRINT @(V1,V2),'CL',
1040 GOSUB 7000
1050 IF V3=4 THEN GOTO 9900
1055 IF V3=3 THEN GOSUB 6000
1060 IF V3=1 OR V$="" THEN PRINT @(V1,V2),'CL',"First",; LET OPFROM$=""; GOTO 1090
1065 DIM X$(3); LET X$(1)=V$
1070 FIND (BMM08_DEV,KEY=N0$+X$,DOM=1000)IOL=BMM08A
1080 LET OPFROM$=X$
1085 PRINT @(V1,V2),OPFROM$," ",X0$(6,20),'CL',
1090 GOTO 3900
1200 REM " --- Ending Operation
1220 LET V0$="S",V1$="CEK",V2$=OPTHRU$,V3$="",V0=3,V1=40,V2=5
1230 LET V4$="<F1>=Last, <F3>=Lookup"
1240 GOSUB 7000
1245 IF V3=4 THEN GOTO 9900
1250 IF V3=2 THEN GOTO 1000
1255 IF V3=3 THEN GOSUB 6000
1260 IF V3=1 OR V$="" THEN PRINT @(V1,V2),'CL',"Last",; LET OPTHRU$=""; GOTO 1290
1265 DIM X$(3); LET X$(1)=V$
1270 FIND (BMM08_DEV,KEY=N0$+X$,DOM=1200)IOL=BMM08A
1275 IF X$<OPFROM$ THEN GOTO 1200
1280 LET OPTHRU$=X$
1285 PRINT @(V1,V2),OPTHRU$," ",X0$(6,20),'CL',
1290 GOTO 3900
3900 REM " --- Next Field
3905 IF V3=4 THEN GOTO 4000
3910 IF V3<>2 THEN GOTO 3940
3920 IF I0>0 THEN LET I0=I0-1
3930 GOTO 3950
3940 LET I0=I0+1
3960 ON I0 GOTO 1000,1200,4000
4000 REM " --- Correct?
4010 LET V0$="Y",V1$="C",V2$="Y",V3$="",V4$="Is The Above Information Correct (Y/N)? ",V0=1,V1=FNV(V4$),V2=22
4020 GOSUB 7000
4040 IF V3=4 THEN GOTO 9900
4050 ON POS(V$="YN") GOTO 4000,4100,1000
4120 RUN "BMR.DB"
6000 REM " --- Lookup
6010 LET CHANNEL=BMM08_DEV,RECORD$="",NUMBER=1,TITLE$="Operation Codes"
6020 DIM DESCRIPTION$[NUMBER],FIELD[NUMBER],POSITION[NUMBER],LENGTH[NUMBER]
6025 LET DESCRIPTION$[0]="Code",DESCRIPTION$[1]="Description"
6030 LET FIELD[0]=1,POSITION[0]=3,LENGTH[0]=3
6040 LET FIELD[1]=1,POSITION[1]=6,LENGTH[1]=20
6050 LET ROW=V2+1,COLUMN=79-LENGTH[0]-LENGTH[1]-2-NUMBER*4
6060 CALL "SYC.LK",CHANNEL,RECORD$,NUMBER,TITLE$,DESCRIPTION$[ALL],FIELD[ALL],POSITION[ALL],LENGTH[ALL],COLUMN,ROW,V$
6090 RETURN 
7000 REM " --- Standard Input Routine (15May95)"
7010 CALL "SYC.IA",V0$,V1$,V2$,V3$,V4$,PGM(-2),V0,V1,V2,V$,V,V3,DISPLAY_LEN
7020 IF V3=999 THEN GOTO 7200
7030 IF V3=127 THEN GOTO 7100
7090 RETURN 
7100 REM " --- Escape During Input"
7110 CALL "SYC.ES",ERR=7200,PGM(-2),TCB(8),E$,E2,V3
7120 IF V3<>127 THEN GOTO 7000
7130 PRINT @(0,E2),'CL','CURSOR'("ON"),E$,'LF'
7200 REM " --- Error During Input"
7210 ESCAPE
7290 GOTO 7000
8095 DEF FNV(Q$)=42+INT(LEN(Q$)/2)
9000 REM " --- Standard Error Routine (15May95)"
9010 IF ERR=127 THEN GOTO 9300
9020 CALL "SYC.EA",ERR=9090,EXIT_CTRL,PGM(-2),ERR,TCB(5),E$,E1,E2
9030 IF E1=1 THEN GOTO 9100
9040 IF E1=3 THEN GOTO 9200
9080 PRINT @(0,E2),'CL','CURSOR'("ON"),E$,'LF'
9090 ESCAPE
9100 REM " --- Retry"
9190 RETRY
9200 REM " --- Return"
9210 SETERR 9000
9290 GOTO 9900
9300 REM " --- Standard Escape Routine"
9310 CALL "SYC.ES",ERR=9350,PGM(-2),TCB(8),E$,E2,V3
9320 IF V3<>127 THEN GOTO 9390
9330 PRINT @(0,E2),'CL','CURSOR'("ON"),E$,'LF'
9350 ESCAPE
9390 RETURN 
9800 REM " --- Display Parameter record error"
9810 LET LINE_ERR$=LST(PGM(TCB(5)))
9820 CALL "SYC.YA",LINE_ERR$,N2$,ERR
9900 RUN "SYS.AA"
9999 END
