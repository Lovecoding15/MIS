0030 REM "+-----------------------------------------------------------+"
0040 REM 
0045 REM "D_STATUS  : SpeedSearch Status (0=No Error)"
0050 REM "OPTION$[n]: Standard SpeedSearch Options Array"
0055 REM 
0080 SETERR 9000
0085 SETESC 9000
0090 ENTER D_STATUS,OPTION$[ALL]
0400 REM " --- Parameters"
0410 DIM SPEED$(128)
0420 LET SPEED$(1)=STBL("!SPEEDSEARCH",ERR=9900),MAXOPT=NUM(SPEED$(57,2))
0500 REM " --- Initializations"
0510 DIM A0$(6),OPTLIST$[2,MAXOPT,6],PARAM$[2,MAXOPT,3]
0550 LET D_STATUS=0,A0$(1)=OPTION$[3],MAXROW=MAXOPT,WIDTH=0,WIN_Y=3
0560 LET Y$=A0$(1,4),M$=A0$(5,2),PGM$=PGM(-2),OPTIONS=0
0600 REM " --- Load month names"
0610 CALL "SYC.QC",SYM01_DEV,SYM11_DEV,PGM$,SECURITY$,OPTIONS,OPTLIST$[ALL],TITLE$,MAXROW,PREVMENU$,NAME$
0620 IF OPTIONS<1 THEN GOTO 9900
0630 FOR X=1 TO OPTIONS
0640 LET WIDTH=MAX(WIDTH,LEN(OPTLIST$[1,X,1]))
0650 NEXT X
0660 LET WIDTH=WIDTH+4,HEIGHT=OPTIONS+4,WIN_X=59-WIDTH,TITLE$="Months"
0700 REM " --- Background"
0710 CALL "SYC.WA",0,WIDTH,HEIGHT,WIN_X,WIN_Y,TITLE$,NAME$
0720 CALL "SYC.WC",1,0,WIDTH-2,0,0,HEIGHT-4,1
0730 PRINT @(1,HEIGHT-3),'SB',"Year",'SF',
1000 REM " --- Month"
1010 GOSUB 5500
1020 IF FKEY=4 THEN GOTO 9900
1030 IF OPTION$="END" THEN GOTO 9900
1040 IF OPTION$="PRIOR" THEN GOTO 9900
1050 IF METHOD=0 THEN GOTO 9900
1090 LET M$=OPTION$
2000 REM " --- Year"
2010 LET V0$="Z",V1$="",V2$=Y$,V3$="",V4$="",V0=4,V1=6,V2=HEIGHT-3
2020 GOSUB 7000
2030 IF V3=6 THEN LET OPTION$[1]="EXIT"; GOTO 9900
2040 IF V3=5 THEN LET OPTION$[1]="STARTOVER"; GOTO 9900
2050 IF V3=4 THEN GOTO 1000
2060 IF V<0 THEN GOTO 2000
2070 IF V<100 THEN LET V=1900+N
2090 LET Y$=STR(V:"0000")
4000 REM " --- All done"
4010 LET A0$(1,4)=Y$,A0$(5,2)=M$
4020 LET OPTION$[3]=A0$
4090 GOTO 9900
5500 REM " --- Month selection"
5510 DIM MORE$[1,MAXOPT,1]
5540 LET MAX_ROW=HEIGHT-2,PAGE=1,XMODE=0,OPTION$=M$
5600 REM " --- Lightbar selection"
5610 CALL "SYC.SA",XMODE,OPTLIST$[ALL],MORE$[ALL],OPTION$,PAGE,MAX_ROW,NAME$,HEIGHT,WIDTH,FKEY
5615 IF FKEY=4 THEN GOTO 5690
5620 IF OPTION$="END" THEN GOTO 5690
5630 IF OPTION$="PRIOR" THEN GOTO 5690
5635 LET METHOD$="",METHOD=0
5640 FOR X=1 TO OPTIONS
5650 IF OPTION$<>OPTLIST$[1,X,2] THEN GOTO 5670
5660 LET METHOD=X
5670 NEXT X
5690 RETURN 
7000 REM " --- Standard Input Routine (15May95)"
7010 CALL "SYC.IA",V0$,V1$,V2$,V3$,V4$,PGM(-2),V0,V1,V2,V$,V,V3,DISPLAY_LEN
7020 IF V3=999 THEN GOTO 7200
7030 IF V3=127 THEN GOTO 7100
7090 RETURN 
7100 REM " --- Escape During Input"
7110 CALL "SYC.ES",ERR=7200,PGM(-2),TCB(8),E$,E2,V3
7120 IF V3<>127 THEN GOTO 7000
7130 PRINT @(0,E2),'CL','CURSOR'("ON"),E$,'LF'
7200 REM " --- Error During Input"
7210 ESCAPE
7290 GOTO 7000
9000 REM " --- Standard Error Routine (15May95)"
9010 IF ERR=127 THEN GOTO 9300
9020 CALL "SYC.EA",ERR=9090,EXIT_CTRL,PGM(-2),ERR,TCB(5),E$,E1,E2
9030 IF E1=1 THEN GOTO 9100
9040 IF E1=3 THEN GOTO 9200
9080 PRINT @(0,E2),'CL','CURSOR'("ON"),E$,'LF'
9090 ESCAPE
9100 REM " --- Retry"
9190 RETRY
9200 REM " --- Return"
9290 GOTO 9900
9300 REM " --- Standard Escape Routine"
9310 CALL "SYC.ES",ERR=9350,PGM(-2),TCB(8),E$,E2,V3
9320 IF V3<>127 THEN GOTO 9390
9330 PRINT @(0,E2),'CL','CURSOR'("ON"),E$,'LF'
9350 ESCAPE
9390 RETURN 
9900 REM " --- Return to caller"
9910 IF NAME$<>"" THEN CALL "SYC.WD",NAME$
9950 EXIT 
9999 END
