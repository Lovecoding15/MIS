1140 GOSUB 7000
1150 ON V3 GOTO 1160,1100,3900,1100,3900
1160 LET OPTIONS$(X,1)=V$
1170 GOTO 3900
3900 REM " --- Next Field
3905 IF V3=4 THEN GOTO 3990
3910 IF V3<>2 THEN GOTO 3940
3920 IF I0>0 THEN LET I0=I0-1 ELSE LET V3=0
3930 GOTO 3960
3940 LET I0=I0+1
3960 ON I0 GOTO 1100,1100,1100,1100,1100,1100,1100,1100,1100,1100,1100,3990
3990 LET I0=0
4000 REM " --- Correct?
4010 LET V4$="Is The Above Information Correct (Y/N)?",I0=0
4020 LET V0$="S",V1$="CER",V2$="Y",V3$="",V0=6,V2=22,V1=FNV(V4$)
4030 GOSUB 7000
4040 ON V3 GOTO 4060,4000,4000,4000,9900
4060 IF V$="DELETE" THEN GOTO 4290
4090 ON POS(V$="YN") GOTO 4000,4100,1100
4100 REM " --- Run Overlay
4120 RUN "SAX.BB"
4190 GOTO 9900
5000 REM " --- Display
5010 FOR X=1 TO 11
5020 LET X$=""
5050 PRINT @(37,X+5),OPTPARAMS$(X,1),'CL',
5080 NEXT X
5090 RETURN 
7000 REM " --- Standard Input Routine (15May95)"
