1800 REM " --- Salesperson "
1805 DIM DESCRIPTION$[NUMBER],FIELD[NUMBER],POSITION[NUMBER],LENGTH[NUMBER]
1807 LET DESCRIPTION$[0]="Code",FIELD[0]=1,POSITION[0]=4,LENGTH[0]=3
1810 LET DESCRIPTION$[1]="Name",FIELD[1]=1,POSITION[1]=7,LENGTH[1]=20
1815 LET COLUMN=79-LENGTH[0]-LENGTH[1]-2-NUMBER*4,RECORD$="F",TITLE$="Salesperson Lookup"
1820 LET V0$="S",V1$="C",V2$=S4$,V3$="",V4$="Enter A Valid Salesperson Code (<F1>=All/<F3>=Lookup)",V0=3,V1=40,V2=11
1830 GOSUB 7000
1831 IF V3<>3 THEN GOTO 1840
1838 CALL "SYC.LK",ARM10_DEV,RECORD$,NUMBER,TITLE$,DESCRIPTION$[ALL],FIELD[ALL],POSITION[ALL],LENGTH[ALL],COLUMN,ROW,V$
1840 IF V3=4 OR V3=2 THEN GOTO 1890
1845 IF V3=1 THEN LET V$=""
1850 IF V$="" THEN PRINT @(V1,V2),"All",'CL'; GOTO 1880
1855 LET V$=V$+"   ",V$=V$(1,3)
1860 FIND (ARM10_DEV,KEY=N0$+"F"+V$,DOM=1800)IOL=ARM10F
1870 PRINT @(V1,V2),X2$(POSITION[0],LENGTH[0]),@(V1+4,V2),X2$(7,20)
1875 LET H8$=V$
1880 LET S4$=V$
1890 GOTO 3900
2000 REM " --- Selected Item "
2020 LET V0$="S",V1$="C",V2$=S5$,V3$="",V4$="Enter An Item To Be Searched  (<F1>=Include All/<F3>=Lookup)",V0=I[0],V1=40,V2=13
2030 PRINT @(V1,V2),'CL',
2040 GOSUB 7000
2042 IF V3=3 THEN CALL "SYC.LI",V$; IF V3=4 THEN GOTO 2000 ELSE PRINT @(V1,V2),V$,
