0800 REM " --- Print Options "
1000 REM " --- Beginning Customer "
1010 LET V0$="M",V1$="CE",V3$=M0$,V4$="Enter A Valid Customer Number (<F1>=First/<F3>=Lookup)",V0=6,V1=40,V2=3,I0=0
1015 IF S0$<>"" THEN LET V2$=S0$(1,P[0])
1020 GOSUB 7000
1030 IF V3=4 THEN GOTO 9900
1040 IF V3=3 THEN CALL "SYC.LC",V$; IF V3=4 THEN GOTO 1000
1050 IF V3=1 OR V$="" THEN PRINT @(V1,V2),"First",'CL',; LET S0$=""; GOTO 1090
1060 FIND (ARM01_DEV,KEY=N0$+V$,DOM=1000)IOL=ARM01A
1070 PRINT @(V1,V2),FNF$(V$(1,P[0]),M0$),@(V1+M0+1,V2),X0$(1,30),
1075 LET H4$=FNF$(V$(1,P[0]),M0$)
1080 LET S0$=V$
1090 GOTO 3900
1200 REM " --- Ending Customer "
1210 LET V0$="M",V1$="CE",V3$=M0$,V4$="Enter A Valid Customer Number (<F1>=Last/<F3>=Lookup)",V0=6,V1=40,V2=5
1215 IF S1$<>"" THEN LET V2$=S1$(1,P[0])
1220 GOSUB 7000
1225 IF V3=2 OR V3=4 THEN GOTO 1000
1230 IF V3=3 THEN CALL "SYC.LC",V$; IF V3=4 THEN GOTO 1200
1240 IF V3=1 OR V$="" THEN PRINT @(V1,V2),"Last",'CL',; LET S1$=""; GOTO 1290
1255 IF V$<S0$ THEN GOTO 1200
1260 FIND (ARM01_DEV,KEY=N0$+V$,DOM=1200)IOL=ARM01A
1270 PRINT @(V1,V2),FNF$(V$(1,P[0]),M0$),@(V1+M0+1,V2),X0$(1,30),
1275 LET H5$=FNF$(V$(1,P[0]),M0$)
1280 LET S1$=V$
1290 GOTO 3900
1400 REM " --- Begining Invoice Date "
1410 LET V0$="D",V1$="C",V2$=S2$,V3$="",V4$="<F1>=First",V0=7,V1=40,V2=7
1430 GOSUB 7000
1440 IF V3=1 OR V$="" THEN PRINT @(V1,V2),'CL',"First"; LET S2$=""; GOTO 1490
1460 LET S2$=V$,H6$=FNB$(V$)
1490 GOTO 3900
1600 REM " --- Ending Invoice Date "
1610 LET V0$="D",V1$="C",V2$=S3$,V3$="",V4$="<F1>=Last",V0=7,V1=40,V2=9
1630 GOSUB 7000
1640 IF V3=1 OR V$="" THEN PRINT @(V1,V2),'CL',"Last"; LET S3$=""; GOTO 1690
1650 IF V$<S2$ THEN GOTO 1600
