3150 IF ROW>20 THEN LET ROW=6,COLUMN=40
3200 REM 
3210 DIM X0$(2),X1$(64),X[2]
3220 LET X0$(1)=MODULES$[X,1],X1$(1)=MODULES$[X,2],X1$(36,1)="Y"
