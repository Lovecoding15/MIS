1710 CLOSE (SOURCE_DEV,ERR=1720)
1720 CLOSE (TARGET_DEV,ERR=1730)
1790 GOTO 1400
1800 REM " --- Done"
1810 IF FOUND=0 THEN GOTO 2000
1820 GOSUB 6900
1840 IF PRM10$<>"Y" THEN GOTO 1900
