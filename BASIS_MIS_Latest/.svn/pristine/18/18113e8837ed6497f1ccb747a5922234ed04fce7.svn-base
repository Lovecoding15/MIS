0010 REM "ARR - Aging Report"
0020 REM "Program ARR.4B"
0022 REM "+-----------------------------------------------------------+"
0024 REM "| ADD+ON Software, Inc. Advantage/V Version 6.0.0 - 15May96 |"
0026 REM "|      Copyright (c) 1996 Open Systems Holdings Corp.       |"
0028 REM "|                  All Rights Reserved                      |"
0030 REM "+-----------------------------------------------------------+"
0040 REM 
0085 SETESC 9000
0090 SETERR 9000
1000 REM " --- Period Heading
1010 IF P8$="D" THEN GOTO 2000
1020 LET P[2]=FNH(P9$(1,1))
1040 FOR X=1 TO G[0]
1050 IF P9$(2)>G3$(X*2-1,2) THEN GOTO 1100
1060 IF X=1 THEN IF P9$(2)>G3$(G[0]*2-1,2) THEN EXITTO 1200
1070 IF X>1 THEN IF P9$(2)>G3$((X-1)*2-1,2) THEN EXITTO 1200
1080 IF X=1 THEN IF G3$(X*2-1,2)<G3$(G[0]*2-1,2) THEN EXITTO 1200
1090 IF X>1 THEN IF G3$(X*2-1,2)<G3$((X-1)*2-1,2) THEN EXITTO 1200
1100 NEXT X
1200 REM " --- Get Current Period
1220 LET V=X,V9=P[2]
1240 CALL "SYC.PA",SYS01_DEV,V,V9,V0$,V9$,STATUS
1260 LET H4$=V0$,H5$=V9$
1300 REM " --- Get Previous Period
1310 FOR Y=1 TO 5
1320 LET V=X-Y,V9=P[2]
1330 IF V<1 THEN LET V=G[0]+V,V9=P[2]-1
1340 CALL "SYC.PA",SYS01_DEV,V,V9,V0$,V9$,STATUS
1370 LET H4$=H4$+V0$,H5$=H5$+V9$
1380 NEXT Y
1390 GOTO 4000
1400 REM " --- Next Period
1420 LET V=X+1
1440 CALL "SYC.PA",SYS01_DEV,V,V9,V0$,V9$,STATUS
1450 IF V0$<H4$(1,3) THEN LET V0$(1,1)=FNI$(FNH(H4$(1,1))+1)
1460 IF V9$<H5$(1,3) THEN LET V9$(1,1)=FNI$(FNH(H5$(1,1))+1)
1470 LET H4$=V0$+H4$,H5$=V9$+H5$
1490 GOTO 4000
2000 REM " --- Days Heading
2010 LET H4$="",H5$="",P8=30
2020 FOR X=-5 TO 0
2040 LET V0$=P9$,V1$="",V=P8*X
2060 CALL "SYC.CA",V0$,V1$,V
2070 IF V1$="N" THEN LET V1$=P9$
2080 LET H4$=V1$+H4$
2090 LET V0$=P9$,V1$="",V=P8*(X+1)-1
2100 CALL "SYC.CA",V0$,V1$,V
2110 IF V1$="N" THEN LET V1$=P9$
2120 LET H5$=V1$+H5$
2190 NEXT X
4000 REM " --- Overlay
4010 GOTO 4100
4012 PRINT @(0,11),FNB$(P9$)
4020 FOR X=1 TO LEN(H4$) STEP 3
4040 PRINT FNB$(H4$(X,3))," ",FNB$(H5$(X,3))
4050 NEXT X
4100 RUN "ARR.4C"
8000 REM " --- Functions
8010 DEF FNA$(Q$,Q2$)=STR(MOD((ASC(Q$)-32)*POS(" "<>Q2$(2,1)),100):"00")
8020 DEF FNB$(Q1$)=FNA$(Q1$(2),Q1$)+"/"+FNA$(Q1$(3),Q1$)+"/"+FNA$(Q1$(1),Q1$)
8080 DEF FNH(Q$)=ASC(Q$)-32
8090 DEF FNI$(Q)=CHR(Q+32)
9000 REM " --- Standard Error Routine (15May95)"
9010 IF ERR=127 THEN GOTO 9300
9020 CALL "SYC.EA",ERR=9090,EXIT_CTRL,PGM(-2),ERR,TCB(5),E$,E1,E2
9030 IF E1=1 THEN GOTO 9100
9040 IF E1=3 THEN GOTO 9200
9080 PRINT @(0,E2),'CL','CURSOR'("ON"),E$,'LF'
9090 ESCAPE
9100 REM " --- Retry"
9190 RETRY
9200 REM " --- Return"
9210 SETERR 9000
9290 GOTO 9900
9300 REM " --- Standard Escape Routine"
9310 CALL "SYC.ES",ERR=9350,PGM(-2),TCB(8),E$,E2,V3
9320 IF V3<>127 THEN GOTO 9390
9330 PRINT @(0,E2),'CL','CURSOR'("ON"),E$,'LF'
9350 ESCAPE
9390 RETURN 
9900 RUN "SYS.AA"
9999 END
