0010 REM "IVC - Inventory Activity Type Column Entry"
0020 REM "Program IVC.RA"
0022 REM "+-----------------------------------------------------------+"
0024 REM "| ADD+ON Software, Inc. Advantage/V Version 6.0.0 - 15May96 |"
0026 REM "|      Copyright (c) 1996 Open Systems Holdings Corp.       |"
0028 REM "|                  All Rights Reserved                      |"
0030 REM "+-----------------------------------------------------------+"
0040 REM 
0055 REM "WIN_Y    : Window Row (Input)"
0060 REM "TITLE$   : Window Title (Input)"
0070 REM "COLUMNS$ : Activity Types (Input/Returned)"
0075 REM 
0080 SETERR 9000
0085 SETESC 9000
0090 ENTER WIN_Y,WIN_TITLE$,COLUMNS$
0500 REM " --- Initializations"
0510 DIM D0$(4),J1$(18)
0540 LET WIDTH=67,HEIGHT=12,WIN_X=6
0550 IF WIN_Y=0 THEN LET WIN_Y=8
0560 IF WIN_Y+HEIGHT>23 THEN LET WIN_Y=23-HEIGHT
0570 LET COLUMNS$=COLUMNS$+J1$,COLUMNS$=COLUMNS$(1,18)
0600 REM " --- Window heading"
0610 DIM HEADING$(WIDTH-2)
0650 LET HEADING$(2)="Column   Type   Description"
0660 LET HEADING$(52)="Column Title"
0700 REM " --- Background"
0710 CALL "SYC.WA",0,WIDTH,HEIGHT,WIN_X,WIN_Y,WIN_TITLE$,NAME$
0750 PRINT 'SB','BR',HEADING$,'ER','SF',
0770 FOR X=1 TO 6
0780 PRINT 'SB',@(1,X+1),X:"0",'SF',
0790 NEXT X
1300 REM " --- Display"
1310 GOSUB 5000
1390 GOTO 4000
2000 REM " --- Activity Type"
2010 LET P=I0+1,V0=3,V1=10,V2=P+1,P=(P-1)*3+1
2015 IF I0=0 THEN LET V3=0
2020 LET V0$="S",V1$="C^",V2$=COLUMNS$(P,3),V3$=""
2040 LET V4$="Enter The Activity To Be Displayed (<F1>=None/<F3>=Lookup)"
2050 GOSUB 7000
2070 ON V3 GOTO 2150,2080,3900,2100,3900
2080 LET COLUMNS$(P,3)=""
2085 PRINT @(V1,V2),'CL',
2090 GOTO 3900
2100 REM " --- Lookup"
2110 CALL "IVC.LC",V$
2150 LET V$=V$+"   ",V$=V$(1,3)
2155 IF FNP$(V$)="" THEN GOTO 2000
2160 CALL "IVC.FA",V$,V3$,V4$,V
2165 IF V<>0 THEN GOTO 2000
2170 LET COLUMNS$(P,3)=V$
2180 PRINT @(V1,V2),V$,@(17),V3$,@(52),V4$,
2190 GOTO 3900
3900 REM " --- Next field"
3905 IF V3=4 THEN GOTO 3990
3910 IF V3<>2 THEN GOTO 3940
3920 IF I0>0 THEN LET I0=I0-1
3930 GOTO 3950
3940 LET I0=I0+1
3960 ON I0 GOTO 2000,2000,2000,2000,2000,2000,3990
3990 LET I0=0
3995 GOSUB 5000
4000 REM " --- Correct?"
4010 CALL "SYC.YN",1,"Is The Above Information Correct",2,V$,V3
4020 ON V3 GOTO 4030,4000,4000,4000,9900
4030 ON POS(V$="YN") GOTO 4000,4040,2000
4090 GOTO 9900
5000 REM " --- Display"
5010 PRINT 'CF',
5020 FOR X=1 TO 6
5030 LET V$=COLUMNS$((X-1)*3+1,3)
5040 CALL "IVC.FA",V$,V3$,V4$,V
5050 IF V=0 THEN PRINT @(10,X+1),V$,@(17),V3$,@(52),V4$,
5080 NEXT X
5090 RETURN 
7000 REM " --- Standard Input Routine (15May95)"
7010 CALL "SYC.IA",V0$,V1$,V2$,V3$,V4$,PGM(-2),V0,V1,V2,V$,V,V3,DISPLAY_LEN
7020 IF V3=999 THEN GOTO 7200
7030 IF V3=127 THEN GOTO 7100
7090 RETURN 
7100 REM " --- Escape During Input"
7110 CALL "SYC.ES",ERR=7200,PGM(-2),TCB(8),E$,E2,V3
7120 IF V3<>127 THEN GOTO 7000
7130 PRINT @(0,E2),'CL','CURSOR'("ON"),E$,'LF'
7200 REM " --- Error During Input"
7210 ESCAPE
7290 GOTO 7000
8000 REM " --- Function Definitions"
8080 DEF FNP$(Q$)=CVS(Q$,2)
9000 REM " --- Standard Error Routine (15May95)"
9010 IF ERR=127 THEN GOTO 9300
9020 CALL "SYC.EA",ERR=9090,EXIT_CTRL,PGM(-2),ERR,TCB(5),E$,E1,E2
9030 IF E1=1 THEN GOTO 9100
9040 IF E1=3 THEN GOTO 9200
9080 PRINT @(0,E2),'CL','CURSOR'("ON"),E$,'LF'
9090 ESCAPE
9100 REM " --- Retry"
9190 RETRY
9200 REM " --- Return"
9290 GOTO 9900
9300 REM " --- Standard Escape Routine"
9310 CALL "SYC.ES",ERR=9350,PGM(-2),TCB(8),E$,E2,V3
9320 IF V3<>127 THEN GOTO 9390
9330 PRINT @(0,E2),'CL','CURSOR'("ON"),E$,'LF'
9350 ESCAPE
9390 RETURN 
9900 REM " --- Return to calling program"
9910 CALL "SYC.WD",NAME$
9950 EXIT 
9999 END
