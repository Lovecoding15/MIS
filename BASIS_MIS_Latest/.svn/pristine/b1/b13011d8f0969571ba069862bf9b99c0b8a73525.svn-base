0100 REM "OPEN/LOCK FILES"
0200 REM "IOLISTS"
0210 APE03A: IOLIST A0$(1),A[0],A[1],A[2],A[3]
0220 APM10B: IOLIST X0$
0230 APM10D: IOLIST X0$
0240 APM10C: IOLIST X0$,X[0],X[1],X[2]
0400 REM "PARAMETERS"
1000 REM "KEY"
1900 LET I0=0
1940 CALL "SYC.WC",1,0,80,0,0,12,0
1950 PRINT 'CF',
1960 PRINT @(15,6),Q9$
1970 PRINT @(15,7),A0$(11,10)
2000 REM "DIST CODE"
2010 LET V3=0,I0=0
2020 IF P3$(2,1)<>"Y" THEN GOTO 2060
2030 LET V0$="S",V1$="KCR",V2$=A0$(23,2),V0=2,V1=15,V2=8,V4$="Enter A Valid Distribution Code, <F3>=Code Lookup"
2040 GOSUB 7000
2042 IF V3<>3 THEN GOTO 2050
2044 LET V4=1,V5=APM10_DEV,V6=4,V7=2,V8=6,V9=20,V5$="B"
2046 CALL "SYC.LZ",V1,V2,V4,V5,V6,V7,V8,V9,V$,V5$,N0$
2048 IF V$="" THEN GOTO 2000
2050 LET A0$(23,2)=V$
2060 FIND (APM10_DEV,KEY=N0$+"B"+A0$(23,2),DOM=2080)IOL=APM10B
2070 IF P3$(2,1)="Y" THEN PRINT @(10,15),'SB',"Distribution Code: ",'SF',X0$(6,20),'CL',
2075 GOTO 3900
2080 IF P3$(2,1)="Y" THEN GOTO 2000
2082 PRINT 'RB',
2084 LET V0$="S",V1$="C",V2$="",V3$="",V4$="*** Missing Distribution Code <Enter>: ",V0=1,V1=FNV(V4$),V2=22
2086 GOSUB 7000
2090 GOTO 9900
2100 REM "PMT GROUP"
2120 LET V0$="S",V1$="KC",V2$=A0$(25,2),V0=2,V1=15,V2=9,V4$="Enter A Valid Payment Group, <F3>=Code Lookup"
2130 GOSUB 7000
2132 IF V3<>3 THEN GOTO 2140
2134 LET V4=1,V5=APM10_DEV,V6=4,V7=2,V8=6,V9=20,V5$="D"
2136 CALL "SYC.LZ",V1,V2,V4,V5,V6,V7,V8,V9,V$,V5$,N0$
2138 IF V$="" THEN GOTO 2100
2140 LET A0$(25,2)=V$
2150 FIND (APM10_DEV,KEY=N0$+"D"+A0$(25,2),DOM=2120)IOL=APM10D
2160 PRINT @(14,17),'SB',"Payment Group: ",'SF',X0$(6,20),'CL',
2190 GOTO 3900
2200 REM "TERMS CODE"
2220 LET V0$="S",V1$="KC",V2$=A0$(27,2),V0=2,V1=15,V2=10,V4$="Enter A Valid Terms Code, <F3>=Code Lookup"
2230 GOSUB 7000
2232 IF V3<>3 THEN GOTO 2240
2234 LET V4=1,V5=APM10_DEV,V6=4,V7=2,V8=6,V9=20,V5$="C"
2236 CALL "SYC.LZ",V1,V2,V4,V5,V6,V7,V8,V9,V$,V5$,N0$
2238 IF V$="" THEN GOTO 2200
2240 LET A0$(27,2)=V$
2250 FIND (APM10_DEV,KEY=N0$+"C"+A0$(27,2),DOM=2220)IOL=APM10C
2255 LET Q=POS("  "=X0$(6,20))
2257 IF Q=0 THEN LET Q=20
2260 PRINT @(22,19),'SB',"Terms: ",'SF',X0$(6,Q-1),'CL',
2290 GOTO 3900
2300 REM "HOLD"
2320 LET V0$="Y",V1$="RC",V2$=A0$(67,1),V4$="Y=Yes, N=No",V0=1,V1=15,V2=11
2330 IF V2$=" " THEN LET V2$="N"
2340 GOSUB 7000
2360 LET A0$(67,1)=V$
2390 GOTO 3900
2400 REM "INVOICE DATE"
2420 LET V0$="D",V1$="R",V2$=A0$(29,3),V0=8,V1=35,V2=8
2430 GOSUB 7000
2440 LET A0$(29,3)=V$
2450 IF A0$(32,3)="   " THEN LET A0$(32,3)=V$
2460 GOSUB 6200
2490 GOTO 3900
2500 REM "ACCTG DATE"
2520 LET V0$="D",V1$="R",V2$=A0$(32,3),V0=8,V1=35,V2=9,Y1$="",Y2$="",Y3$=""
2540 GOSUB 7000
2545 IF F0$(10,3)="APM" THEN GOTO 2560
2550 IF P3$(18,1)="N" THEN IF V$<R9$ THEN LET Y1$=" G/L"
2551 IF P3$(18,1)="N" THEN IF V$<R8$ THEN LET Y3$=" A/P"
2552 IF Y1$="" AND Y3$="" THEN GOTO 2560
2554 PRINT 'RB',; IF Y1$<>"" AND Y3$<>"" THEN LET Y2$=" &"
2556 LET V0$="S",V1$="C",V2$="",V3$="",V4$="This Date Is In A Closed"+Y1$+Y2$+Y3$+" Period.  Continue (Y/<Enter>)? ",V0=1,V1=FNV(V4$),V2=22
2557 GOSUB 7000
2558 LET Y1$="",Y2$="",Y3$=""
2559 IF V$<>"Y" THEN GOTO 2500
2560 LET A0$(32,3)=V$
2590 GOTO 3900
2600 REM "DUE DATE"
2620 LET V0$="D",V1$="R",V2$=A0$(35,3),V0=8,V1=35,V2=10
2640 GOSUB 7000
2660 LET A0$(35,3)=V$
2690 GOTO 3900
2700 REM "DISCOUNT DATE"
2720 LET V0$="D",V2$=A0$(38,3),V0=8,V1=35,V2=11
2740 GOSUB 7000
2760 LET A0$(38,3)=V$
2790 GOTO 3900
2800 REM "INV AMT"
2820 LET V0$="N",V1$="C",V2$=STR(A[0]),V4$="Enter The Total Invoice Amount",V3$=M1$,V1=60,V2=5
2830 GOSUB 7000
2840 LET A[0]=V
2860 LET A[3]=A[0]
2870 PRINT @(60,6),A[3]:M1$,
2890 GOTO 3900
2900 REM "DISC"
2920 LET V0$="N",V2$=STR(A[1]),V3$=M1$,V1=60,V2=8
2940 GOSUB 7000
2960 LET A[1]=V
2990 GOTO 3900
3000 REM "RETENT"
3010 IF P3$(3,1)<>"Y" THEN GOTO 3900 ELSE IF P3$(4,1)="Y" THEN GOTO 3900
3020 LET V0$="N",V2$=STR(A[2]),V3$=M1$,V1=60,V2=9
3040 GOSUB 7000
3060 LET A[2]=V
3090 GOTO 3900
3100 REM "REF"
3120 LET V0$="S",V1$="",V2$=A0$(41,10),V0=10,V1=60,V2=10
3140 GOSUB 7000
3160 LET A0$(41,10)=V$
3190 GOTO 3900
3200 REM "MEMO"
3220 LET V0$="S",V1$="",V2$=A0$(51,16),V0=16,V1=60,V2=11
3240 GOSUB 7000
3260 LET A0$(51,16)=V$
3290 GOTO 3900
3300 REM "NET INVOICE AMT"
3320 LET V0$="N",V1$="C",V2$=STR(A[3]),V3$=M1$,V4$="Enter The Net Discountable Invoice Amount",V1=60,V2=6
3330 GOSUB 7000
3335 IF V3=2 THEN GOTO 3900
3340 LET A[3]=V
3350 IF X0$="" THEN GOTO 3900
3360 LET A[1]=A[3]*X[0]/100
3370 PRINT @(60,8),A[1]:M1$,
3390 GOTO 3900
3900 REM "NEXT FIELD"
3910 IF V3=4 THEN GOTO 4000
3920 IF V3<>2 THEN GOTO 3950
3930 IF I0>0 THEN LET I0=I0-1
3940 GOTO 3960
3950 LET I0=I0+1
3960 ON I0 GOTO 2000,2100,2200,2300,2400,2500,2600,2700,2800,3300,2900,3000,3100,3200,3990
4000 REM "OPTIONS"
4010 LET V0$="S",V1$="KC",V2$="",V3$="",V4$="Is The Above Information Correct (Y/N/Delete)? ",V0=6,V1=FNV(V4$),V2=22
4020 GOSUB 7000
4030 IF V$="DELETE" THEN GOTO 4200
4050 ON POS(V$="YN") GOTO 4000,4100,1960
4100 REM "WRITE"
4120 WRITE (APE03_DEV,KEY=A0$(1,22))IOL=APE03A
4190 RUN "APE.DE"
4200 REM "DELETE"
4230 READ (APE13_DEV,KEY=A0$(1,20),DOM=4240)
4240 LET K$=KEY(APE13_DEV,END=4280)
4250 IF K$(1,20)<>A0$(1,20) THEN GOTO 4280
4260 REMOVE (APE13_DEV,KEY=K$)
4270 GOTO 4240
4280 REMOVE (APE03_DEV,KEY=A0$(1,22),DOM=4281)
4290 IF A0$(5,4)="TEMP" THEN IF O1=0 THEN REMOVE (APM03_DEV,KEY=D0$,DOM=4300)
4292 CALL "SYC.WC",1,0,80,0,0,12,0
4295 PRINT 'CF','SB',
4300 RUN "APE.DB"
6200 REM "CREATE DUE&DISC"
6220 LET V=X[1]
6230 CALL "SYC.CD",X0$(26,1),A0$(29,3),V,V$,STATUS
6240 LET A0$(35,3)=V$,V=X[2]
6260 CALL "SYC.CD",X0$(26,1),A0$(29,3),V,V$,STATUS
6270 LET A0$(38,3)=V$
6280 PRINT @(35,9),FNB$(A0$(32,3)),@(35,10),FNB$(A0$(35,3)),@(35,11),FNB$(A0$(38,3)),
6290 RETURN 
7000 REM " --- Standard Input Routine (15May95)"
7010 CALL "SYC.IA",V0$,V1$,V2$,V3$,V4$,PGM(-2),V0,V1,V2,V$,V,V3,DISPLAY_LEN
7020 IF V3=999 THEN GOTO 7200
7030 IF V3=127 THEN GOTO 7100
7090 RETURN 
7100 REM " --- Escape During Input"
7110 CALL "SYC.ES",ERR=7200,PGM(-2),TCB(8),E$,E2,V3
7120 IF V3<>127 THEN GOTO 7000
7130 PRINT @(0,E2),'CL','CURSOR'("ON"),E$,'LF'
7200 REM " --- Error During Input"
7210 ESCAPE
7290 GOTO 7000
8000 REM "FUNCTIONS"
8010 DEF FNA$(Q$,Q2$)=STR(MOD((ASC(Q$)-32)*POS(" "<>Q2$(2,1)),100):"00")
8020 DEF FNB$(Q1$)=FNA$(Q1$(2),Q1$)+"/"+FNA$(Q1$(3),Q1$)+"/"+FNA$(Q1$(1),Q1$)
8095 DEF FNV(Q$)=42+INT(LEN(Q$)/2)
8145 REM " --- FNYY21_YY$ Un-Convert 21st Century 2-Char Year to 2-Char Year"
8150 DEF FNYY21_YY$(Q1$)
8155 LET Q3$=" 01234567890123456789",Q1$(1,1)=Q3$(POS(Q1$(1,1)=" 0123456789ABCDEFGHIJ"))
8160 RETURN Q1$
8165 FNEND
9000 REM " --- Standard Error Routine (15May95)"
9010 IF ERR=127 THEN GOTO 9300
9020 CALL "SYC.EA",ERR=9090,EXIT_CTRL,PGM(-2),ERR,TCB(5),E$,E1,E2
9030 IF E1=1 THEN GOTO 9100
9040 IF E1=3 THEN GOTO 9200
9080 PRINT @(0,E2),'CL','CURSOR'("ON"),E$,'LF'
9090 ESCAPE
9100 REM " --- Retry"
9190 RETRY
9200 REM " --- Return"
9290 GOTO 9900
9300 REM " --- Standard Escape Routine"
9310 CALL "SYC.ES",ERR=9350,PGM(-2),TCB(8),E$,E2,V3
9320 IF V3<>127 THEN GOTO 9390
9330 PRINT @(0,E2),'CL','CURSOR'("ON"),E$,'LF'
9350 ESCAPE
9390 RETURN 
