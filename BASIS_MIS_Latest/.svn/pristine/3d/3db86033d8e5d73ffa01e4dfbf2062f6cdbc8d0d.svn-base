6420 LET V0$="S",V1$="EC",V2$="",V3$="",V4$="Press <Enter> To Continue",V0=1,V1=FNV(Q$),V2=22
6430 GOSUB 7000
6450 LET L=L1
6490 RETURN 
6500 REM "COMMENTS
6510 LET L2=15
6515 PRINT 'SB',
