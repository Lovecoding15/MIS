5550 PRINT @(21,8),"Invoice Date:",@(23,9),"Acctg Date:",@(25,10),"Due Date:",@(20,11),"Discount Date:",
5560 PRINT @(47,6),"Invoice Amt:",@(48,7),"Adjust Amt:",@(46,8),"Discount Amt:",@(49,10),"Reference:",@(54,11),"Memo:",
5570 IF P3$(3,1)="Y" THEN PRINT @(45,9),"Retention Amt:",
5575 CALL "SYC.WC",1,0,80,0,0,12,0
