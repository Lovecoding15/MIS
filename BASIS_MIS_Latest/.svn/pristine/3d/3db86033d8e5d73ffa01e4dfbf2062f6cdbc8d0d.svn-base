6530 LET K$=KEY(APM09_DEV,END=6590)
6535 IF K$(1,8)<>A0$(1,2)+A0$(5,6) THEN GOTO 6590
6540 READ (APM09_DEV,KEY=K$)IOL=APM09A
6550 IF L2>20 THEN GOTO 6600
6560 PRINT @(14,L2),">",K1$,"<"
