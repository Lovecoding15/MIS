0030 REM "+-----------------------------------------------------------+"
0040 REM 
0085 SETESC 9000
0090 SETERR 9000
0200 REM " --- IOLists
0210 APE01A: IOLIST A0$(1),A[0],A[1],A[2],A[3]
0240 APM03A: IOLIST D0$(1),D1$(1)
0250 APT01A: IOLIST E0$
0260 APM10A: IOLIST X0$
0500 REM " --- Init Data
0520 LET A0$(5,6)="TEMP"
0700 REM " --- Background
0720 GOSUB 6000
0740 PRINT 'SB',@(6,15),"Address:",
0790 PRINT 'SF',
1000 REM " --- Key
1010 IF P3$(1,1)="Y" THEN GOTO 1100
1020 LET A0$(3,2)="  "
1030 GOSUB 6200
1040 IF X0$="" THEN GOTO 1300
1050 LET A0$(23,2)=X0$(26,2)
1090 GOTO 1300
1200 REM " --- AP Type
1210 GOSUB 6300
1220 LET V0$="S",V1$="KE",V2$=A0$(3,2),V0=2,V1=15,V2=6
1230 GOSUB 7000
1240 IF V3=4 THEN RUN "APE.AB"
1250 LET A0$(3,2)=V$
1260 GOSUB 6200
1270 IF X0$="" THEN GOTO 1200
1280 GOSUB 5200
1300 REM " --- Init File
1320 READ (APE01_DEV,KEY=A0$(1,10),DOM=1330)
1400 REM " --- Invoice Number
1420 LET V2$="",V2$=KEY(APE01_DEV,END=1460)
1430 IF V2$(1,10)<>A0$(1,10) THEN LET V2$=""
1450 IF V2$<>"" THEN LET V2$=V2$(11,10)
1460 LET V0$="S",V1$="K",V0=10,V1=15,V2=7
1465 IF F0$(10,3)="APM" THEN LET V0=6,V4$="Invoice Number Restricted To 6 Characters" ELSE LET V0=10
1470 GOSUB 7000
1480 IF V3=4 THEN RUN "APE.AB"
1485 IF V$="" THEN GOTO 1300
1490 LET A0$(11,12)=V$,A0$(21,2)="00"
1500 REM " --- On File?
1510 LET O9=0
1520 FIND (APE01_DEV,KEY=A0$(1,22),DOM=1600)IOL=APE01A
1550 LET O9=1
1600 REM " --- Open Invoice?
1620 FIND (APT01_DEV,KEY=A0$(1,22),DOM=1660)IOL=APT01A
1640 LET O1=1
1660 IF O9=1 THEN GOTO 1900
1730 LET A0$(23)="",D1$(1)=""
1740 LET A[0]=0,A[1]=0,A[2]=0,A[3]=0,A0$(29,3)=F0$(7,3),A0$(32,3)=D9$
1750 LET O9=0
1770 IF O1=1 THEN IF LEN(E0$)>67 THEN LET A0$(1)=E0$(1,68) ELSE LET A0$(1)=E0$
1790 GOTO 2000
1900 GOSUB 5000
2000 REM " --- Temp Vendor
2010 LET D0$(1)=A0$(1,4)+A0$(11,10)
2020 FIND (APM03_DEV,KEY=D0$,DOM=2100)IOL=APM03A
2040 GOSUB 5600
2090 GOTO 4000
2100 REM " --- Name
2120 LET V0$="S",V2$=D1$(1,30),V0=30,V1=15,V2=4,I0=0
2140 GOSUB 7000
2150 IF NUM(V$,ERR=2160)=0 THEN GOTO 2100
2160 LET D1$(1,30)=V$
2200 REM " ---ADDRESS"
2210 FOR X=0 TO 2
2220 LET V0$="S",V2$=D1$(31+X*24,24),V0=24,V1=15,V2=15+X
2230 GOSUB 7000
2240 LET D1$(31+X*24,24)=V$
2250 IF V3=4 THEN EXITTO 3900
2260 IF V3<>2 THEN GOTO 2380
2270 IF V3=2 THEN EXITTO 2100
2280 LET X=X-1
2290 GOTO 2220
2380 NEXT X
4000 REM " --- Options
4010 LET V0$="Y",V1$="KC",V2$="",V3$="",V4$="Is The Name And Address Information Correct (Y/N)? ",V0=1,V1=FNV(V4$),V2=22
4020 GOSUB 7000
4040 IF V$="" THEN GOTO 4100
4050 ON POS(V$="YN") GOTO 4000,4100,2100
4100 REM " --- Write
4110 PRINT @(0,15),'CL',@(0,16),'CL',@(0,17),'CL',
4120 WRITE (APM03_DEV,KEY=D0$)IOL=APM03A
4140 IF O1=1 THEN PRINT @(63,8),A[0]:M1$,@(69,3),"Adjustment",'RB',; RUN "APE.AG"
4190 RUN "APE.AD"
5000 REM " --- Display
5020 IF P3$(2,1)="Y" THEN PRINT @(15,9),A0$(23,2),
5030 PRINT @(15,9),A0$(25,2),@(15,10),A0$(27,2),@(15,11),A0$(67,1),
5040 PRINT @(37,8),FNB$(A0$(29,3)),@(37,9),FNB$(A0$(32,3)),@(37,10),FNB$(A0$(35,3)),@(37,11),FNB$(A0$(38,3)),
5050 PRINT @(63,9),A[1]:M1$,@(63,11),A0$(41,10),@(63,12),A0$(51,16),
5060 IF O1=0 THEN PRINT @(63,6),A[0]:M1$,@(63,7),A[3]:M1$,@(63,9),A[1]:M1$,
5070 IF O1=1 THEN PRINT @(63,8),A[0]:M1$,
5080 IF P3$(3,1)="Y" THEN PRINT @(63,10),A[2]:M1$,
5090 RETURN 
5200 REM " --- Display AP Type
5220 PRINT @(15,6),A0$(3,2)," ",X0$(6,20),
5290 RETURN 
5600 REM " --- Temp Vendor
5620 PRINT 'SB',@(15,4),D1$(1,30),'SF',@(15,15),D1$(31,24),@(15,16),D1$(55,24),@(15,17),D1$(79,24),
5690 RETURN 
6000 REM " --- Clear Screen
6020 PRINT @(0,L0),'CE',
6090 RETURN 
6200 REM " --- AP Type
6210 LET X0$=""
6220 FIND (APM10_DEV,KEY=N0$+"A"+A0$(3,2),DOM=6230)IOL=APM10A
6290 RETURN 
6300 REM " --- Clear Data
6320 PRINT @(15,6),J1$(1,28),'CF',
6390 RETURN 
7000 REM " --- Standard Input Routine (15May95)"
7010 CALL "SYC.IA",V0$,V1$,V2$,V3$,V4$,PGM(-2),V0,V1,V2,V$,V,V3,DISPLAY_LEN
7020 IF V3=999 THEN GOTO 7200
7030 IF V3=127 THEN GOTO 7100
7090 RETURN 
7100 REM " --- Escape During Input"
7110 CALL "SYC.ES",ERR=7200,PGM(-2),TCB(8),E$,E2,V3
7120 IF V3<>127 THEN GOTO 7000
7130 PRINT @(0,E2),'CL','CURSOR'("ON"),E$,'LF'
7200 REM " --- Error During Input"
7210 ESCAPE
7290 GOTO 7000
8000 REM " --- Functions
8010 DEF FNA$(Q$,Q2$)=STR(MOD((ASC(Q$)-32)*POS(" "<>Q2$(2,1)),100):"00")
8020 DEF FNB$(Q1$)=FNA$(Q1$(2),Q1$)+"/"+FNA$(Q1$(3),Q1$)+"/"+FNA$(Q1$(1),Q1$)
8030 DEF FNC$(Q1$)=FNA$(Q1$(2),Q1$)+FNA$(Q1$(3),Q1$)+FNA$(Q1$(1),Q1$)
8095 DEF FNV(Q$)=42+INT(LEN(Q$)/2)
8200 REM " --- FNF$ AlphaNumeric Masking Function"
8210 DEF FNF$(Q1$,Q2$)
8220 IF Q2$="" THEN LET Q2$=FILL(LEN(Q1$),"0")
8230 RETURN STR(-NUM(Q1$,ERR=ALPHA_FNF):Q2$,ERR=ALPHA_FNF)
8240 ALPHA_FNF: 
8245 LET Q=1,Q0=0
8250 WHILE LEN(Q2$(Q))
8255 IF POS(Q2$(Q,1)="-()") THEN LET Q0=Q0+1 ELSE LET Q2$(Q,1)="X"
8260 LET Q=Q+1
8265 WEND
8270 IF LEN(Q1$)>LEN(Q2$)-Q0 THEN LET Q1$=Q1$(1,LEN(Q2$)-Q0)
8280 RETURN STR(Q1$:Q2$)
8290 FNEND
9000 REM " --- Standard Error Routine (15May95)"
9010 IF ERR=127 THEN GOTO 9300
9020 CALL "SYC.EA",ERR=9090,EXIT_CTRL,PGM(-2),ERR,TCB(5),E$,E1,E2
9030 IF E1=1 THEN GOTO 9100
9040 IF E1=3 THEN GOTO 9200
9080 PRINT @(0,E2),'CL','CURSOR'("ON"),E$,'LF'
9090 ESCAPE
9100 REM " --- Retry"
9190 RETRY
9200 REM " --- Return"
9290 GOTO 9900
9300 REM " --- Standard Escape Routine"
9310 CALL "SYC.ES",ERR=9350,PGM(-2),TCB(8),E$,E2,V3
9320 IF V3<>127 THEN GOTO 9390
9330 PRINT @(0,E2),'CL','CURSOR'("ON"),E$,'LF'
9350 ESCAPE
9390 RETURN 
9900 RUN "SYS.AA"
9999 END
