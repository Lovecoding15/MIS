0010 REM "IVR - Inventory Item Labels"
0020 REM "Program IVR.1A"
0022 REM "+-----------------------------------------------------------+"
0024 REM "| ADD+ON Software, Inc. Advantage/V Version 6.0.0 - 15May96 |"
0026 REM "|      Copyright (c) 1996 Open Systems Holdings Corp.       |"
0028 REM "|                  All Rights Reserved                      |"
0030 REM "+-----------------------------------------------------------+"
0040 REM 
0050 BEGIN 
0085 SETESC 9000
0090 SETERR 9000
0100 REM " --- Open/Lock Files"
0110 LET FILES=7
0120 DIM FILES$[FILES],OPTIONS$[FILES],CHANNELS[FILES]
0125 LET FILES$[1]="IVM-01",FILES$[2]="IVM-02",FILES$[3]="IVM-03"
0130 LET FILES$[4]="IVM-10",FILES$[5]="IVM-14",FILES$[6]="SYS-01"
0140 LET FILES$[7]="IVM-15"
0160 CALL "SYC.DA",1,1,FILES,FILES$[ALL],OPTIONS$[ALL],CHANNELS[ALL],BATCH,STATUS
0170 IF STATUS>0 THEN GOTO 9900
0180 LET IVM01_DEV=CHANNELS[1],IVM02_DEV=CHANNELS[2],IVM03_DEV=CHANNELS[3]
0185 LET IVM10_DEV=CHANNELS[4],IVM14_DEV=CHANNELS[5],SYS01_DEV=CHANNELS[6]
0190 LET IVM15_DEV=CHANNELS[7]
0200 REM " --- IOLists"
0210 IVM01A: IOLIST X1$,X2$
0240 IVM10A: IOLIST C0$
0250 IVM10C: IOLIST C0$
0260 SYS01T: IOLIST X$,F0$,X$,X$,X$,F4$,F5$
0270 IVS01A: IOLIST P0$,P1$,P2$,P3$,P4$,M0$,M1$,M2$,M3$
0400 REM " --- Parameters"
0410 FIND (SYS01_DEV,KEY="T"+FID(0),DOM=9800)IOL=SYS01T
0420 LET N0$=F0$(16,2),N1$=F4$,N2$="IV",N3$=F5$
0430 FIND (SYS01_DEV,KEY=N0$+N2$+"00",DOM=9800)IOL=IVS01A
0450 DIM P[5]
0480 LET P[0]=NUM(P2$(1,2)),P[3]=NUM(P2$(9,2)),P[4]=NUM(P2$(11,2)),P[5]=NUM(P2$(13,2))
0500 REM " --- Init Data"
0530 LET ACROSS=NUM(P3$(10,2)),WIDTH=NUM(P3$(14,2)),HEIGHT=NUM(P3$(12,2)),W3=1
0540 DIM W0$(ACROSS*WIDTH*6),W9$(HEIGHT,$0A$),A1$(70)
0550 DIM CHANNS[15],PARAMS$[4],OPTIONS$[7]
0560 LET CHANNS[0]=SYS01_DEV,CHANNS[1]=IVM01_DEV,CHANNS[10]=IVM10_DEV
0570 LET CHANNS[14]=IVM14_DEV,CHANNS[15]=IVM15_DEV,PARAMS$[0]=N0$
0580 LET PARAMS$[1]=P1$,PARAMS$[2]=P2$,PARAMS$[3]=P3$,PARAMS$[4]=P4$
0700 REM " --- Background"
0710 CALL "IVC.IB","BL","D",3,CHANNS[ALL],PARAMS$[ALL],OPTIONS$[ALL],FKEY
0720 PRINT 'SB',@(23,17),"Labels Per Item:",'SF',
0730 CALL "SYC.WC",1,0,80,0,0,18,0
1000 REM " --- Beginning Warehouse"
1010 LET I0=0
1020 CALL "IVC.IB","IL","D",3,CHANNS[ALL],PARAMS$[ALL],OPTIONS$[ALL],V3
1030 IF V3=2 THEN LET V3=0; GOTO 1000
1040 LET BEG_WHSE$=OPTIONS$[1],END_WHSE$=OPTIONS$[2],BEG_PROD$=OPTIONS$[3]
1050 LET END_PROD$=OPTIONS$[4],BEG_ITEM$=OPTIONS$[5],END_ITEM$=OPTIONS$[6]
1060 LET ITEM_TYPE$=OPTIONS$[7]
1070 IF V3=4 THEN GOTO 4000
1090 GOTO 3900
1100 REM " --- Labels/Record"
1110 IF W3=0 THEN LET W3=1
1120 LET V0$="N",V1$="KR",V2$=STR(W3),V3$="##0",V0=3,V1=40,V2=17
1130 GOSUB 7000
1140 IF V<1 THEN GOTO 1100
1150 LET W3=V
1190 GOTO 3900
3900 REM " --- Next Field"
3910 IF V3<>2 THEN GOTO 3940
3920 IF I0>0 THEN LET I0=I0-1
3930 GOTO 3950
3940 LET I0=I0+1
3960 ON I0 GOTO 1000,1100,4000
4000 REM " --- Correct?"
4010 GOSUB 5000
4020 CALL "SYC.YN",1,"Is The Above Information Correct",2,V$,V3
4030 ON V3 GOTO 4040,4000,4000,4000,9900
4040 ON POS(V$="YN") GOTO 4000,4050,1000
4100 CALL "SYC.GA",7,1,"","",STATUS
4110 IF STATUS THEN GOTO 9900
4200 RUN "IVR.1B"
5000 REM " --- Display screen"
5010 CALL "IVC.IB","DL","D",3,CHANNS[ALL],PARAMS$[ALL],OPTIONS$[ALL],FKEY
5020 PRINT @(40,17),W3:"##0",
5090 RETURN 
7000 REM " --- Standard Input Routine (15May95)"
7010 CALL "SYC.IA",V0$,V1$,V2$,V3$,V4$,PGM(-2),V0,V1,V2,V$,V,V3,DISPLAY_LEN
7020 IF V3=999 THEN GOTO 7200
7030 IF V3=127 THEN GOTO 7100
7090 RETURN 
7100 REM " --- Escape During Input"
7110 CALL "SYC.ES",ERR=7200,PGM(-2),TCB(8),E$,E2,V3
7120 IF V3<>127 THEN GOTO 7000
7130 PRINT @(0,E2),'CL','CURSOR'("ON"),E$,'LF'
7200 REM " --- Error During Input"
7210 ESCAPE
7290 GOTO 7000
8000 REM " --- Functions"
8090 DEF FNV(Q$)=42+INT(LEN(Q$)/2)
9000 REM " --- Standard Error Routine (15May95)"
9010 IF ERR=127 THEN GOTO 9300
9020 CALL "SYC.EA",ERR=9090,EXIT_CTRL,PGM(-2),ERR,TCB(5),E$,E1,E2
9030 IF E1=1 THEN GOTO 9100
9040 IF E1=3 THEN GOTO 9200
9080 PRINT @(0,E2),'CL','CURSOR'("ON"),E$,'LF'
9090 ESCAPE
9100 REM " --- Retry"
9190 RETRY
9200 REM " --- Return"
9290 GOTO 9900
9300 REM " --- Standard Escape Routine"
9310 CALL "SYC.ES",ERR=9350,PGM(-2),TCB(8),E$,E2,V3
9320 IF V3<>127 THEN GOTO 9390
9330 PRINT @(0,E2),'CL','CURSOR'("ON"),E$,'LF'
9350 ESCAPE
9390 RETURN 
9800 REM " --- Display Parameter record error"
9810 LET LINE_ERR$=LST(PGM(TCB(5)))
9820 CALL "SYC.YA",LINE_ERR$,N2$,ERR
9900 RUN "SYS.AA"
9999 END
