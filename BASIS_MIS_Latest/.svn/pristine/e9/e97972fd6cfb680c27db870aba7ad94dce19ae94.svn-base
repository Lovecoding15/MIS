1530 PRINT 'SB',@(8,11),"Limit",'SF',
1540 LET A0$(24,1)="F",A0$(25,5)="12345",A0$(32,2)="YL"
1550 GOSUB 5000
2000 REM " --- Overlay"
2020 LET O0=1,O9=1
2040 RUN "PRM.BB"
4000 REM " --- Options"
4005 IF O7=1 THEN GOTO 4200
4010 PRECISION P[3]
