5000 REM " --- Display"
5010 PRINT @(15,4),A0$(6,16),@(15,5),A0$(22,2),@(15,6),A0$(24,1),@(15,7),A0$(25,5),@(15,8),A0$(30,2),
5015 IF GL$="Y" THEN PRINT @(15,9),FNF$(A1$(1,G[3]),G5$),
