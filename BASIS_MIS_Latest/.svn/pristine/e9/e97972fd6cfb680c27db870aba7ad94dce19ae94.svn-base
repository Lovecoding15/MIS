1200 REM " --- Find Key"
1220 FIND (PRM10_DEV,KEY=A0$(1,K9),DOM=1400)IOL=PRM10B
1230 IF LEN(A0$)>32 THEN IF POS("B"=A0$(33,1))>0 THEN PRINT 'SB',@(8,11),"Balnc",'SF', ELSE PRINT 'SB',@(8,11),"Limit",'SF',
1240 IF GL$="N" THEN LET A1$(1)=""
1300 REM " --- Display"
1320 GOSUB 5000
1340 GOTO 4000
1400 REM " --- New Record"
1420 CALL "SYC.YN",1,"Is This A New Record",1,V$,V3
1440 ON POS(V$="YN") GOTO 1400,1500,1000
