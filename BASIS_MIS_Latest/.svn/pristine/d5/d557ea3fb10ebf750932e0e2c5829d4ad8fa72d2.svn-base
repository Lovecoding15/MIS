0010 REM "GLC - Audit Control (Delete !GLCONTROL)"
0020 REM "Program GLC.DA"
0022 REM "+-----------------------------------------------------------+"
0024 REM "| ADD+ON Software, Inc. Advantage/V Version 6.0.0 - 15May96 |"
0026 REM "|      Copyright (c) 1996 Open Systems Holdings Corp.       |"
0028 REM "|                  All Rights Reserved                      |"
0030 REM "+-----------------------------------------------------------+"
0040 REM 
0045 REM "STATUS: 0=No Error (Returned)"
0050 REM 
0080 SETERR 9000
0085 SETESC 9900
0090 ENTER STATUS
0100 REM " --- Open/Lock Files"
0110 LET FILES=1
0120 DIM FILES$[FILES],OPTIONS$[FILES],CHANNELS[FILES]
0130 LET FILES$[1]="GLM-06"
0160 CALL "SYC.DA",1,1,1,FILES$[ALL],OPTIONS$[ALL],CHANNELS[ALL],BATCH,STATUS
0170 IF STATUS>0 THEN GOTO 9900
0180 LET GLM06_DEV=CHANNELS[1]
0200 REM " --- IOLIST's"
0210 GLM06A: IOLIST A0$(1),A1$(1),A2$(1),A3$,A[ALL]
0400 REM " --- Parameters"
0410 DIM GLCONTROL$(640)
0420 LET GLCONTROL$(1)=STBL("!GLCONTROL",ERR=9900)
0430 LET N0$=GLCONTROL$(1,2),PROGRAM$=GLCONTROL$(3,8),PROCESS$=GLCONTROL$(596,10)
0500 REM " --- Initializations"
0510 DIM A0$(20),A1$(64),A2$(30),A[6]
1000 REM " --- Retrieve GLM-06 entry"
1010 LET A0$(1)=N0$+PROCESS$+PROGRAM$
1020 FIND (GLM06_DEV,KEY=A0$,DOM=4000)IOL=GLM06A
2500 REM " --- Update GLM-06 Record"
2520 IF GLCONTROL$(27,1)="Y" THEN LET A1$(21,6)=A1$(11,6),A1$(27,4)=A1$(17,4)
2590 WRITE (GLM06_DEV,KEY=A0$)IOL=GLM06A
4000 REM " --- All Done"
4010 LET GLCONTROL$(1)=STBL("!CLEAR","!GLCONTROL",ERR=4020)
4090 GOTO 9900
8000 REM " --- Function Definitions"
9000 REM " --- Standard Error Routine (15May95)"
9010 IF ERR=127 THEN GOTO 9300
9020 CALL "SYC.EA",ERR=9090,EXIT_CTRL,PGM(-2),ERR,TCB(5),E$,E1,E2
9030 IF E1=1 THEN GOTO 9100
9040 IF E1=3 THEN GOTO 9200
9080 PRINT @(0,E2),'CL','CURSOR'("ON"),E$,'LF'
9090 ESCAPE
9100 REM " --- Retry"
9190 RETRY
9200 REM " --- Return"
9205 SETESC 9000
9210 SETERR 9000
9220 LET STATUS=E0
9230 IF STATUS=0 THEN LET STATUS=256
9290 GOTO 9900
9300 REM " --- Standard Escape Routine"
9310 CALL "SYC.ES",ERR=9350,PGM(-2),TCB(8),E$,E2,V3
9320 IF V3<>127 THEN GOTO 9390
9330 PRINT @(0,E2),'CL','CURSOR'("ON"),E$,'LF'
9350 ESCAPE
9390 RETURN 
9900 REM " --- Return to Calling Program"
9910 LET GLCONTROL$(1)=STBL("!CLEAR","!GLCONTROL",ERR=9911)
9920 CLOSE (GLM06_DEV,ERR=9921)
9950 EXIT 
9999 END
