4320 IF POS(N0$=K$)<>1 THEN GOTO 4400
4330 READ (GLM01_DEV)
4335 PRINT @(40,18),FNF$(K$(3,P[3]),M0$),
4340 LET B0$(1)=K$,B0$(LEN(B0$),1)=C0$(3,1)
4350 FIND (GLM02_DEV,KEY=B0$,DOM=4390)IOL=GLM02A
4355 ON ZAP GOTO 4380,4360
4360 IF C0$(4,1)="A" THEN DIM A[MP]
4365 IF C0$(4,1)="U" THEN DIM U[MP]
4370 WRITE (GLM02_DEV,KEY=B0$)IOL=GLM02A
4375 GOTO 4390
4380 REMOVE (GLM02_DEV,KEY=B0$)
4390 GOTO 4300
4400 REM " --- Remove GLM-08 Budget Revision Record"
4410 REMOVE (GLM08_DEV,KEY=C0$,DOM=4420)
4420 PRINT @(0,18),'CE',
4490 GOTO 1000
4500 REM " --- Print?"
