4990 GOTO 9900
5000 REM " --- Display"
5010 LET MASK$=M1$,BEGACCT$="First",ENDACCT$="Last"
5015 IF C1$(59,1)="P" THEN LET MASK$=M4$
5020 IF FNP$(C2$)="" THEN GOTO 5040
5025 LET V$=C2$
5030 GOSUB 5200
5035 LET BEGACCT$=DESCRIPTION$
5040 IF FNP$(C3$)="" THEN GOTO 5060
5045 LET V$=C3$
5050 GOSUB 5200
5055 LET ENDACCT$=DESCRIPTION$
5060 CALL "GLC.FA",GLM08_DEV,N0$,C1$(58,1),C0$(4,1),DESCRIPTION$,X$,STATUS
5070 PRINT @(40,3),C0$(3,1),@(40,4),C0$(4,1),@(40,5),C1$(1,30),@(40,6),C1$(31,15),@(40,8),C1$(58,1)," ",DESCRIPTION$,'CL',@(40,9),BEGACCT$,'CL',@(40,10),ENDACCT$,'CL',@(40,11),C4$,@(40,12),C1$(59,1),@(40,13),C[0]:MASK$,@(40,14),C1$(60,1),@(40,15),C1$(61,1),@(40,16),FNB6$(C1$(46,6)),@(40,17),FNB6$(C1$(52,6))
5090 RETURN 
5200 REM " --- Retrieve and return G/L Account"
5210 DIM A1$(40),DESCRIPTION$(38)
5220 LET A0$(1)=N0$+V$,A1$(1,35)="(Not On File)",STATUS=1
5230 FIND (GLM01_DEV,KEY=A0$,DOM=5250)IOL=GLM01A
