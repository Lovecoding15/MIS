1520 LET C4$="",C1$(46,6)=F0$(18,6),C1$(52,6)=F0$(18,6)
1530 LET C1$(58,1)="0",C1$(59,1)="A",C1$(60,1)="N",C1$(61,1)="C"
1590 GOSUB 5000
1600 REM " --- Description"
1610 LET V0=30,V0$="S",V1$="C",V2$=C1$(1,V0),V3$="",V1=40,V2=5,I0=2
1620 LET V4$="Enter The Description Of This Budget Revision"
1630 GOSUB 7000
1640 ON V3 GOTO 1650,1600,3900,1600,3900
1650 LET C1$(1,V0)=V$
1690 GOTO 3900
1700 REM " --- Column Description"
1710 LET V0=15,V0$="S",V1$="C",V2$=C1$(31,V0),V3$="",V1=40,V2=6
1720 LET V4$="Enter The Abbreviated Column Description Of This Budget Revision"
1730 GOSUB 7000
1740 ON V3 GOTO 1750,1700,3900,1700,3900
1750 LET C1$(31,V0)=V$
1790 GOTO 3900
1800 REM " --- Revision Source"
1810 LET V0=1,V0$="S",V1$="CR",V2$=C1$(58,V0),V3$="",V1=40,V2=8
1820 LET V4$="Enter The G/L Source ID For This Budget Revision (<F3>=Lookup)"
1830 GOSUB 7000
1840 ON V3 GOTO 1870,1800,3900,1850,3900
1850 LET ACTION$=""
1853 CALL "GLC.LA",ACTION$,V$,FLAG$,DESCRIPTION$,TITLE$
1855 IF V$<>"" THEN IF FLAG$<>C0$(4,1) THEN GOSUB 5400; GOTO 1800
1860 IF V$="" THEN GOTO 1800
1870 CALL "GLC.FA",GLM08_DEV,N0$,V$,C0$(4,1),DESCRIPTION$,X$,STATUS
1875 IF STATUS<>0 THEN GOTO 1800
1880 LET C1$(58,V0)=V$
1885 PRINT @(V1,V2),C1$(58,V0)," ",DESCRIPTION$,'CL',
1890 GOTO 3900
2000 REM " --- Beginning Account Number"
2010 LET V4$="Enter A Beginning Account Number (<F1>=First/<F3>=Lookup)"
2015 LET V0$="M",V1$="C",V2$=FNP$(C2$(1,P[3])),V3$=M0$,V0=P[4],V1=40,V2=9
2020 GOSUB 7000
2025 ON V3 GOTO 2060,2030,3900,2050,3900
2030 LET C2$(1)=""
2035 PRINT @(V1,V2),"First",'CL',
2040 GOTO 2090
2050 CALL "SYC.LG",V$
2055 IF V$="" THEN GOTO 2000
2060 IF V$="" THEN GOTO 2030
2065 GOSUB 5200
2070 IF STATUS>0 THEN GOTO 2000
2080 LET C2$(1)=A0$(3)
2085 PRINT @(V1,V2),DESCRIPTION$,'CL',
2090 GOTO 3900
2100 REM " --- Ending Account Number"
2110 LET V4$="Enter An Ending Account Number (<F1>=Last/<F3>=Lookup)"
2115 LET V0$="M",V1$="C",V2$=FNP$(C3$(1,P[3])),V3$=M0$,V0=P[4],V1=40,V2=10
2120 GOSUB 7000
2125 ON V3 GOTO 2160,2130,3900,2150,3900
2130 LET C3$(1)=""
2135 PRINT @(V1,V2),"Last",'CL',
2140 GOTO 2190
2150 CALL "SYC.LG",V$
2155 IF V$="" THEN GOTO 2100
2160 IF V$="" THEN GOTO 2130
2165 GOSUB 5200
2170 IF STATUS>0 THEN GOTO 2100
2175 IF V$<C2$ THEN GOTO 2100
2180 LET C3$(1)=A0$(3)
2185 PRINT @(V1,V2),DESCRIPTION$,'CL',
2190 GOTO 3900
2200 REM " --- Wildcard Mask"
2210 LET V4$="Enter The Wildcard Mask To Be Used In Selecting Accounts For This Revision"
2215 LET V0$="W",V1$="C",V2$=C4$,V3$=M0$,V0=P[4],V1=40,V2=11
2220 GOSUB 7000
2225 ON V3 GOTO 2230,2200,3900,2200,3900
2230 IF V$<>"" THEN GOTO 2250
2235 LET C4$=""
2245 GOTO 2280
2250 LET C4$=V$
2280 PRINT @(V1,V2),C4$,'CL',
2290 GOTO 3900
2300 REM " --- Amount/Percentage"
2310 LET V4$="Revise Source Information By Flat Amount Or Percentage (A=Amount/P=Percentage)"
2320 LET V0$="S",V1$="C",V2$=C1$(59,1),V3$="AP",V0=1,V1=40,V2=12
2330 GOSUB 7000
2340 ON V3 GOTO 2350,2300,3900,2300,3900
2350 IF POS(V$="AP")=0 THEN GOTO 2300
2360 LET C1$(59,1)=V$
2390 GOTO 3900
2400 REM " --- Value"
2410 LET V4$="Flat Amount",MASK$=M1$
2415 IF C1$(59,1)="P" THEN LET V4$="Percentage",MASK$=M4$
2420 LET V4$="Enter The "+V4$+" To Increase/Decrease Source Amount By"
2425 LET V0$="N",V1$="C",V2$=STR(C[0]),V3$=MASK$,V0=LEN(MASK$),V1=40,V2=13
2430 GOSUB 7000
2440 ON V3 GOTO 2450,2400,3900,2400,3900
2450 LET C[0]=V
2480 PRINT @(V1,V2),C[0]:MASK$,'CL',
2490 GOTO 3900
2500 REM " --- Overwrite?"
2510 LET V4$="Overwrite Any Existing Records (Y/N)?"
2520 LET V0$="Y",V1$="C",V2$=C1$(60,1),V3$="",V0=1,V1=40,V2=14
2530 GOSUB 7000
2540 ON V3 GOTO 2550,2500,3900,2500,3900
2550 LET C1$(60,1)=V$
2590 GOTO 3900
2600 REM " --- Rounding Factor"
2610 LET V4$="Select The Rounding Factor To Use When Generating New Budget Amount"
2620 PRINT @(FNC(V4$,80),21),V4$,
2630 LET V4$="C=Cents   D=Dollars   H=Hundreds   T=Thousands"
2640 IF C0$(4,1)="U" THEN LET V4$="C=2 Decimal Places   D=Units   H=Hundreds   T=Thousands"
2650 LET V0$="S",V1$="C",V2$=C1$(61,1),V3$="CDHT",V0=1,V1=40,V2=15
2660 GOSUB 7000
2665 PRINT @(0,21),'CL',
2670 ON V3 GOTO 2680,2600,3900,2600,3900
2680 IF POS(V$="CDHT")=0 THEN GOTO 2600
2685 LET C1$(61,1)=V$
2690 GOTO 3900
3900 REM " --- Next field"
3915 IF V3=4 THEN GOTO 4000
3920 IF V3<>2 THEN GOTO 3950
3930 IF I0>0 THEN LET I0=I0-1
3940 GOTO 3960
3950 LET I0=I0+1
3960 ON I0 GOTO 1000,1100,1600,1700,1800,2000,2100,2200,2300,2400,2500,2600,3990
3990 LET I0=0
4000 REM " --- Correct?"
4005 GOSUB 5000
4010 LET V0$="S",V4$="Is The Above Information Correct (Y/N/Delete)?"
4020 LET V1$="KC",V2$="Y",V3$="",V0=6,V1=FNV(V4$),V2=22
4030 GOSUB 7000
4040 ON V3 GOTO 4050,4000,4000,4000,4500
4050 IF V$="DELETE" THEN GOTO 4200
4090 ON POS(V$="YN") GOTO 4000,4100,1600
4100 REM " --- Write"
4110 WRITE (GLM08_DEV,KEY=C0$)IOL=GLM08A
4120 READ RECORD(GLM08_DEV,KEY=C0$)N9$
4130 IF N9$=R9$ THEN GOTO 4190
4140 LET C1$(52,6)=F0$(18,6)
4150 WRITE (GLM08_DEV,KEY=C0$)IOL=GLM08A
4190 GOTO 1000
4200 REM " --- Remove"
4210 LET V4$="OK to Purge All Records For The Budget Revision"
4220 CALL "SYC.YN",0,V4$,0,V$,V3
4230 IF V$<>"YES" THEN GOTO 4000
4240 LET ZAP=0,K$=C0$(1,3)+"U"
4250 IF C0$(4,1)="U" THEN LET K$(4,1)="A"
4260 FIND (GLM08_DEV,KEY=K$,DOM=4280)
4270 LET ZAP=1
4280 PRINT @(28,18),'SB',"Processing:",'SF',
4290 READ (GLM01_DEV,KEY=N0$,DOM=4300)
4300 REM " --- Remove GLM-02 Budget Records"
