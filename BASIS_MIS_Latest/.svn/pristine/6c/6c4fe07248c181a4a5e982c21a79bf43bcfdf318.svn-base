5440 LET MESSAGE$[0]=X$+" May Not Be Selected As The Source For A Budget Revision"
5450 LET MESSAGE$[1]="When The Output Will Be "+V$+" (<Enter>=Continue)"
5480 CALL "SYC.XA",2,MESSAGE$[ALL],1,22,-1,V$,V3
5490 RETURN 
7000 REM " --- Standard Input Routine (15May95)"
7010 CALL "SYC.IA",V0$,V1$,V2$,V3$,V4$,PGM(-2),V0,V1,V2,V$,V,V3,DISPLAY_LEN
7020 IF V3=999 THEN GOTO 7200
7030 IF V3=127 THEN GOTO 7100
7090 RETURN 
7100 REM " --- Escape During Input"
