4540 ON V3 GOTO 4550,4500,4500,4500,9900
4590 ON POS(V$="YN") GOTO 4500,4600,9900
4600 REM " --- Run report overlay"
4690 RUN "GLM.MB"
4900 REM " --- Budgets not specified on parameter record"
