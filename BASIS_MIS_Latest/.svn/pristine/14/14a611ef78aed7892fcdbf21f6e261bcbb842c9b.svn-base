0010 REM "POP - Parameter Maintenance"
0020 REM "Program POP.AA"
0022 REM "+-----------------------------------------------------------+"
0024 REM "| ADD+ON Software, Inc. Advantage/V Version 6.0.0 - 15May96 |"
0026 REM "|      Copyright (c) 1996 Open Systems Holdings Corp.       |"
0028 REM "|                  All Rights Reserved                      |"
0030 REM "+-----------------------------------------------------------+"
0040 REM 
0050 SETERR 9000
0055 SETESC 9000
0060 ON O0 GOTO 0070,1000,1100
0070 BEGIN 
0080 SETERR 9000
0090 SETESC 9000
0100 REM " --- Open/Lock Files"
0110 LET FILES=4
0120 DIM FILES$[FILES],OPTIONS$[FILES],CHANNELS[FILES]
0130 LET FILES$[1]="SYS-01",FILES$[2]="POS-10"
0140 LET FILES$[3]="POM-02",FILES$[4]="POM-04"
0160 CALL "SYC.DA",1,1,FILES,FILES$[ALL],OPTIONS$[ALL],CHANNELS[ALL],BATCH,STATUS
0170 IF STATUS THEN GOTO 9900
0180 LET SYS01_DEV=CHANNELS[1],POS10_DEV=CHANNELS[2]
0190 LET POM02_DEV=CHANNELS[3],POM04_DEV=CHANNELS[4]
0200 REM " --- IOLIST's"
0260 SYS01T: IOLIST X$,F0$,X$,X$,X$,F4$,F5$
0270 POS01A: IOLIST A0$,A1$,A2$,A3$(1),A4$
0400 REM " --- Parameters"
0405 DIM A3$(128),INFO$[20]
0410 FIND (SYS01_DEV,KEY="T"+FID(0),DOM=9800)IOL=SYS01T
0420 LET N0$=F0$(16,2),N2$="PO",O0=2
0430 FIND (SYS01_DEV,KEY=N0$+N2$+"00",DOM=4000)IOL=POS01A
0440 CALL "SYC.VA","WO",INFO$[ALL]
0450 LET SF$=INFO$[20]
1000 REM " --- Process submenu"
1010 DIM MENUS$[1]
1020 LET MENUS=1,MENUS$[1]="POP.AA",WIN_X=0,WIN_Y=4,O0=1
1030 CALL "SYC.OA",MENUS,MENUS$[ALL],WIN_X,WIN_Y,DESCRIPTION$,SELECTION$
1040 IF SELECTION$="" THEN GOTO 9900
1050 PRINT @(0,3),'CE',
1060 IF SELECTION$="SYC.NS" THEN GOTO 1100
1090 RUN SELECTION$,ERR=1000
1100 REM " --- Sequence Numbers"
1110 DIM TYPE$[3],PROMPT$[3],LENGTH[3],MASK$[3],M9$(7,"#")
1120 LET TYPE$[0]="Z",PROMPT$[0]="Next Purchase Order Number",LENGTH[0]=7
1130 LET TYPE$[1]="Z",PROMPT$[1]="Next Requisition Number",LENGTH[1]=7
1140 LET TYPE$[2]="Z",PROMPT$[2]="Next Receiver Number",LENGTH[2]=7
1150 LET TYPE$[3]="N",PROMPT$[3]="Detail Line Number Increment",LENGTH[3]=2
1165 LET MASK$[0]=M9$,MASK$[1]=M9$,MASK$[2]=M9$,MASK$[3]="##"
1170 LET NUMBER=3,KEYVAL$=N0$+"N",CHANNEL=POS10_DEV,LINE=4,O0=1
1175 PRINT @(0,3),'CE',
1180 CALL "SYC.NS",CHANNEL,LINE,NUMBER,TYPE$[ALL],PROMPT$[ALL],LENGTH[ALL],MASK$[ALL],KEYVAL$
1190 GOTO 1000
4000 REM " --- Run 1st Overlay for new records"
4090 RUN "POP.AB"
9000 REM " --- Standard Error Routine (15May95)"
9010 IF ERR=127 THEN GOTO 9300
9020 CALL "SYC.EA",ERR=9090,EXIT_CTRL,PGM(-2),ERR,TCB(5),E$,E1,E2
9030 IF E1=1 THEN GOTO 9100
9040 IF E1=3 THEN GOTO 9200
9080 PRINT @(0,E2),'CL','CURSOR'("ON"),E$,'LF'
9090 ESCAPE
9100 REM " --- Retry"
9190 RETRY
9200 REM " --- Return"
9290 GOTO 9900
9300 REM " --- Standard Escape Routine"
9310 CALL "SYC.ES",ERR=9350,PGM(-2),TCB(8),E$,E2,V3
9320 IF V3<>127 THEN GOTO 9390
9330 PRINT @(0,E2),'CL','CURSOR'("ON"),E$,'LF'
9350 ESCAPE
9390 RETURN 
9800 REM " --- Display Parameter record error"
9810 LET LINE_ERR$=LST(PGM(TCB(5)))
9820 CALL "SYC.YA",LINE_ERR$,N2$,ERR
9900 RUN "SYS.AA"
9999 END
