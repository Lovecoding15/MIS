0010 REM "SYC - Executive Summary (Change Display)"
0020 REM "Program SYC.QH"
0022 REM "+-----------------------------------------------------------+"
0024 REM "| ADD+ON Software, Inc. Advantage/V Version 6.0.0 - 15May96 |"
0026 REM "|      Copyright (c) 1996 Open Systems Holdings Corp.       |"
0028 REM "|                  All Rights Reserved                      |"
0030 REM "+-----------------------------------------------------------+"
0040 REM 
0050 REM "D_STATUS  : SpeedSearch Status (0=No Error)"
0060 REM "OPTION$[n]: Standard SpeedSearch Options Array"
0070 REM 
0080 SETERR 9000
0085 SETESC 9000
0090 ENTER D_STATUS,OPTION$[ALL]
0400 REM " --- Parameters"
0410 DIM SPEED$(128)
0420 LET SPEED$(1)=STBL("!SPEEDSEARCH",ERR=9900),MAXOPT=NUM(SPEED$(57,2))
0500 REM " --- Initializations"
0510 DIM OPTLIST$[2,MAXOPT,6],PARAM$[2,MAXOPT,3]
0550 LET D_STATUS=0,PGM$=PGM(-2),OPTIONS=0
0600 REM " --- Load options"
0610 CALL "SYC.OL",PGM$,OPTIONS,WIDTH,OPTLIST$[ALL],PARAM$[ALL],TITLE$,MAXROW,"",0
0620 IF OPTIONS<1 THEN GOTO 9900
0630 LET WIDTH=WIDTH+4,HEIGHT=OPTIONS+2
0640 IF LEN(TITLE$)+6>WIDTH THEN LET WIDTH=LEN(TITLE$)+6
0650 LET WIN_X=59-WIDTH,WIN_Y=3
1000 REM " --- Display Option"
1010 GOSUB 5500
1020 IF FKEY=4 THEN GOTO 9900
1030 IF OPTION$="END" THEN GOTO 9900
1040 IF OPTION$="PRIOR" THEN GOTO 9900
1050 IF METHOD=0 THEN GOTO 9900
1090 LET OPTION$[3]=STR(METHOD-1)
4000 REM " --- All done"
4090 GOTO 9900
5500 REM " --- Choose display"
5510 DIM MORE$[1,MAXOPT,1]
5520 CALL "SYC.WA",0,WIDTH,HEIGHT,WIN_X,WIN_Y,TITLE$,NAME$
5530 LET OMAX_ROW=HEIGHT-1,PAGE=1,XMODE=0
5600 REM " --- Lightbar selection"
5610 CALL "SYC.SA",XMODE,OPTLIST$[ALL],MORE$[ALL],OPTION$,PAGE,OMAX_ROW,NAME$,HEIGHT,WIDTH,FKEY
5615 IF FKEY=4 THEN GOTO 5690
5620 IF OPTION$="END" THEN GOTO 5690
5630 IF OPTION$="PRIOR" THEN GOTO 5690
5635 LET METHOD=0
5640 FOR X=1 TO OPTIONS
5650 IF OPTION$<>OPTLIST$[1,X,2] THEN GOTO 5670
5660 LET METHOD=X
5670 NEXT X
5690 RETURN 
9000 REM " --- Standard Error Routine (15May95)"
9010 IF ERR=127 THEN GOTO 9300
9020 CALL "SYC.EA",ERR=9090,EXIT_CTRL,PGM(-2),ERR,TCB(5),E$,E1,E2
9030 IF E1=1 THEN GOTO 9100
9040 IF E1=3 THEN GOTO 9200
9080 PRINT @(0,E2),'CL','CURSOR'("ON"),E$,'LF'
9090 ESCAPE
9100 REM " --- Retry"
9190 RETRY
9200 REM " --- Return"
9290 GOTO 9900
9300 REM " --- Standard Escape Routine"
9310 CALL "SYC.ES",ERR=9350,PGM(-2),TCB(8),E$,E2,V3
9320 IF V3<>127 THEN GOTO 9390
9330 PRINT @(0,E2),'CL','CURSOR'("ON"),E$,'LF'
9350 ESCAPE
9390 RETURN 
9900 REM " --- Return to caller"
9910 IF NAME$<>"" THEN CALL "SYC.WD",NAME$
9950 EXIT 
9999 END
