0010 REM "CSC - Configurator Code Lookup using Relationships
0020 REM "Program CSC.LL"
0022 REM "+-----------------------------------------------------------+"
0024 REM "| ADD+ON Software, Inc. Advantage/V Version 6.0.0 - 15May96 |"
0026 REM "|      Copyright (c) 1996 Open Systems Holdings Corp.       |"
0028 REM "|                  All Rights Reserved                      |"
0030 REM "+-----------------------------------------------------------+"
0031 REM "MAS * DCF * 6/29/99 * WA# 205 * BASIS
0040 REM 
0042 REM "FILE$     : File name to read from (input)"
0044 REM "COLUMN    : V1 Input field column (input)"
0046 REM "ROW       : V2 Input field row (input)"
0048 REM "SELECTION$: Selected key (returned)"
0050 REM "LENGTH    : Code length"
0052 REM "DESCLEN   : Description length"
0054 REM "TITLE$    : Lookup title"
0055 REM "RECORD$   : Starting value"
0056 REM "DFILE$    : File containing description"
0065 REM 
0080 SETERR 9000
0085 SETESC 9000
0090 ENTER FILE$,COLUMN,ROW,SELECTION$,LENGTH,DESCLEN,TITLE$,RECORD$,DFILE$,VFILE$,ITEM$
0100 REM " --- Open/Lock Files"
0110 LET FILES=3
0120 DIM FILES$[FILES],OPTIONS$[FILES],CHANNELS[FILES]
0125 LET FILES$[1]=FILE$,FILES$[2]=DFILE$,FILES$[3]=VFILE$
0140 CALL "SYC.DA",1,1,FILES,FILES$[ALL],OPTIONS$[ALL],CHANNELS[ALL],BATCH,STATUS
0150 IF STATUS>0 THEN GOTO 9900
0160 LET CHANNEL=CHANNELS[1],DCHANNEL=CHANNELS[2],VCHANNEL=CHANNELS[3]
0400 REM " --- Parameters"
0410 LET NUMBER=1
0500 REM " --- Initializations"
0510 DIM DESCRIPTION$[NUMBER],LENGTH[NUMBER],POSITION[NUMBER],FIELDS[NUMBER]
0550 LET FIELDS[0]=2,POSITION[0]=1,LENGTH[0]=LENGTH,X$="Code"
0560 LET FIELDS[1]=2,POSITION[1]=1,LENGTH[1]=DESCLEN,DESCRIPTION$[1]="Description"
1000 REM "
3000 REM " --- Call standard windowed lookup"
3010 LET WIN_Y=ROW+1,WIN_X=77-LENGTH[0]-LENGTH[1]-NUMBER*4,DESCRIPTION$[0]=X$
3020 CALL "CSC.LM",CHANNEL,RECORD$,NUMBER,TITLE$,DESCRIPTION$[ALL],FIELDS[ALL],POSITION[ALL],LENGTH[ALL],WIN_X,WIN_Y,SELECTION$,DCHANNEL,VCHANNEL,ITEM$
3030 REM IF SELECTION$<>"" THEN LET SELECTION$=SELECTION$(LEN(RECORD$)+3)
4000 REM " --- All done"
4090 GOTO 9900
9000 REM " --- Standard Error Routine (15May95)"
9010 IF ERR=127 THEN GOTO 9300
9020 CALL "SYC.EA",ERR=9090,EXIT_CTRL,PGM(-2),ERR,TCB(5),E$,E1,E2
9030 IF E1=1 THEN GOTO 9100
9040 IF E1=3 THEN GOTO 9200
9080 PRINT @(0,E2),'CL','CURSOR'("ON"),E$,'LF'
9090 ESCAPE
9100 REM " --- Retry"
9190 RETRY
9200 REM " --- Return"
9290 GOTO 9900
9300 REM " --- Standard Escape Routine"
9310 CALL "SYC.ES",ERR=9350,PGM(-2),TCB(8),E$,E2,V3
9320 IF V3<>127 THEN GOTO 9390
9330 PRINT @(0,E2),'CL','CURSOR'("ON"),E$,'LF'
9350 ESCAPE
9390 RETURN 
9900 REM " --- Return to calling program"
9910 CLOSE (CHANNEL,ERR=9911)
9920 CLOSE (DCHANNEL,ERR=9921)
9930 CLOSE (VCHANNEL,ERR=9931)
9950 EXIT 
9999 END
