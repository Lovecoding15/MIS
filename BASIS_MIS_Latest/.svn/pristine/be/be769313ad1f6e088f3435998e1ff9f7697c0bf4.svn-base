0330 WOE13A: IOLIST A0$,A1$
0340 WOE23A: IOLIST U0$,U1$,U[ALL]
0350 BMS01A: IOLIST *,*,M4$,M5$,M4,M5
0360 ARS01A: IOLIST *,*,X$,*,*,P7$
0370 WOM10A: IOLIST X1$
0400 REM " --- Parameters"
0410 FIND (SYS01_DEV,KEY="T"+FID(0),DOM=9800)IOL=SYS01T
0420 LET N0$=F0$(16,2),N1$=F4$,N2$="WO",N4$=F5$
