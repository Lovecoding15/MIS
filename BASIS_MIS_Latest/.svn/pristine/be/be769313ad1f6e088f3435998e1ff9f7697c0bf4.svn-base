0450 IF P9$(2,1)<>"Y" THEN GOTO 0485
0455 FIND (SYS01_DEV,KEY=N0$+"AR00",DOM=0485)IOL=ARS01A
0457 LET P7=NUM(X$(1,2))
0485 FIND (SYS01_DEV,KEY=N0$+"IV00",DOM=9800)IOL=IVS01A
0487 DIM P[1],DESC[3]
