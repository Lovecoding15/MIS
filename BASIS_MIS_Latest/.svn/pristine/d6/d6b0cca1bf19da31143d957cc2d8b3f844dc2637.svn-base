0010 REM "SHM - Rate File Parameter Maintenance"
0020 REM "Program SHM.YA"
0022 REM "+-----------------------------------------------------------+"
0024 REM "| ADD+ON Software, Inc. Advantage/V Version 6.0.4 - 07Feb98 |"
0026 REM "|         Copyright (c) 1997 ADD+ON Software Inc.           |"
0028 REM "|                  All Rights Reserved                      |"
0030 REM "+-----------------------------------------------------------+"
0031 REM "14Jan98 JAL: Prevent Error 47/Line 2225 (520)"
0040 REM 
0070 BEGIN 
0080 SETERR 9000
0090 SETESC 9000
0100 REM " --- Open/Lock Files"
0110 LET FILES=2
0120 DIM FILES$[FILES],OPTIONS$[FILES],CHANNELS[FILES]
0130 LET FILES$[1]="SYS-01",FILES$[2]="SHM-10"
0160 CALL "SYC.DA",1,1,FILES,FILES$[ALL],OPTIONS$[ALL],CHANNELS[ALL],BATCH,STATUS
0170 IF STATUS THEN GOTO 9900
0180 LET SYS01_DEV=CHANNELS[1],SHM10_DEV=CHANNELS[2]
0200 REM " --- IOLIST's"
0210 SHM10R: IOLIST A0$(1),A1$(1),A2$(1),A3$(1),A[ALL]
0270 SYS01T: IOLIST X$,F0$,X$,X$,X$,F4$,F5$,F6$
0290 SHS01A: IOLIST I0$,I1$
0400 REM " --- Parameters"
0410 FIND (SYS01_DEV,KEY="T"+FID(0),DOM=9800)IOL=SYS01T
0420 LET N0$=F0$(16,2),N1$=F4$,N2$="SH",N4$=F5$
0430 FIND (SYS01_DEV,KEY=N0$+N2$+"00",DOM=9800)IOL=SHS01A
0500 REM " --- Initializations"
0510 DIM A0$(9),A1$(30),A2$(64),A3$(432),A[36]
0520 DIM J0$(20,"0"),J$(80,"-"),J1$(40," "),J5$(10,"#"),J9$(79," ")
0590 LET I0=0,R$="R",A0$(1,3)=N0$+R$
0700 REM " --- Background"
0750 PRINT 'SB',@(34,3),"Name:",@(27,4),"Description:",@(28,5),"Carrier ID:",@(29,6),"Record ID:",@(16,7),"Zone Width:",@(48,7),"Weight Width:",@(14,8),"Zone Description",@(33,8),"Zone Description",@(52,8),"Zone Description",'SF',
0760 FOR X=1 TO 12
0770 PRINT 'SB',@(11,8+X),X:"##",@(30,8+X),X+12:"##",@(49,8+X),X+24:"##",'SF',
0780 NEXT X
1000 REM " --- File ID"
1005 PRINT 'CF',
1010 LET V0$="S",V1$="CE",V2$="",V3$="",V0=6,V1=40,V2=3,I0=0
1015 LET V4$="Enter A Rate Chart Name (<F3>=Lookup/<Enter>=Next Record)"
1020 GOSUB 7000
1030 ON V3 GOTO 1080,1000,1000,1040,9900
1040 CALL "SHC.LK",V1,V2,"R",0,V$
1050 IF V$="" THEN GOTO 1000
1080 LET A0$(4)=V$
1090 IF FNP$(V$)<>"" THEN GOTO 1200
1100 REM "GET NEXT
1110 LET K$=KEY(SHM10_DEV,END=1180)
1115 READ (SHM10_DEV)
1120 IF POS(N0$+R$=K$)<>1 THEN GOTO 1180
1130 LET A0$=K$
1140 GOTO 1200
1180 READ (SHM10_DEV,KEY=N0$+R$,DOM=1000)
1190 GOTO 1000
1200 REM " --- Retrieve record"
1210 FIND (SHM10_DEV,KEY=A0$,DOM=1400)IOL=SHM10R
1300 REM " --- Display record"
1310 GOSUB 5000
1390 GOTO 4000
1400 REM " --- New record"
1410 CALL "SYC.YN",1,"Is This A New Record",1,V$,V3
1440 ON V3 GOTO 1490,1400,1400,1400,9900
1490 ON POS(V$="YN") GOTO 1400,1500,1000
1500 REM " --- Setup for new record"
1510 DIM A1$(30),A2$(64),A3$(432),A[48]
1600 REM " --- Description"
1610 LET V0$="S",V1$="C",V2$=A1$(1,30),V3$="",V0=30,V1=40,V2=4
1620 LET V4$="Enter Description Of File",I0=1
1630 GOSUB 7000
1640 ON V3 GOTO 1650,1600,3900,1600,3900
1650 LET A1$(1,30)=V$
1690 GOTO 3900
1700 REM " --- Carrier"
1710 LET V0$="S",V1$="C",V2$=A2$(1,1),V3$="",V0=1,V1=40,V2=5
1720 LET V4$="Enter Carrier ID (<F3>=Lookup)"
1730 GOSUB 7000
1740 ON V3 GOTO 1780,1700,3900,1750,3900
1750 CALL "SHC.LK",V1,V2,"D",0,V$
1760 IF V$="" THEN GOTO 1700
1780 LET A2$(1,1)=V$
1790 GOTO 3900
1800 REM " --- Record"
1810 LET V0$="S",V1$="C",V2$=A2$(2,1),V3$="",V0=1,V1=40,V2=6
1820 LET V4$="Enter Record ID"
1830 GOSUB 7000
1840 ON V3 GOTO 1850,1800,3900,1800,3900
1850 LET A2$(2,1)=V$
1890 GOTO 3900
1900 REM " --- Record Description"
1910 LET V0$="S",V1$="C",V2$=A2$(3,30),V3$="",V0=30,V1=42,V2=6
1915 IF A2$(2,1)=" " THEN LET A2$(3,30)=""; GOTO 1960
1920 LET V4$="Enter description of the record"
1930 GOSUB 7000
1940 ON V3 GOTO 1950,1900,3900,1900,3900
1950 LET A2$(3,30)=V$
1960 PRINT @(V1,V2),A2$(3,30),
1990 GOTO 3900
2000 REM " --- Zone width"
2010 LET V0$="N",V1$="C",V2$=STR(A[0]),V3$="##",V0=2,V1=28,V2=7
2020 LET V4$="Enter The Width Of Zones In Characters"
2030 GOSUB 7000
2040 ON V3 GOTO 2050,2000,3900,2000,3900
2050 IF V<1 THEN GOTO 2000
2060 LET A[0]=V
2070 PRINT @(V1,V2),A[0]:"##"
2090 GOTO 3900
2100 REM " --- Zone Number"
2105 LET X=INT(I0/2)-2
2110 LET V0$="N",V1$="C",V2$=STR(A[X]),V3$=J5$(1,A[0]),V0=A[0]
2120 LET V4$="Enter The Number Of Zone "+STR(X),V2=9+MOD(X+11,12)
2125 LET V1=14+INT((X-1)/12)*19
2130 GOSUB 7000
2140 ON V3 GOTO 2150,2100,3900,2100,3900
2150 LET A[X]=V
2160 PRINT @(V1,V2),A[X]:"##"
2190 GOTO 3900
2200 REM " --- Zone Description"
2205 DIM V$(9)
2207 LET X=INT((I0-1)/2)-2
2210 LET V0=9,V1=19+INT((X-1)/12)*19,V2=9+MOD(X+11,12),P=(X-1)*V0+1
2215 IF A[X]=0 THEN GOTO 2250
2220 LET V0$="S",V1$="C",V2$=A3$(P,V0),V3$=""
2223 IF V2$<>J1$(1,V0) THEN GOTO 2230
2225 LET V2$="Zone "+STR(A[X]:J0$(1,A[0])),V2$=J1$(1,V0)+V2$
2227 LET V2$=V2$(LEN(V2$)-V0+1)
2230 LET V4$="Enter Description For Zone "+STR(X)+" (<Enter>='"+V2$+"')"
2235 GOSUB 7000
2240 ON V3 GOTO 2250,2200,3900,2200,3900
2250 LET A3$(P,V0)=V$
2260 PRINT @(V1,V2),A3$(P,V0),
2290 GOTO 3900
2300 REM " --- Weight Width"
2310 LET V0$="Z",V1$="CR",V2$=A2$(33,2),V3$="#0",V0=2,V1=62,V2=7
2320 LET V4$="Enter The Maximum Number Of Digits In The Weight Field"
2330 GOSUB 7000
2340 ON V3 GOTO 2350,2300,3900,2300,3900
2350 LET A2$(33,2)=V$
2360 PRINT @(V1,V2),V,
2390 GOTO 3900
3900 REM " --- Next field"
3915 IF V3=4 THEN GOTO 4000
3920 IF V3<>2 THEN GOTO 3950
3930 IF I0>0 THEN LET I0=I0-1
3940 GOTO 3960
3950 LET I0=I0+1
3960 ON I0 GOTO 1000,1600,1700,1800,1900,2000,2300,2100,2200,2100,2200,2100,2200,2100,2200,2100,2200,2100,2200,2100,2200,2100,2200,2100,2200,2100,2200,2100,2200,2100,2200,2100,2200,2100,2200,2100,2200,2100,2200,2100,2200,2100,2200,2100,2200,2100,2200,2100,2200,2100,2200,2100,2200,2100,2200,2100,2200,2100,2200,2100,2200,2100,2200,2100,2200,2100,2200,2100,2200,2100,2200,2100,2200,2100,2200,2100,2200,2100,2200,3990
3990 LET I0=0
4000 REM " --- Correct?"
4010 LET V4$="Is The Above Information Correct (Y/N/Copy/Delete)?"
4020 LET V0$="S",V1$="CR",V2$="Y",V3$="",V0=6,V2=22,V1=FNV(V4$)
4030 GOSUB 7000
4040 ON V3 GOTO 4050,4000,4000,4000,9900
4060 IF V$="DELETE" THEN GOTO 4200
4065 IF V$="C" THEN LET V$="COPY"
4070 IF V$="COPY" THEN GOTO 4500
4090 ON POS(V$="YN") GOTO 4000,4100,1600
4100 REM " --- Write record"
4110 WRITE (SHM10_DEV,KEY=A0$)IOL=SHM10R
4190 GOTO 1000
4200 REM " --- Remove record"
4210 REMOVE (SHM10_DEV,KEY=A0$,DOM=4220)
4290 GOTO 1000
4500 REM " --- Copy record"
4510 LET V4$="Copy This Record To:",V0$="S",V1$="C",V2$="",V3$=""
4520 LET V0=6,V2=22,V1=FNV(V4$)
4525 GOSUB 7000
4530 ON V3 GOTO 4540,4500,4000,4500,4000
4540 IF V$="" THEN GOTO 4000
4550 LET X$=A0$(4),A0$(4)=V$
4560 WRITE (SHM10_DEV,KEY=A0$)IOL=SHM10R
4570 LET A0$(4)=X$
4590 GOTO 4000
5000 REM " --- Display record"
5010 PRINT @(40,3),A0$(4),@(40,4),A1$(1,30),@(40,5),A2$(1,1),@(40,6),A2$(2,1)," ",A2$(3,30),@(28,7),A[0]:"##",@(62,7),NUM(A2$(33,2)):"##",
5020 FOR X=1 TO 12
5030 PRINT @(14,8+X),A[X]:"##",@(19,8+X),A3$((X-1)*9+1,9),@(33,8+X),A[X+12]:"##",@(38,8+X),A3$((X+12-1)*9+1,9),@(52,8+X),A[X+24]:"##",@(57,8+X),A3$((X+24-1)*9+1,9),
5040 NEXT X
5090 RETURN 
7000 REM " --- Standard Input Routine (15May95)"
7010 CALL "SYC.IA",V0$,V1$,V2$,V3$,V4$,PGM(-2),V0,V1,V2,V$,V,V3,DISPLAY_LEN
7020 IF V3=999 THEN GOTO 7200
7030 IF V3=127 THEN GOTO 7100
7090 RETURN 
7100 REM " --- Escape During Input"
7110 CALL "SYC.ES",ERR=7200,PGM(-2),TCB(8),E$,E2,V3
7120 IF V3<>127 THEN GOTO 7000
7130 PRINT @(0,E2),'CL','CURSOR'("ON"),E$,'LF'
7200 REM " --- Error During Input"
7210 ESCAPE
7290 GOTO 7000
8000 REM " --- Function Definitions"
8080 DEF FNP$(Q$)=CVS(Q$,2)
8090 DEF FNV(Q$)=42+INT(LEN(Q$)/2)
9000 REM " --- Standard Error Routine (15May95)"
9010 IF ERR=127 THEN GOTO 9300
9020 CALL "SYC.EA",ERR=9090,EXIT_CTRL,PGM(-2),ERR,TCB(5),E$,E1,E2
9030 IF E1=1 THEN GOTO 9100
9040 IF E1=3 THEN GOTO 9200
9080 PRINT @(0,E2),'CL','CURSOR'("ON"),E$,'LF'
9090 ESCAPE
9100 REM " --- Retry"
9190 RETRY
9200 REM " --- Return"
9290 GOTO 9900
9300 REM " --- Standard Escape Routine"
9310 CALL "SYC.ES",ERR=9350,PGM(-2),TCB(8),E$,E2,V3
9320 IF V3<>127 THEN GOTO 9390
9330 PRINT @(0,E2),'CL','CURSOR'("ON"),E$,'LF'
9350 ESCAPE
9390 RETURN 
9800 REM " --- Display Parameter record error"
9810 LET LINE_ERR$=LST(PGM(TCB(5)))
9820 CALL "SYC.YA",LINE_ERR$,N2$,ERR
9900 REM " --- Return to menu"
9950 RUN "SYS.AA"
9999 END
