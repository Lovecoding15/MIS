2000 REM "setcharacters.bbx
2600 REM "-----define !CTYPE for german umlauts" 
2610 SET_CHARSET: 
2620 LET CTYPE$=STBL("!CTYPE")
2630 LET BITM$=CTYPE$(1,256),LO_TO_UP$=CTYPE$(257,256),UP_TO_LO$=CTYPE$(513,256)
2635 LET SS$=CHR(225); REM LET SS$="ß"
2640 LET SS=ASC(SS$),BITM$(SS+1,1)=$08$,LO_TO_UP$(SS-1,1)=SS$,UP_TO_LO$(SS-1,1)=SS$
2650 REM LET UP_UML$="ÖÄÜ",LO_UML$="öäü"
2655 LET UP_UML$=CHR(153)+CHR(142)+CHR(154),LO_UML$=CHR(148)+CHR(132)+CHR(129)
2660 FOR X=1 TO 3
2670 LET ASCUP=ASC(UP_UML$(X,1)),ASCLO=ASC(LO_UML$(X,1))
2680 LET BITM$(ASCUP+1,1)=$01$,BITM$(ASCLO+1,1)=$02$
2690 REM let LO_TO_UP$(ASCUP+1,1)=UP_UML$(X,1)
2695 LET LO_TO_UP$(ASCLO+1,1)=UP_UML$(X,1)
2700 LET UP_TO_LO$(ASCUP+1,1)=LO_UML$(X,1)
2705 REM let UP_TO_LO$(ASCUP+1,1)=UP_UML$(X,1)
2710 NEXT X
2720 LET CTYPE$=BITM$+LO_TO_UP$+UP_TO_LO$
2730 LET TMP$=STBL("!CTYPE",CTYPE$)
3000 END
