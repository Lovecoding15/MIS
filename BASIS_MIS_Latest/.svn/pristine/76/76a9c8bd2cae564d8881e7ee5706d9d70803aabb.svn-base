0010 REM "CSM - Product Revision Maintenance (Description)"
0020 REM "Program CSM.DB"
0022 REM "+-----------------------------------------------------------+"
0024 REM "| ADD+ON Software, Inc. Advantage/V Version 6.0.0 - 15May96 |"
0026 REM "|      Copyright (c) 1996 Open Systems Holdings Corp.       |"
0028 REM "|                  All Rights Reserved                      |"
0030 REM "+-----------------------------------------------------------+"
0031 REM "MAS * DCF * WA# 204 * BASIS"
0040 REM 
0070 SETERR 9000
0080 SETESC 9000
0090 PRECISION P[1]
0200 REM " --- IOLIST's"
0500 REM " --- Initializations"
0700 REM " --- Background"
1300 REM " --- Display record"
1310 GOSUB 5000
1390 ON O0 GOTO 4000,4000,4000,2000
2000 REM " --- Description"
2020 LET V0$="S",V1$="CE",V2$=csm04.description$,V3$="",V0=30,V1=22,V2=4
2030 LET V4$="Enter the Description"
2040 GOSUB 7000
2080 LET csm04.description$=V$
2090 GOTO 3900
2100 REM " --- Key, License, or None
2120 LET V0$="S",V1$="CE^",V2$=csm04.key_or_licen$,V3$="KLN",V0=1,V1=22,V2=5
2130 LET V4$="<K>=Key, <L>=License, <N>=None"
2140 GOSUB 7000
2180 LET csm04.key_or_licen$=V$
2190 GOTO 3900
2200 REM " --- Base price percentage to upgrade
2210 v0$="N",v1$="CE",v2$=str(csm04.upgrade_perc),v3$="",v0=6,v1=47,v2=5
2220 v4$="Enter the Percentage of Base Price for Upgrade"
2230 gosub 7000
2240 csm04.upgrade_perc=num(v$)
2250 rem if fpt(csm04.upgrade_perc) then csm04.upgrade_perc=csm04.upgrade_perc*100
2290 goto 3900
2300 REM " --- Release date of next revision
2305 if csm04.product_rev$<>"NXT" then goto 3900
2310 v0$="",v1$="CE^",v2$=csm04.available1$(1,8),v3$="",v0=8,v1=60,v2=5
2320 v4$="Next Rev Release Date (YYYYMMDD)"
2330 gosub 7000
2340 csm04.available1$(1,8)=v$
2390 goto 3900
3900 REM " --- Next field"
3905 IF V3=4 THEN GOTO 3990
3910 IF V3<>2 THEN GOTO 3940
3920 IF I0>0 THEN LET I0=I0-1
3930 GOTO 3950
3940 LET I0=I0+1
3960 ON I0 GOTO 2000,2100,2200,2300,3990
3990 LET I0=0
4000 REM " --- Correct?"
4010 GOSUB 5000
4020 LET V4$="Is The Above Information Correct (Y/N/DELETE)?"
4030 LET V0$="S",V1$="KC^",V2$="",V3$="",V0=6,V1=FNV(V4$),V2=22
4040 GOSUB 7000
4070 ON V3 GOTO 4080,4000,4000,4000,4900
4080 IF V$="DELETE" THEN GOTO 4500
4090 ON POS(V$="YN") GOTO 4000,4100,2000
4100 REM " --- Write"
4120 csm04.available1$=pad(csm04.available1$,10)
4130 csm04.dealer_str$=pad(csm04.dealer_str$,19)
4140 csm04$=field(csm04$)
4150 WRITE record(CSM04_DEV,KEY=csm04.firm_id$+csm04.product_rev$)CSM04$
4190 GOTO 4900
4500 REM " --- Delete"
4510 DIM CHAN[5]
4520 LET CHAN[1]=SYS01_DEV,CHAN[3]=CSM12_DEV,CHAN[4]=CSM13_DEV
4530 LET CHAN[2]=CSM04_DEV
4540 REM LET CHAN[5]=CSM14_DEV
4550 DIM PARAMS$[5]
4560 LET PARAMS$[0]=N0$,PARAMS$[1]=csm04.product_rev$,PARAMS$[2]="D"
4570 LET PARAMS$[3]="Y",PARAMS$[4]="N",PARAMS$[5]="N"
4580 CALL "CSC.DA",CHAN[ALL],PARAMS$[ALL],STATUS
4590 GOTO 4900
4900 REM " --- Run menu overlay"
4990 RUN "CSM.DA"
5000 REM " --- Display"
5010 PRINT @(22,4),csm04.description$
5020 PRINT @(22,5),csm04.key_or_licen$,@(47,5),csm04.upgrade_perc
5030 if csm04.product_rev$="NXT" then print @(60,5),csm04.available1$(1,8)
5090 RETURN 
7000 REM " --- Standard Input Routine (15May95)"
7010 CALL "SYC.IA",V0$,V1$,V2$,V3$,V4$,PGM(-2),V0,V1,V2,V$,V,V3,DISPLAY_LEN
7020 IF V3=999 THEN GOTO 7200
7030 IF V3=127 THEN GOTO 7100
7090 RETURN 
7100 REM " --- Escape During Input"
7110 CALL "SYC.ES",ERR=7200,PGM(-2),TCB(8),E$,E2,V3
7120 IF V3<>127 THEN GOTO 7000
7130 PRINT @(0,E2),'CL','CURSOR'("ON"),E$,'LF'
7200 REM " --- Error During Input"
7210 ESCAPE
7290 GOTO 7000
8000 REM " --- Functions"
8010 DEF FNA$(Q$,Q2$)=STR(MOD((ASC(Q$)-32)*POS(" "<>Q2$(2,1)),100):"00")
8020 DEF FNB$(Q1$)=FNA$(Q1$(2),Q1$)+"/"+FNA$(Q1$(3),Q1$)+"/"+FNA$(Q1$(1),Q1$)
8050 DEF FNV(Q$)=42+INT(LEN(Q$)/2)
8080 DEF FNP$(Q$)=CVS(Q$,2)
9000 REM " --- Standard Error Routine (15May95)"
9010 IF ERR=127 THEN GOTO 9300
9020 CALL "SYC.EA",ERR=9090,EXIT_CTRL,PGM(-2),ERR,TCB(5),E$,E1,E2
9030 IF E1=1 THEN GOTO 9100
9040 IF E1=3 THEN GOTO 9200
9080 PRINT @(0,E2),'CL','CURSOR'("ON"),E$,'LF'
9090 ESCAPE
9100 REM " --- Retry"
9190 RETRY
9200 REM " --- Return"
9290 GOTO 9900
9300 REM " --- Standard Escape Routine"
9310 CALL "SYC.ES",ERR=9350,PGM(-2),TCB(8),E$,E2,V3
9320 IF V3<>127 THEN GOTO 9390
9330 PRINT @(0,E2),'CL','CURSOR'("ON"),E$,'LF'
9350 ESCAPE
9390 RETURN 
9900 RUN "SYS.AA"
9999 END
