0070 BEGIN 
0080 SETERR 9000
0090 SETESC 9000
0100 REM " --- Open/Lock Files"
0105 LET FILES=18
0110 DIM FILES$[FILES],OPTIONS$[FILES],CHANNELS[FILES]
0115 LET FILES$[1]="SYS-01",FILES$[2]="POE-01",FILES$[3]="POE-11"
0120 LET FILES$[4]="POE-21",FILES$[5]="POE-31",FILES$[6]="POM-02"
0125 LET FILES$[7]="POM-04",FILES$[8]="POM-14",FILES$[9]="APM-01"
0135 LET FILES$[10]="APM-05",FILES$[11]="APM-10",FILES$[12]="IVM-01"
0140 LET FILES$[13]="IVM-02",FILES$[14]="IVM-05",FILES$[15]="IVM-10"
0150 CALL "SYC.DA",1,1,15,FILES$[ALL],OPTIONS$[ALL],CHANNELS[ALL],BATCH,STATUS
0160 IF STATUS THEN GOTO 9900
0165 LET SYS01_DEV=CHANNELS[1],POE01_DEV=CHANNELS[2],POE11_DEV=CHANNELS[3]
0170 LET POE21_DEV=CHANNELS[4],POE31_DEV=CHANNELS[5],POM02_DEV=CHANNELS[6]
0175 LET POM04_DEV=CHANNELS[7],POM14_DEV=CHANNELS[8],APM01_DEV=CHANNELS[9]
0180 LET APM05_DEV=CHANNELS[10],APM10_DEV=CHANNELS[11],IVM01_DEV=CHANNELS[12]
0185 LET IVM02_DEV=CHANNELS[13],IVM05_DEV=CHANNELS[14],IVM10_DEV=CHANNELS[15]
0200 REM " --- IOLIST's"
0260 SYS01T: IOLIST X$,F0$,X$,X$,X$,F4$,F5$
0270 IVS01A: IOLIST I0$,I1$,I2$,I3$,I4$,I5$,I6$,I7$,I8$,I9$,I10$
0280 POS01A: IOLIST P0$,P1$,P2$,P3$,P4$
0290 APS01A: IOLIST X$,P1$,P2$,X$,X$,M0$
0300 ARS01A: IOLIST X$,P5$,P6$,X$,X$,P7$
0400 REM " --- Parameters"
0405 DIM I[6],P[3],INFO$[20]
0410 FIND (SYS01_DEV,KEY="T"+FID(0),DOM=9800)IOL=SYS01T
0415 LET N0$=F0$(16,2),N2$="PO",AP$="N",AR$="N",SF$="N"
0420 FIND (SYS01_DEV,KEY=N0$+N2$+"00",DOM=9800)IOL=POS01A
0425 FIND (SYS01_DEV,KEY=N0$+"AP00",DOM=9800)IOL=APS01A
0435 FIND (SYS01_DEV,KEY=N0$+"IV00",DOM=9800)IOL=IVS01A
0440 LET I[0]=NUM(I2$(1,2)),I[1]=NUM(I2$(5,1)),I[2]=NUM(I2$(7,2))
0445 LET I[3]=NUM(I2$(9,2)),I[4]=NUM(I2$(11,2)),I[5]=NUM(I2$(13,2))
0450 LET I[6]=NUM(I2$(3,2)),VENDLEN=NUM(P2$(1,2))
0455 CALL "SYC.VA","AR",INFO$[ALL]
0460 LET AR$=INFO$[20]
0465 IF AR$="Y" THEN CALL "SYC.VA","OP",INFO$[ALL]
0470 LET OP$=INFO$[20]
0500 REM " --- Initializations"
0510 DIM PARAMS[10],PARAMS$[10]
0540 LET O0$="SYS.AA",O0=0,SORTFILE$="POW-01",WORKFILE$="POW-11"
0550 LET SEQUENCE$="N",POMESSAGE$="",RESTART$="N",VENDOR$=""
0560 LET TITLE$="P U R C H A S E   R E Q U I S I T I O N"
0570 LET PARAMS$[0]=N0$,PARAMS$[1]=SEQUENCE$,PARAMS$[2]=POMESSAGE$
0580 LET PARAMS$[3]=RESTART$,PARAMS$[4]=VENDOR$,PARAMS$[5]=M0$
0590 LET PARAMS[0]=VENDLEN,LABEL$="Requisition",TYPE$="R"
0600 REM " --- Additional File Opens"
0610 IF AR$="N" THEN GOTO 0700
0620 FIND (SYS01_DEV,KEY=N0$+"AR00",DOM=9800)IOL=ARS01A
0630 LET CUSTLEN=NUM(P6$(1,2)),FILES$[16]="ARM-01",FILES$[17]="ARM-03"
0640 IF OP$="Y" THEN LET FILES$[18]="ARE-33"
0650 CALL "SYC.DA",1,16,18,FILES$[ALL],OPTIONS$[ALL],CHANNELS[ALL],BATCH,STATUS
0660 IF STATUS THEN GOTO 9900
0670 LET ARM01_DEV=CHANNELS[16],ARM03_DEV=CHANNELS[17],ARE33_DEV=CHANNELS[18]
0800 REM " --- Options"
0810 CALL "POC.IF",TYPE$,APM01_DEV,PARAMS[ALL],PARAMS$[ALL],V$,V3
0820 IF V3=4 THEN GOTO 9900
0830 IF V$<>"Y" THEN GOTO 9900
0840 LET SEQUENCE$=PARAMS$[1],POMESSAGE$=PARAMS$[2]
0850 LET RESTART$=PARAMS$[3],VENDOR$=PARAMS$[4]
4000 REM " --- Run print overlay"
4010 LET POE02_DEV=POE01_DEV,POE12_DEV=POE11_DEV
4020 LET POE22_DEV=POE21_DEV,POE32_DEV=POE31_DEV
4030 LET PLAIN$="Y"; REM "No preprinted req forms
4090 RUN "POR.BB"
9000 REM " --- Standard Error Routine (15May95)"
9010 IF ERR=127 THEN GOTO 9300
9020 CALL "SYC.EA",ERR=9090,EXIT_CTRL,PGM(-2),ERR,TCB(5),E$,E1,E2
9030 IF E1=1 THEN GOTO 9100
9040 IF E1=3 THEN GOTO 9200
9080 PRINT @(0,E2),'CL','CURSOR'("ON"),E$,'LF'
9090 ESCAPE
9100 REM " --- Retry"
9190 RETRY
9200 REM " --- Return"
9290 GOTO 9900
9300 REM " --- Standard Escape Routine"
9310 CALL "SYC.ES",ERR=9350,PGM(-2),TCB(8),E$,E2,V3
9320 IF V3<>127 THEN GOTO 9390
9330 PRINT @(0,E2),'CL','CURSOR'("ON"),E$,'LF'
9350 ESCAPE
9390 RETURN 
9800 REM " --- Display Parameter record error"
9810 LET LINE_ERR$=LST(PGM(TCB(5)))
9820 CALL "SYC.YA",LINE_ERR$,N2$,ERR
9900 REM " --- Return to menu"
9950 RUN "SYS.AA"
9999 END
