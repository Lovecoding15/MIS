1325 IF POS("P"=STATUS$)>0 AND A0$(15,1)="P" THEN GOTO 1400
1330 IF POS("Q"=STATUS$)>0 AND A0$(15,1)="Q" THEN GOTO 1400
1335 IF POS("O"=STATUS$)>0 AND A0$(15,1)="O" THEN GOTO 1400
1350 IF POS("P"=STATUS$)=0 AND A0$(15,1)="P" THEN GOTO 1100
1355 IF POS("Q"=STATUS$)=0 AND A0$(15,1)="Q" THEN GOTO 1100
1360 IF POS("O"=STATUS$)=0 AND A0$(15,1)="O" THEN GOTO 1100
1365 IF POS("C"=STATUS$)>0 AND A0$(15,1)<>"C" THEN GOTO 1100
1370 IF POS("C"=STATUS$)=0 AND A0$(15,1)="C" AND ENDDATE$="" THEN GOTO 1100
1375 IF POS("O"=STATUS$)>0 AND POS("C"=STATUS$)=0 AND A0$(15,1)="C" AND A0$(31,3)<=ENDDATE$ THEN GOTO 1100
1380 IF POS("P"=STATUS$)>0 AND POS("C"=STATUS$)=0 AND A0$(15,1)="C" AND A0$(31,3)<=ENDDATE$ THEN GOTO 1100
1385 IF POS("Q"=STATUS$)>0 AND POS("C"=STATUS$)=0 AND A0$(15,1)="C" AND A0$(31,3)<=ENDDATE$ THEN GOTO 1100
1390 IF POS("C"=STATUS$)>0 AND LEN(ENDDATE$)>0 AND A0$(31,3)>ENDDATE$ THEN GOTO 1100
1400 IF A0$(14,1)<>"I" THEN GOTO 1500
1410 DIM D1$(60)
1420 LET D1$(1)="**Invalid Item**"
1430 FIND (IVM01_DEV,KEY=N0$+A0$(56,20),DOM=1440)IOL=IVM01A
