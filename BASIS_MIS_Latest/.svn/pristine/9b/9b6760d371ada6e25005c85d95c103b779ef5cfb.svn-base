1700 REM " --- Print Closed Values "
1706 IF POS("C"=STATUS$)>0 OR A0$(15,1)="C" THEN GOTO 2000
1710 REM " --- Reduce By Closed Amount "
1715 IF ENDDATE$="" THEN LET A[1]=A[1]-A[3]
1716 IF A0$(31,3)<=ENDDATE$ THEN LET A[1]=A[1]-A[3]
2000 REM " --- Print"
2020 IF L+1>L9 THEN GOSUB 5200
2030 PRINT (7)A0$(5,7),@(18),A0$(12,2),@(22),A0$(14,1),@(25),A0$(15,1),@(45),A[0]:M2$,A[1]:M1$,
2035 IF A0$(15,1)="C" THEN LET STAT$="*Closed*" ELSE IF A0$(15,1)="P" THEN LET STAT$="*Plannd*" ELSE IF A0$(15,1)="Q" THEN LET STAT$="*Quoted*" ELSE GOTO 2060
2050 IF A0$(15,1)="C" THEN PRINT (7)@(8),STAT$,@(36),FNB$(A0$(31,3)),; GOTO 2110
2060 PRINT (7)@(8),FNB$(A0$(16,3)),@(36),FNB$(A0$(22,3)),
2110 PRINT (7)@(27),FNB$(A0$(19,3)),
2120 IF A0$(14,1)="I" THEN PRINT (7)@(46+M2+M1),D1$(1,DESCLEN),@(121-C1-ITEM_LEN),A0$(56,ITEM_LEN),J1$(1,C1),
2130 IF A0$(14,1)="N" THEN PRINT (7)@(121-C1-ITEM_LEN),"Special",J1$(1,10),
2140 IF POS(A0$(14,1)="NR")>0 THEN PRINT (7)@(46+M2+M1),A1$(1,R0),
2200 IF P3$(2,1)<>"Y" THEN GOTO 2300
2220 IF POS(" "<>A0$(34,6))>0 THEN PRINT (7)@(132-9-C1),FNF$(A0$(34,C0),C1$),
2230 IF POS(" "<>A0$(40,7))>0 THEN PRINT (7)@(132-7),A0$(40,7),
2300 PRINT (7)""
2320 LET T[0]=T[0]+A[0],T[1]=T[1]+A[1],U[0]=U[0]+A[0],U[1]=U[1]+A[1],L=L+1,L0=L0+1
2900 GOTO 1100
4000 REM " --- End"
4005 LET T9$="U"
4010 IF P9$<>"W" THEN GOSUB 6000
4020 IF H=0 THEN GOSUB 5000
4030 IF L+1>L9 THEN GOSUB 5000
4040 PRINT (7)@(45+M2),J$(1,M1-1),'LF',
4050 PRINT (7)@(20),"Grand Total: ",@(45+M2),U[1]:M1$
4100 GOTO 9900
5000 REM " --- Heading"
5010 LET L=HEADINGS+1
5020 CALL "SYC.HA",7,HEADINGS$[ALL],HEADINGS,H,H0,WHEN$,CLOCK$,STATUS
5030 IF STATUS>0 THEN EXITTO 9900
5100 PRINT (7)"W.O.",@(10),"Date",@(18),"WO",@(29),"Start",@(38),"Comp",
5110 IF P3$(2,1)="Y" THEN PRINT (7)@(132-9-C1),"Customer",@(132-5),"Order",
5115 IF POS("C"=STATUS$)=0 THEN PRINT (7)@(45+M2-5),"Prod",@(45+M2+M1-8),"Current", ELSE PRINT (7)@(45+M2-6),"Close",@(45+M2+M1-6),"Close",
5120 PRINT (7)'LF',"Number",@(9),"Opened",@(17),"Type Ct St",@(30),"Date",@(38),"Date",@(45+M2-5),"Quan",@(45+M2+M1-6),"Value",@(46+M2+M1),"Description",@(121-C1-ITEM_LEN),"Bill No.",
5130 IF P3$(2,1)="Y" THEN PRINT (7)@(132-9-C1),"Number",@(132-6),"Number",
5140 PRINT (7)'LF'
5150 LET L=L+HEADINGS+2
5190 RETURN 
5200 REM " --- Sub Heading
5210 IF L>L9 THEN GOSUB 5000
5220 ON POS(P9$="TC") GOTO 5290,5240,5270
5240 PRINT (7)'LF',FNH$(T0$+"   "),H5$,'LF'
5250 LET L=L+3
5260 GOTO 5290
5270 PRINT (7)FNF$(T0$(1,C0),C1$)," ",H5$
5280 LET L=L+1
5290 RETURN 
6000 REM " --- First Sub Total
6010 IF T0$="" THEN GOTO 6100
6020 IF L0<=1 THEN PRINT (7)""; LET L=L+1; GOTO 6100
6030 IF L+2>L9 THEN GOSUB 5200
6040 IF P9$="B" THEN PRINT (7)@(45),J$(1,M2-1),
6050 PRINT (7)@(45+M2),J$(1,M1-1),'LF',
