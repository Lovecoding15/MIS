0010 REM "IVP - Parameter Maintenance (Menu Processing)"
0020 REM "Program IVP.AA"
0022 REM "+-----------------------------------------------------------+"
0024 REM "| ADD+ON Software, Inc. Advantage/V Version 6.0.0 - 15May96 |"
0026 REM "|      Copyright (c) 1996 Open Systems Holdings Corp.       |"
0028 REM "|                  All Rights Reserved                      |"
0030 REM "+-----------------------------------------------------------+"
0040 REM 
0050 SETERR 9000
0060 SETESC 9000
0070 ON O0 GOTO 0080,1000,1000
0080 BEGIN 
0085 SETERR 9000
0090 SETESC 9000
0100 REM " --- Open/Lock Files"
0110 LET FILES=10
0120 DIM FILES$[FILES],OPTIONS$[FILES],CHANNELS[FILES]
0125 LET FILES$[1]="SYS-01",FILES$[2]="IVS-10",FILES$[3]="IVM-01"
0130 LET FILES$[4]="IVM-10",FILES$[5]="IVM-07",FILES$[6]="IVT-01"
0135 LET FILES$[7]="IVM-13",FILES$[8]="IVM-15"
0137 LET OPTIONS$[2]="M",OPTIONS$[3]="M"
0140 LET OPTIONS$[4]="M",OPTIONS$[5]="F",OPTIONS$[6]="F",OPTIONS$[7]="M"
0160 CALL "SYC.DA",1,1,8,FILES$[ALL],OPTIONS$[ALL],CHANNELS[ALL],BATCH,STATUS
0165 IF STATUS>0 THEN GOTO 9900
0170 LET SYS01_DEV=CHANNELS[1],IVS10_DEV=CHANNELS[2],IVM01_DEV=CHANNELS[3]
0180 LET IVM10_DEV=CHANNELS[4],IVM07_DEV=CHANNELS[5],IVT01_DEV=CHANNELS[6]
0190 LET IVM13_DEV=CHANNELS[7],IVM15_DEV=CHANNELS[8]
0200 REM " --- IOLIST's"
0260 SYS01T: IOLIST X$,F0$,X$,X$,X$,F4$,F5$
0270 IVS01A: IOLIST A0$,A1$,A2$,A3$,A4$,M0$,M1$,M2$,M3$,M4$,M5$
0275 ARS01A: IOLIST P0$,P1$,P2$,P3$,P4$,M0$
0280 GLS01A: IOLIST G0$,G1$,G2$,G3$,G4$,G5$,G6$,G7$
0300 IVM10A: IOLIST X0$
0310 IVM10F: IOLIST X0$
0320 IVM13A: IOLIST X0$,X1$
0330 ARM10D: IOLIST X0$
0400 REM " --- Parameters"
0405 DIM INFO$[20],P[11],G[4]
0410 FIND (SYS01_DEV,KEY="T"+FID(0),DOM=9800)IOL=SYS01T
0415 LET N0$=F0$(16,2),N2$="IV",O0=2,LS$="N",DI$="N"
0420 FIND (SYS01_DEV,KEY=N0$+"GL00",DOM=9800)IOL=GLS01A
0425 LET G[0]=NUM(G2$(1,2)),G[3]=NUM(G2$(7,2)),G[4]=NUM(G2$(9,2))
0430 LET MINITEM=1,MINLOTSER=1
0435 FIND (SYS01_DEV,KEY=N0$+N2$+"00",DOM=4900)IOL=IVS01A
0440 LET P[0]=NUM(A2$(1,2)),P[1]=NUM(A2$(5,1)),P[2]=NUM(A2$(7,2)),O0=1
0445 LET P[3]=NUM(A2$(9,2)),P[4]=NUM(A2$(11,2)),P[5]=NUM(A2$(13,2))
0450 LET P[6]=NUM(A4$(1,2)),P[7]=FNYY_YEAR(A4$(3,2)),P[8]=NUM(A2$(3,2))
0455 LET P[9]=NUM(A3$(10,2)),P[10]=NUM(A3$(12,2)),P[11]=NUM(A3$(14,2))
0460 IF POS(A3$(17,1)="LS")>0 THEN LET LS$="Y"
0465 CALL "SYC.VA","AR",INFO$[ALL]
0467 IF INFO$[20]<>"Y" THEN GOTO 0480
0470 FIND (SYS01_DEV,KEY=N0$+"AR00",DOM=0480)IOL=ARS01A
0475 LET DI$=P3$(11,1)
0480 CALL "SYC.VA",N2$,INFO$[ALL]
0483 LET GL$=INFO$[9]
0485 IF DI$="Y" THEN LET GL$="N"
0487 CALL "SYC.VA","PO",INFO$[ALL]
0490 LET PO$=INFO$[20]
0600 REM " --- Additional file opens"
0610 IF DI$="Y" THEN LET FILES$[8]="ARM-10"
0615 IF GL$="Y" THEN LET FILES$[9]="GLM-01"
0620 CALL "SYC.DA",1,9,10,FILES$[ALL],OPTIONS$[ALL],CHANNELS[ALL],BATCH,STATUS
0625 IF STATUS THEN GOTO 9900
0630 LET ARM10_DEV=CHANNELS[9],GLM01_DEV=CHANNELS[10]
0800 REM " --- Any existing items or lot/serial numbers?"
0810 READ (IVM01_DEV,KEY=N0$,DOM=0820)
0820 LET K$=KEY(IVM01_DEV,END=0840)
0830 IF POS(N0$=K$)=1 THEN LET MINITEM=P[0]
0840 IF IVM07_DEV=0 THEN GOTO 0880
0850 READ (IVM07_DEV,KEY=N0$,DOM=0860)
0860 LET K$=KEY(IVM07_DEV,END=0880)
0865 IF POS(N0$=K$)<>1 THEN GOTO 0880
0870 LET MINLOTSER=P[2]
0875 GOTO 0900
0880 IF IVT01_DEV=0 THEN GOTO 0900
0885 READ (IVT01_DEV,KEY=N0$,DOM=0890)
0890 LET K$=KEY(IVT01_DEV,END=0900)
0895 IF POS(N0$=K$)=1 THEN LET MINLOTSER=P[2]
1000 REM " --- Process submenu"
1010 DIM MENUS$[1]
1020 LET MENUS=1,MENUS$[1]="IVP.AA",WIN_X=0,WIN_Y=4
1030 CALL "SYC.OA",MENUS,MENUS$[ALL],WIN_X,WIN_Y,DESCRIPTION$,SELECTION$
1040 IF SELECTION$="" THEN GOTO 9900
1050 PRINT @(0,3),'CE',
1060 IF SELECTION$="SYC.NS" THEN GOTO 1100
1090 RUN SELECTION$,ERR=1000
1100 REM " --- Sequence Numbers"
1110 DIM TYPE$[1],PROMPT$[1],LENGTH[1],MASK$[1]
1120 LET TYPE$[0]="Z",PROMPT$[0]="Next Item Number",LENGTH[0]=P[0]
1170 LET NUMBER=0,KEYVAL$=N0$+"N",CHANNEL=IVS10_DEV,LINE=4
1180 CALL "SYC.NS",CHANNEL,LINE,NUMBER,TYPE$[ALL],PROMPT$[ALL],LENGTH[ALL],MASK$[ALL],KEYVAL$
1190 GOTO 1000
4900 REM " --- Run 1st Overlay for new records"
4990 RUN "IVP.AB"
8145 REM " --- FNYY21_YY$ Un-Convert 21st Century 2-Char Year to 2-Char Year"
8150 DEF FNYY21_YY$(Q1$)
8155 LET Q3$=" 01234567890123456789",Q1$(1,1)=Q3$(POS(Q1$(1,1)=" 0123456789ABCDEFGHIJ"))
8160 RETURN Q1$
8165 FNEND
8170 REM " --- FNYY_YEAR Convert 2-Char Year to 21st Century Numeric Year"
8175 DEF FNYY_YEAR(Q1$)
8180 LET Q=NUM(FNYY21_YY$(Q1$)); IF Q<50 THEN LET Q=Q+100
8185 RETURN Q
8190 FNEND
9000 REM " --- Standard Error Routine (15May95)"
9010 IF ERR=127 THEN GOTO 9300
9020 CALL "SYC.EA",ERR=9090,EXIT_CTRL,PGM(-2),ERR,TCB(5),E$,E1,E2
9030 IF E1=1 THEN GOTO 9100
9040 IF E1=3 THEN GOTO 9200
9080 PRINT @(0,E2),'CL','CURSOR'("ON"),E$,'LF'
9090 ESCAPE
9100 REM " --- Retry"
9190 RETRY
9200 REM " --- Return"
9290 GOTO 9900
9300 REM " --- Standard Escape Routine"
9310 CALL "SYC.ES",ERR=9350,PGM(-2),TCB(8),E$,E2,V3
9320 IF V3<>127 THEN GOTO 9390
9330 PRINT @(0,E2),'CL','CURSOR'("ON"),E$,'LF'
9350 ESCAPE
9390 RETURN 
9800 REM " --- Display Parameter record error"
9810 LET LINE_ERR$=LST(PGM(TCB(5)))
9820 CALL "SYC.YA",LINE_ERR$,N2$,ERR
9900 RUN "SYS.AA"
9999 END
