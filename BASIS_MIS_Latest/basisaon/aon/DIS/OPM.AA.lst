0040 REM 
0070 BEGIN 
0080 SETERR 9000
0090 SETESC 9000
0100 REM " --- Open/Lock Files "
0110 LET FILES=3
0120 DIM FILES$[FILES],OPTIONS$[FILES],CHANNELS[FILES]
0130 LET FILES$[1]="ARM-07",FILES$[2]="IVM-10",FILES$[3]="SYS-01"
0140 CALL "SYC.DA",1,1,3,FILES$[ALL],OPTIONS$[ALL],CHANNELS[ALL],BATCH,STATUS
0150 IF STATUS>0 THEN GOTO 9900
0160 LET ARM07_DEV=CHANNELS[1],IVM10_DEV=CHANNELS[2],SYS01_DEV=CHANNELS[3]
0200 REM "IOLISTS"
0210 ARM07A: IOLIST A0$,A1$,A2$
0220 IVM10C: IOLIST X0$
0270 SYS01T: IOLIST X$,F0$,X$,X$,X$,F4$,F5$
0400 REM " --- Paramaters "
0410 FIND (SYS01_DEV,KEY="T"+FID(0),DOM=9900)IOL=SYS01T
0420 LET N0$=F0$(16,2),N1$=F4$,N4$=F5$
0430 FIND (SYS01_DEV,KEY=N0$+"AR00",DOM=9800)
0500 REM " --- Initialize Data "
0510 DIM A1$(35),A2$(41)
0540 LET K0=1,K9=6,A0$=N0$
0550 LET EH$="Enter The Hex Characters "
0700 REM " --- Background"
0710 PRINT 'SB',@(27,3),"Terminal ID:",@(14,4),"Terminal Transparency On: ",@(13,5),"Terminal Transparency Off:",@(22,6),"Cash Box Port ID:",@(22,7),"Hex Code To Open:",@(17,8),"Number Of Repetitions:",@(18,10),"Skip Warehouse Entry:",@(21,11),"Default Warehouse:",@(16,13),"Valid Counter Printers:",@(14,14),"Counter Printer Selected:",@(16,16),"Valid Receipt Printers:",@(14,17),"Receipt Printer Selected:",@(15,18),"Receipt Printer Port ID:",'SF',
0900 REM " --- Initialize File "
0990 READ (ARM07_DEV,KEY=N0$,DOM=1000)
1000 REM " --- Key "
1010 PRINT 'CF',
1020 LET V2$=N0$+FID(0),V2$=KEY(ARM07_DEV,END=1030)
1030 IF POS(N0$=V2$)<>1 THEN LET V2$=""
1040 IF V2$<>"" THEN LET V2$=V2$(3)
1050 LET V0$="S",V1$="ECK",V0=4,V1=40,V2=3,I0=0,O9=0,V4$="Enter A Valid Terminal ID"
1060 GOSUB 7000
1070 IF V3=4 THEN GOTO 4500
1080 IF V$="" THEN GOTO 0900
1090 LET A0$=N0$+V$
1200 REM " --- Find Key "
1220 FIND (ARM07_DEV,KEY=A0$,DOM=1400)IOL=ARM07A
1300 REM "DISPLAY"
1320 GOSUB 5000
1390 GOTO 4000
1400 REM "NEW RECORD"
1410 CALL "SYC.YN",1,"Is This A New Record",1,V$,V3
1420 ON V3 GOTO 1430,1400,1400,1400,1000
1430 ON POS(V$="YN") GOTO 1400,1500,1000
1500 REM "SET-UP"
1510 DIM A1$(35),A2$(48)
1520 LET A2$(17,1)="N"
1590 GOTO 2000
2000 REM "TRANSPARENCY ON
2010 LET V0$="S",V1$="C",V2$=A1$(1,8),V3$="",V0=8,V1=40,V2=4,I0=0,O0=0,O9=1
2020 LET V4$=EH$+"To Turn The Aux Port On And Set Transparency Mode"
2040 GOSUB 7000
2045 ON V3 GOTO 2050,2000,3900,2000,3900
2050 CALL "SYC.HX",V$,STATUS
2060 IF STATUS THEN GOTO 2000
2070 LET A1$(1,8)=V$
2090 GOTO 3900
2100 REM "TRANSPARENCY OFF
2110 LET V0$="S",V1$="C",V2$=A1$(9,8),V3$="",V0=8,V1=40,V2=5
2120 LET V4$=EH$+"To Turn The Aux Port Off"
2140 GOSUB 7000
2145 ON V3 GOTO 2150,2100,3900,2100,3900
2150 CALL "SYC.HX",V$,STATUS
2160 IF STATUS THEN GOTO 2100
2170 LET A1$(9,8)=V$
2190 GOTO 3900
2200 REM "CASH BOX PORT
2210 LET V0$="S",V1$="C",V2$=A1$(17,2),V3$="",V0=2,V1=40,V2=6
2220 LET V4$="Enter The BASIC Device Alias For The Cash Box Port"
2240 GOSUB 7000
2245 ON V3 GOTO 2250,2200,3900,2200,3900
2250 CALL "SYC.HX",V$,STATUS
2260 IF STATUS THEN GOTO 2200
2270 LET A1$(17,2)=V$
2290 GOTO 3900
2300 REM "HEX CODE TO OPEN
2310 LET V0$="S",V1$="C",V2$=A1$(21,8),V3$="",V0=8,V1=40,V2=7
2320 LET V4$=EH$+"To Open The Cash Drawer"
2340 GOSUB 7000
2345 ON V3 GOTO 2350,2300,3900,2300,3900
2350 CALL "SYC.HX",V$,STATUS
2360 IF STATUS THEN GOTO 2300
2370 LET A1$(21,8)=V$
2390 GOTO 3900
2400 REM "# OF REPS
2410 LET V0$="Z",V1$="C",V2$=A1$(29,4),V0=4,V1=40,V2=8
2420 LET V4$="Enter Number Of Repetitions Of Hex Code To Be Sent"
2440 GOSUB 7000
2450 ON V3 GOTO 2460,2400,3900,2400,3900
2460 LET A1$(29,4)=V$
2490 GOTO 3900
2500 REM "COUNTER PRINTER PORTS
2510 LET V0$="S",V1$="C",V2$=A2$(1,8),V3$="",V0=8,V1=40,V2=13
2520 LET V4$="Enter Valid Counter Printer ID's"
2540 GOSUB 7000
2545 ON V3 GOTO 2550,2500,3900,2500,3900
2550 IF MOD(LEN(V$),2) THEN GOTO 2500
2560 LET A2$(1,8)=V$
2590 GOTO 3900
2600 REM "PRINTER SELECTED
2610 LET V0$="S",V1$="C",V2$=A2$(15,2),V3$="",V0=2,V1=40,V2=14
2620 LET V4$="Enter The Default Counter Printer ID For This Terminal"
2625 IF FNP$(A2$(1,8))="" THEN GOTO 2680
2640 GOSUB 7000
2645 ON V3 GOTO 2650,2600,3900,2600,3900
2650 IF POS(V$=A2$(1,8),2)=0 THEN GOTO 2600
2660 LET A2$(15,2)=V$
2670 GOTO 3900
2680 LET A2$(15,2)=""
2685 PRINT @(V1,V2),'CL',
2690 GOTO 3900
2700 REM "RECEIPT PRINTER PORTS
2710 LET V0$="S",V1$="C",V2$=A2$(19,8),V3$="",V0=8,V1=40,V2=16
2720 LET V4$="Enter Valid Receipt Printer ID's"
2730 GOSUB 7000
2735 ON V3 GOTO 2740,2700,3900,2700,3900
2740 IF MOD(LEN(V$),2) THEN GOTO 2700
2750 LET A2$(19,8)=V$
2790 GOTO 3900
2800 REM "RECPT PRINTER ID
2810 LET V0$="S",V1$="C",V2$=A2$(27,2),V3$="",V0=2,V1=40,V2=17
2820 LET V4$="Enter Receipt Printer ID"
2825 IF FNP$(A2$(19,8))="" THEN GOTO 2870
2840 GOSUB 7000
2845 ON V3 GOTO 2850,2800,3900,2800,3900
2850 IF POS(V$=A2$(19,8),2)=0 THEN GOTO 2800
2860 LET A2$(27,2)=V$
2865 GOTO 3900
2870 LET A2$(27,2)=""
2880 PRINT @(V1,V2),'CL',
2890 GOTO 3900
3000 REM "RECPT PRINTER PORT #
3010 LET V0$="S",V1$="C",V2$=A2$(29,2),V3$="",V0=2,V1=40,V2=18
3020 LET V4$="Enter The Receipt Printer Port ID"
3030 GOSUB 7000
3040 ON V3 GOTO 3050,3000,3900,3000,3900
3050 LET A2$(29,2)=V$
3090 GOTO 3900
3300 REM "SKIP WAREHOUSE
3310 LET V0$="Y",V1$="C",V2$=A2$(31,1),V3$="YN",V0=1,V1=40,V2=10
3320 LET V4$="Allow User To Skip Warehouse Entry In Order/Invoice Entry (Y/N)?"
3325 IF POS(V2$="YN")=0 THEN LET V2$="N"
3330 GOSUB 7000
3340 ON V3 GOTO 3350,3300,3900,3300,3900
3350 LET A2$(31,1)=V$
3390 GOTO 3900
3400 REM "DEF WAREHOUSE
3410 LET V0$="S",V1$="C",V2$=A2$(32,2),V3$="",V0=2,V1=40,V2=11
3415 LET V4$="Enter The Default Warehouse For This Terminal ("
3420 IF A2$(31,1)="N" THEN LET V4$=V4$+"<F1>=None/"
3425 LET V4$=V4$+"<F3>=Lookup)"
3430 GOSUB 7000
3435 ON V3 GOTO 3440,3440,3900,3440,3900
3440 IF V3=1 AND A2$(31,1)="N" THEN LET A2$(32,2)=""; PRINT @(V1,V2),'CL',"None",; GOTO 3480
3445 IF V3=3 THEN CALL "IVC.LK",3,V1,V2,V$
3450 LET A2$(32,2)=V$
3460 FIND (IVM10_DEV,KEY=N0$+"C"+A2$(32,2),DOM=3420)IOL=IVM10C
3470 PRINT @(40,11),X0$(4,2)," ",X0$(6,24),
3490 GOTO 3900
3900 REM "NEXT FIELD"
3905 IF V3=4 THEN GOTO 4000
3910 IF V3<>2 THEN GOTO 3940
3920 IF I0>0 THEN LET I0=I0-1
3930 GOTO 3950
3940 LET I0=I0+1
3960 ON I0 GOTO 2000,2100,2200,2300,2400,3300,3400,2500,2600,2700,2800,3000,3990
3990 LET I0=K0
4000 REM "OPTIONS"
4010 LET V4$="Is The Above Information Correct (Y/N/Delete)?"
4020 LET V0$="S",V1$="C",V2$="Y",V3$="",V0=6,V1=FNV(V4$),V2=22
4025 GOSUB 7000
4030 IF V$="DELETE" THEN GOTO 4200
4040 ON V3 GOTO 4050,4000,4000,4000,9900
4050 IF V$="" THEN IF O9=0 THEN GOTO 1000
4090 ON POS(V$="YN") GOTO 4000,4100,2000
4100 REM "WRITE"
4120 WRITE (ARM07_DEV,KEY=A0$)IOL=ARM07A
4190 GOTO 1000
4200 REM "DELETE"
4220 REMOVE (ARM07_DEV,KEY=A0$,DOM=4230)
4290 GOTO 1000
4500 REM "PRINT"
4520 LET V4$="Do You Wish To Print A List Of All Records",V0=1,V1=67,V2=22
4530 CALL "SYC.YN",1,V4$,1,V$,V3
4540 ON POS(V$="YN") GOTO 4500,4550,9900
4560 LET O0=1
4580 RUN "OPM.AB"
5000 REM " --- Display"
5010 DIM X0$(32)
5020 FIND (IVM10_DEV,KEY=N0$+"C"+A2$(32,2),DOM=5030)IOL=IVM10C
5030 PRINT @(40,4),A1$(1,8),@(40,5),A1$(9,8),@(40,6),A1$(17,2),@(40,7),A1$(21,8),@(40,8),A1$(29,4),@(40,10),A2$(31,1),@(40,11),A2$(32,2)," ",X0$(6,24),@(40,13),A2$(1,8),@(40,14),A2$(15,2),@(40,16),A2$(19,8),@(40,17),A2$(27,2),@(40,18),A2$(29,2),
5050 IF A2$(31,1)="N" AND A2$(32,2)="  " THEN PRINT @(40,11),"None"
5090 RETURN 
7000 REM " --- Standard Input Routine (15May95)"
7010 CALL "SYC.IA",V0$,V1$,V2$,V3$,V4$,PGM(-2),V0,V1,V2,V$,V,V3,DISPLAY_LEN
7020 IF V3=999 THEN GOTO 7200
7030 IF V3=127 THEN GOTO 7100
7090 RETURN 
7100 REM " --- Escape During Input"
7110 CALL "SYC.ES",ERR=7200,PGM(-2),TCB(8),E$,E2,V3
7120 IF V3<>127 THEN GOTO 7000
7130 PRINT @(0,E2),'CL','CURSOR'("ON"),E$,'LF'
7200 REM " --- Error During Input"
7210 ESCAPE
7290 GOTO 7000
8000 REM " --- Functions"
8080 DEF FNP$(Q$)=CVS(Q$,2)
8090 DEF FNV(Q$)=42+INT(LEN(Q$)/2)
9000 REM " --- Standard Error Routine (15May95)"
9010 IF ERR=127 THEN GOTO 9300
9020 CALL "SYC.EA",ERR=9090,EXIT_CTRL,PGM(-2),ERR,TCB(5),E$,E1,E2
9030 IF E1=1 THEN GOTO 9100
9040 IF E1=3 THEN GOTO 9200
9080 PRINT @(0,E2),'CL','CURSOR'("ON"),E$,'LF'
9090 ESCAPE
9100 REM " --- Retry"
9190 RETRY
9200 REM " --- Return"
9290 GOTO 9900
9300 REM " --- Standard Escape Routine"
9310 CALL "SYC.ES",ERR=9350,PGM(-2),TCB(8),E$,E2,V3
9320 IF V3<>127 THEN GOTO 9390
9330 PRINT @(0,E2),'CL','CURSOR'("ON"),E$,'LF'
9350 ESCAPE
9390 RETURN 
9800 REM " --- Display Parameter record error"
9810 LET LINE_ERR$=LST(PGM(TCB(5)))
9820 CALL "SYC.YA",LINE_ERR$,N2$,ERR
9900 RUN "SYS.AA"
9999 END
