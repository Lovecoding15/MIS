0010 REM "IVC - Inventory Activity Type Lookup"
0020 REM "Program IVC.LC"
0022 REM "+-----------------------------------------------------------+"
0024 REM "| ADD+ON Software, Inc. Advantage/V Version 6.0.0 - 15May96 |"
0026 REM "|      Copyright (c) 1996 Open Systems Holdings Corp.       |"
0028 REM "|                  All Rights Reserved                      |"
0030 REM "+-----------------------------------------------------------+"
0040 REM 
0045 REM "SELECTION$  : Activity Type (returned)"
0075 REM 
0080 SETERR 9000
0085 SETESC 9000
0090 ENTER SELECTION$
0400 REM " --- Parameters"
0415 LET PAGES=INT((DSZ-5000)/4000),MAXROW=15,MAXPAGE=21
0420 IF PAGES<3 THEN GOTO 9900
0425 IF PAGES>MAXPAGE THEN LET PAGES=MAXPAGE
0500 REM " --- Initializations"
0540 LET WIDTH=57,HEIGHT=21,WIN_X=23,WIN_Y=2,MAX_ROW=HEIGHT-5
0550 LET TYPES$="RECBLTSLDISSADJXFIXFORETENDBEGIN OUTUSEXFROTH"
0560 LET PAGE=1,X1=1,SELECTION$="",TYPES=LEN(TYPES$)
0600 REM " --- Window arrays"
0610 DIM HEADING$(WIDTH-2),FOOTING$(WIDTH-2)
0620 DIM LLIST$[PAGES,MAX_ROW,5],MORE$[PAGES,MAX_ROW,5]
0630 LET HEADING$(2)="Code   Description",HEADING$(43)="Column Title"
0640 LET FOOTING$(2)="F4=End",TITLE$="Inventory Activity Types"
0700 REM " --- Background"
0710 CALL "SYC.WA",0,WIDTH,HEIGHT,WIN_X,WIN_Y,TITLE$,NAME$
0720 PRINT @(0,0),'SB','BR',HEADING$,@(0,HEIGHT-3),FOOTING$,'ER','SF',
1000 REM " --- Load up standard types"
1010 FOR X=1 TO TYPES STEP 3
1020 LET V$=TYPES$(X,3)
1030 CALL "IVC.FA",V$,DESCRIPTION$,COLUMN$,STATUS
1040 DIM G1$(WIDTH-2)
1050 LET G1$(2)=V$,G1$(9)=DESCRIPTION$,G1$(43)=COLUMN$
1060 LET LLIST$[PAGE,X1,1]=G1$,LLIST$[PAGE,X1,2]=V$,X1=X1+1
1090 NEXT X
2000 REM " --- Display last page"
2010 LET MODE=5,SELECTION$="|EOF"
2020 CALL "SYC.SA",MODE,LLIST$[ALL],MORE$[ALL],SELECTION$,PAGE,MAX_ROW,NAME$,HEIGHT,WIDTH,FKEY
4000 REM " --- All done"
4090 GOTO 9900
9000 REM " --- Standard Error Routine (15May95)"
9010 IF ERR=127 THEN GOTO 9300
9020 CALL "SYC.EA",ERR=9090,EXIT_CTRL,PGM(-2),ERR,TCB(5),E$,E1,E2
9030 IF E1=1 THEN GOTO 9100
9040 IF E1=3 THEN GOTO 9200
9080 PRINT @(0,E2),'CL','CURSOR'("ON"),E$,'LF'
9090 ESCAPE
9100 REM " --- Retry"
9190 RETRY
9200 REM " --- Return"
9250 SETERR 9000
9290 GOTO 9900
9300 REM " --- Standard Escape Routine"
9310 CALL "SYC.ES",ERR=9350,PGM(-2),TCB(8),E$,E2,V3
9320 IF V3<>127 THEN GOTO 9390
9330 PRINT @(0,E2),'CL','CURSOR'("ON"),E$,'LF'
9350 ESCAPE
9390 RETURN 
9900 REM " --- Return to calling program"
9905 IF FKEY=4 THEN LET SELECTION$="END"
9940 CALL "SYC.WD",NAME$
9945 IF SELECTION$="END" THEN LET SELECTION$=""
9950 EXIT 
9999 END
