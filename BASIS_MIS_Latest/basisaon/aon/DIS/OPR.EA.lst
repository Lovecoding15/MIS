0030 REM "+-----------------------------------------------------------+"
0040 REM 
0050 BEGIN 
0085 SETESC 9000
0090 SETERR 9000
0095 PRECISION 4
0100 REM " --- Open/Lock Files "
0110 LET FILES=4
0120 DIM FILES$[FILES],OPTIONS$[FILES],CHANNELS[FILES]
0130 LET FILES$[1]="ART-53",FILES$[2]="ART-03",FILES$[3]="ARM-01"
0140 LET FILES$[4]="SYS-01"
0150 CALL "SYC.DA",1,1,4,FILES$[ALL],OPTIONS$[ALL],CHANNELS[ALL],BATCH,STATUS
0160 IF STATUS>0 THEN GOTO 9900
0170 LET ART53_DEV=CHANNELS[1],ART03_DEV=CHANNELS[2],ARM01_DEV=CHANNELS[3]
0180 LET SYS01_DEV=CHANNELS[4]
0200 REM " --- IOLISTS"
0260 SYS01T: IOLIST X$,F0$,X$,X$,X$,F4$,F5$
0270 ARS01A: IOLIST P0$,P1$,P2$,P3$,P4$,M0$,M1$,M2$,M3$
0280 GLS01A: IOLIST X$,G1$,G2$,G3$
0400 REM " --- Parameters "
0410 FIND (SYS01_DEV,KEY="T"+FID(0),DOM=9800)IOL=SYS01T
0420 LET N0$=F0$(16,2),N1$=F4$,N2$="AR",N3$=F5$
0430 FIND (SYS01_DEV,KEY=N0$+N2$+"00",DOM=9800)IOL=ARS01A
0435 FIND (SYS01_DEV,KEY=N0$+"GL00",DOM=9800)IOL=GLS01A
0440 DIM P[3],V[11]
0450 LET P[0]=NUM(P2$(1,2))
0500 REM " --- Initializations"
0550 LET P9$="",P8$=""
0700 REM " --- Background "
0720 CALL "SYC.WC",1,0,80,0,0,4,0
0730 CALL "SYC.WC",1,0,80,0,0,6,0
0750 PRINT @(0,3),'CL','SB',@(24,3),"Beginning Date: ",@(27,5),"Ending Date: ",'SF',
1000 REM " --- From Date "
1010 PRINT 'SF',
1020 LET V0$="D",V1$="CE",V2$=P8$,V4$="Enter The Starting Date (<F1>=First)",V0=8,V1=40,V2=3
1030 GOSUB 7000
1050 IF V3=4 THEN GOTO 9900
1060 IF V3=1 THEN LET V$=""
1070 LET P8$=V$
1080 IF P8$="" THEN PRINT @(40,3),"First",'CL',
1200 REM " --- Through Date "
1220 LET V0$="D",V1$="C",V2$=P9$,V4$="Enter The Ending Date (<F1>=Last)",V0=8,V1=40,V2=5
1230 GOSUB 7000
1240 IF V3=2 THEN GOTO 1000
1250 IF V3=1 THEN LET V$=""
1260 LET P9$=V$
1270 IF P9$="" THEN PRINT @(40,5),"Last",'CL',
4000 REM " --- Correct?"
4010 LET V4$="Is The Above Information Correct"
4025 CALL "SYC.YN",1,V4$,2,V$,V3
4040 IF V3=4 THEN GOTO 9900
4080 ON POS(V$="YN") GOTO 4000,4090,1000
4090 RUN "OPR.EB"
7000 REM " --- Standard Input Routine (15May95)"
7010 CALL "SYC.IA",V0$,V1$,V2$,V3$,V4$,PGM(-2),V0,V1,V2,V$,V,V3,DISPLAY_LEN
7020 IF V3=999 THEN GOTO 7200
7030 IF V3=127 THEN GOTO 7100
7090 RETURN 
7100 REM " --- Escape During Input"
7110 CALL "SYC.ES",ERR=7200,PGM(-2),TCB(8),E$,E2,V3
7120 IF V3<>127 THEN GOTO 7000
7130 PRINT @(0,E2),'CL','CURSOR'("ON"),E$,'LF'
7200 REM " --- Error During Input"
7210 ESCAPE
7290 GOTO 7000
8000 REM "FUNCTIONS"
8080 DEF FNV(Q$)=42+INT(LEN(Q$)/2)
9000 REM " --- Standard Error Routine (15May95)"
9010 IF ERR=127 THEN GOTO 9300
9020 CALL "SYC.EA",ERR=9090,EXIT_CTRL,PGM(-2),ERR,TCB(5),E$,E1,E2
9030 IF E1=1 THEN GOTO 9100
9040 IF E1=3 THEN GOTO 9200
9080 PRINT @(0,E2),'CL','CURSOR'("ON"),E$,'LF'
9090 ESCAPE
9100 REM " --- Retry"
9190 RETRY
9200 REM " --- Return"
9290 GOTO 9900
9300 REM " --- Standard Escape Routine"
9310 CALL "SYC.ES",ERR=9350,PGM(-2),TCB(8),E$,E2,V3
9320 IF V3<>127 THEN GOTO 9390
9330 PRINT @(0,E2),'CL','CURSOR'("ON"),E$,'LF'
9350 ESCAPE
9390 RETURN 
9800 REM " --- Display Parameter record error"
9810 LET LINE_ERR$=LST(PGM(TCB(5)))
9820 CALL "SYC.YA",LINE_ERR$,N2$,ERR
9900 RUN "SYS.AA"
9999 END
