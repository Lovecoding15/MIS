3020 FIND (IVM10_DEV,KEY=C0$(1,10),DOM=3400)IOL=IVM10E
3030 LET PRICE=LISTPRICE*(100-C[10])/100
3040 LET DESCRIPTION$="Pricing Table - "+FNP$(C0$(11,20))
3100 REM " --- Method for pricing?"
3110 LET X$=" (Unknown Pricing Method)"
3120 IF C0$(31,1)="C" THEN LET X$=" (Mark-Up Over Cost)"
3130 IF C0$(31,1)="L" THEN LET X$=" (Mark-Down From List)"
3140 IF C0$(31,1)="M" THEN LET X$=" (Margin Over Cost)"
3150 LET DESCRIPTION$=DESCRIPTION$+X$
3200 REM " --- Display pricing table"
3205 PRINT @(0,15),'CL',@(FNC(DESCRIPTION$)),DESCRIPTION$,
3210 FOR X=0 TO 4
3220 IF C[X]=0 AND C[X+10]=0 THEN GOTO 3250
3230 LET PRICE=0,PERCENT=C[X+10]
3235 GOSUB 6100
3240 PRINT @(O[0],X+17),C[X]:M2$,@(O[1]),PERCENT:M8$,@(O[2]),PRICE:M4$,
3250 IF C[X+5]=0 AND C[X+15]=0 THEN GOTO 3290
3260 LET PRICE=0,PERCENT=C[X+15]
3270 GOSUB 6100
3280 PRINT @(O[3],X+17),C[X+5]:M2$,@(O[4]),PERCENT:M8$,@(O[5]),PRICE:M4$,
3290 NEXT X
3300 REM 
3390 GOTO 3500
3400 REM " --- No price table record"
3410 LET V1$="No Pricing Table Entry Exists For This Item Class And"
3420 LET V2$="Customer Price Code (<Enter>=Continue)"
3430 GOSUB 6900
3500 REM " --- Contract Pricing "
3510 LET U0$(1)=N0$+A0$(3)+B0$
3520 FIND (IVM06_DEV,KEY=U0$,DOM=4000)IOL=IVM06A
3530 LET V4$="This Customer Has Contract Pricing For This Item. Display It"
