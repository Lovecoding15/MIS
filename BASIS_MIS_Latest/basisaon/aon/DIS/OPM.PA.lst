1120 FIND (ARM02_DEV,KEY=D0$,DOM=1050)IOL=ARM02A
1130 LET Y0$(1)=N0$+"M"+D1$(24,4)+"(Not On File)"
1140 FIND (ARM10_DEV,KEY=Y0$(1,7),DOM=1150)IOL=ARM10M
