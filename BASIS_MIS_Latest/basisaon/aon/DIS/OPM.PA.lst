1190 GOTO 1500
1200 REM " --- Price Code"
1210 PRINT 'CF',
1220 LET Y0$(1)="",A0$(3)=""
1230 LET V4$="Enter Price Code (<F2>=Customer/<F3>=Lookup)"
1240 LET V0$="S",V1$="CE",V2$=Y0$(4,4),V3$="",V0=4,V1=14,V2=10
1250 GOSUB 7000
1260 ON V3 GOTO 1300,1200,1000,1270,9900
1270 GOSUB 6000
1280 IF V$="" THEN GOTO 1200
1300 REM " --- Read price code"
1310 LET Y0$(1)=N0$+"M"+V$
1320 FIND (ARM10_DEV,KEY=Y0$(1,7),DOM=1200)IOL=ARM10M
1330 PRINT @(14,10),Y0$(4,4)," ",Y0$(8,20),
1500 REM " --- Warehouse ID"
1510 LET V$=I3$(6,2)
1520 IF I3$(1,1)="N" THEN GOTO 1600
1530 LET V4$="Enter A Valid Warehouse (<F3>=Lookup)"
1540 LET V0$="S",V1$="CKE",V2$=V$,V3$="",V0=2,V1=14,V2=11
1550 GOSUB 7000
1560 ON V3 GOTO 1580,1500,1000,1570,1000
1570 CALL "IVC.LK",3,V1,V2,V$
1580 IF V$="" THEN GOTO 1200
1600 REM " --- Retrieve warehouse record"
1610 LET X0$(1)=N0$+"C"+V$
1620 FIND (IVM10_DEV,KEY=X0$(1,5),DOM=1500)IOL=IVM10C
1630 PRINT @(14,11),X0$(4,2)," ",X0$(6,24),
2000 REM " --- Item Number"
2010 DIM ITEM$[6],ITEM[12],B1$(DW),B2$(64)
2020 GOSUB 5200
2030 FOR X=11 TO 13
2040 PRINT @(80-M2,X),'CL',
2050 NEXT X
2055 PRINT @(14,13),FILL(M4),
2060 LET ACTION$="",V1=14,V2=12,V2$=B0$
2070 CALL "IVC.IA",ACTION$,V1,V2,FILES[ALL],N0$,V2$,V4$,I[ALL],ITEM$[ALL],ITEM[ALL],V3
2080 ON V3 GOTO 2090,2000,1500,2000,1000
2090 LET B0$(1)=ITEM$[0],B1$(1)=ITEM$(1),B2$(1)=ITEM$[2]
2095 PRINT @(V1,V2),B0$(1,I[0]),
2100 REM " --- Read warehouse record for item"
2110 LET W0$(1)=N0$+X0$(4,2)+ITEM$[0],V2$=""
2120 FIND (IVM02_DEV,KEY=W0$,DOM=2200)IOL=IVM02A
2190 GOTO 2500
2200 REM " --- Item not in warehouse"
2210 LET V1$="This Item Is Not Defined In This Warehouse (<Enter>=Continue)"
2220 GOSUB 6900
2290 GOTO 2000
2500 REM " --- Display quantities for warehouse"
2510 LET AVAILABLE=W[0]-W[2],COST=W[11],LISTPRICE=W[9]
2520 PRINT @(14,13),W[9]:M4$,@(80-M2,11),W[0]:M2$,@(80-M2,12),W[2]:M2$,@(80-M2,13),AVAILABLE:M2$,
