4930 IF V$<>"" THEN GOTO 1600
4990 GOTO 4000
5000 REM " --- Display "
5010 PRINT @(14,3),FNF$(A0$(3,P[0]),M0$)," ",A1$(1,NL),@(60),A1$(228,20),@(ADDRESS,4),ADDRESS$(1,AL),@(60),PHONE$,@(ADDRESS,5),ADDRESS$(41,AL),@(60),FAX$,@(ADDRESS,6),ADDRESS$(81,40),@(ADDRESS,7),ADDRESS$(121,40),@(ADDRESS,8),ADDRESS$(161,40),@(14,10),Y0$(4,4)," ",Y0$(8,20),
5090 RETURN 
5200 REM " --- Clear bottom of screen"
5210 FOR X=0 TO 4
5220 PRINT @(O[0],X+17),FILL(40-O[0]),@(O[3]),'CL',
5230 NEXT X
5290 RETURN 
6000 REM " --- Code Lookup"
6010 LET NUMBER=1,CHANNEL=ARM10_DEV,RECORD$="M"
6020 DIM DESCRIPTION$[NUMBER],FIELD[NUMBER],POSITION[NUMBER],LENGTH[NUMBER]
6030 LET DESCRIPTION$[0]="Code",DESCRIPTION$[1]="Description"
6040 LET FIELD[0]=1,POSITION[0]=4,LENGTH[0]=4
