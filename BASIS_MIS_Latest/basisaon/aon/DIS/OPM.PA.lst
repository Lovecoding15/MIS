4000 REM " --- Options "
4010 LET V4$="Press <Enter> To Continue (<F1>=Warehouse Availability/<F2>=Item):"
4020 LET V0$="S",V1$="CE",V2$="",V3$="",V0=1,V1=INT(40+LEN(V4$)/2),V2=22
4030 GOSUB 7000
4040 ON V3 GOTO 1000,4100,2000,4000,9900
4100 REM " --- Display warehouse availability"
4110 DIM HEADING$(WIDTH-2),FOOTING$(WIDTH-2),L[5]
