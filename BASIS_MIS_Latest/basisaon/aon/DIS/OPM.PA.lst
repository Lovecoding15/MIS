3610 GOSUB 5200
3615 LET DESCRIPTION$="Contract Pricing"
3620 IF FNP$(U1$(1,20))<>"" THEN LET DESCRIPTION$=DESCRIPTION$+" - "+FNP$(U1$(1,20))
3630 LET DESCRIPTION$=DESCRIPTION$+" (From "+FNB$(U1$(21,3))+" Through "+FNB$(U1$(24,3))+")"
3635 PRINT @(FNC(DESCRIPTION$),15),DESCRIPTION$,
3640 FOR X=0 TO 4
3650 IF U[X]<>0 OR U[X+10]<>0 THEN PRINT @(O[0],X+17),U[X]:M2$,@(O[2]),U[X+10]:M4$,
