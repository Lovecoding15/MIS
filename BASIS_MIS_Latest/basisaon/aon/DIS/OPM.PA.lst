4320 LET XMODE=5
4330 GOSUB 6200
4340 IF FKEY=4 THEN GOTO 4900
4350 IF V$<>"" THEN GOTO 4900
4400 REM " --- Build display line"
4410 DIM G$(WIDTH-2)
