4190 READ (IVM03_DEV,KEY=FIRST$,DOM=4200)
4200 REM " --- For each warehouse"
4210 LET K$=KEY(IVM03_DEV,END=4800)
4220 IF POS(FIRST$=K$)<>1 THEN GOTO 4800
4230 READ (IVM03_DEV)
4240 DIM W0$(24),W1$(64),W[20],X0$(32)
