6190 RETURN 
6200 REM " --- Display page"
6210 CALL "SYC.SA",XMODE,LLIST$[ALL],MORE$[ALL],V$,PAGE,MAXROW,NAME$,HEIGHT,WIDTH,V3
6220 IF V3=-16 THEN LET PAGE=PAGE+1
