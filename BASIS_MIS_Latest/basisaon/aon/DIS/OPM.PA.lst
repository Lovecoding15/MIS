4260 FIND (IVM02_DEV,KEY=W0$,DOM=4700)IOL=IVM02A
4270 FIND (IVM10_DEV,KEY=N0$+"C"+W0$(3,2),DOM=4300)IOL=IVM10C
4300 REM " --- Display page?"
