0010 REM "SYM - AR & AP Report Parameters Maintenance"
0020 REM "Program SYM.RP
0022 REM "+-----------------------------------------------------------+"
0024 REM "| ADD+ON Software, Inc. Advantage/V Version 6.0.0 - 15May96 |"
0026 REM "|      Copyright (c) 1996 Open Systems Holdings Corp.       |"
0028 REM "|                  All Rights Reserved                      |"
0030 REM "+-----------------------------------------------------------+"
0040 REM 
0080 SETERR 9000
0090 SETESC 9000
0200 REM " --- IOLIST's"
0210 ARS01B: IOLIST A0$,A1$,A2$
0500 REM " --- Initializations"
0510 DIM A1$(102),A2$(15)
0590 LET A0$=N0$+N2$+"02"
0700 REM " --- Background"
0720 PRINT @(0,3),'CE','SB',@(1,4),"Company Name:",@(6,5),"Address:",@(3,8),"Federal ID:",'SF',
1200 REM " --- Retrieve record"
1220 EXTRACT (SYS01_DEV,KEY=A0$,DOM=1400)IOL=ARS01B
1300 REM " --- Display"
1320 GOSUB 5000
1390 GOTO 4000
2000 REM " --- Name"
2010 LET V4$="Enter the Company Name"
2020 LET V0$="S",V1$="C",V2$=A1$(1,30),V3$="",V0=30,V1=15,V2=4,I0=0
2030 GOSUB 7000
2040 ON V3 GOTO 2050,2000,2000,2000,3900
2050 LET A1$(1,30)=V$
2090 GOTO 3900
2100 REM " --- Address Lines"
2110 LET X0=I0-1,V3$="",V4$="Enter Address Line "+STR(X0+1)
2120 LET V0$="S",V1$="C",V2$=A1$(31+X0*24,24),V0=24,V1=15,V2=5+X0
2140 GOSUB 7000
2150 ON V3 GOTO 2160,2100,3900,2100,3900
2160 LET A1$(31+X0*24,24)=V$
2190 GOTO 3900
2200 REM " --- Federal ID"
2210 LET V4$="Enter the Federal ID Number"
2230 LET V0$="S",V1$="C",V2$=A2$,V3$="",V0=15,V1=15,V2=8
2240 GOSUB 7000
2250 ON V3 GOTO 2260,2200,3900,2200,3900
2260 LET A2$=V$
2290 GOTO 3900
3900 REM " --- Next Field"
3910 IF V3=4 THEN GOTO 4000
3920 IF V3<>2 THEN GOTO 3950
3930 IF I0>0 THEN LET I0=I0-1
3940 GOTO 3960
3950 LET I0=I0+1
3960 ON I0 GOTO 2000,2100,2100,2100,2200,4000
4000 REM " --- Correct?"
4010 LET V0$="S",V4$="Is The Above Information Correct (Y/N)?"
4020 LET V1$="KC",V2$="Y",V3$="",V0=6,V1=42+INT(LEN(V4$)/2),V2=22
4030 GOSUB 7000
4040 ON V3 GOTO 4050,4000,4000,4000,4900
4050 IF V$="DELETE" THEN GOTO 4200
4090 ON POS(V$="YN") GOTO 4000,4100,2000
4100 REM " --- Write record"
4110 WRITE (SYS01_DEV,KEY=A0$)IOL=ARS01B
4180 IF O0>0 THEN RUN O1$,ERR=4190
4190 GOTO 4900
4200 REM " --- Remove records"
4210 REMOVE (SYS01_DEV,KEY=A0$,DOM=4220)
4900 REM " --- Run menu overlay"
4990 RUN O0$,ERR=9900
5000 REM " --- Display"
5010 PRINT @(15,4),A1$(1,30),@(15,5),A1$(31,24),@(15,6),A1$(55,24),@(15,7),A1$(79,24),@(15,8),A2$,
5090 RETURN 
7000 REM " --- Standard Input Routine (15May95)"
7010 CALL "SYC.IA",V0$,V1$,V2$,V3$,V4$,PGM(-2),V0,V1,V2,V$,V,V3,DISPLAY_LEN
7020 IF V3=999 THEN GOTO 7200
7030 IF V3=127 THEN GOTO 7100
7090 RETURN 
7100 REM " --- Escape During Input"
7110 CALL "SYC.ES",ERR=7200,PGM(-2),TCB(8),E$,E2,V3
7120 IF V3<>127 THEN GOTO 7000
7130 PRINT @(0,E2),'CL','CURSOR'("ON"),E$,'LF'
7200 REM " --- Error During Input"
7210 ESCAPE
7290 GOTO 7000
9000 REM " --- Standard Error Routine (15May95)"
9010 IF ERR=127 THEN GOTO 9300
9020 CALL "SYC.EA",ERR=9090,EXIT_CTRL,PGM(-2),ERR,TCB(5),E$,E1,E2
9030 IF E1=1 THEN GOTO 9100
9040 IF E1=3 THEN GOTO 9200
9080 PRINT @(0,E2),'CL','CURSOR'("ON"),E$,'LF'
9090 ESCAPE
9100 REM " --- Retry"
9190 RETRY
9200 REM " --- Return"
9290 GOTO 9900
9300 REM " --- Standard Escape Routine"
9310 CALL "SYC.ES",ERR=9350,PGM(-2),TCB(8),E$,E2,V3
9320 IF V3<>127 THEN GOTO 9390
9330 PRINT @(0,E2),'CL','CURSOR'("ON"),E$,'LF'
9350 ESCAPE
9390 RETURN 
9900 REM " --- Return to menu"
9950 RUN "SYS.AA"
9999 END
