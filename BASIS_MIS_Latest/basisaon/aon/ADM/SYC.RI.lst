0010 REM "SYC - Interrupt Printing"
0020 REM "Program SYC.RI"
0022 REM "+-----------------------------------------------------------+"
0024 REM "| ADD+ON Software, Inc. Advantage/V Version 6.0.0 - 15May96 |"
0026 REM "|      Copyright (c) 1996 Open Systems Holdings Corp.       |"
0028 REM "|                  All Rights Reserved                      |"
0030 REM "+-----------------------------------------------------------+"
0040 REM 
0050 REM "STATUS: 0=Continue Printing/1=Interrupt (returned)"
0060 REM 
0080 SETERR 9000
0085 SETESC 9000
0090 ENTER STATUS
0400 REM " --- Parameters"
0410 LET MAXROW=15
0500 REM " --- Initializations"
0510 DIM OPTLIST$[2,MAXROW,6],PARAM$[2,MAXROW,3],MORE$[2,MAXROW,3]
0520 DIM BANNER$(80)
0540 LET WIDTH=24,WIN_X=2,PGM$=PGM(-2),OPTIONS=0,STATUS=0
0600 REM " --- Window dimensions"
0610 CALL "SYC.OL",PGM$,OPTIONS,WIDTH,OPTLIST$[ALL],PARAM$[ALL],TITLE$,MAXROW,M$,M
0620 IF OPTIONS<1 THEN GOTO 9900
0630 LET WIDTH=MAX(WIDTH+4,LEN(TITLE$)+4),HEIGHT=OPTIONS+2,WIN_Y=22-HEIGHT
0700 REM " --- Background"
0710 PRINT (0,ERR=0720)@(0,22),'CI',
0720 LET BANNER$(WIN_X+1)="Printing interrupted..."
0730 PRINT @(0,22),'BR',BANNER$,'ER',
0750 CALL "SYC.WA",0,WIDTH,HEIGHT,WIN_X,WIN_Y,TITLE$,NAME$
1000 REM " --- Lightbar selection of options"
1010 LET MAXLINES=HEIGHT-1,PAGE=1,XMODE=0
1020 CALL "SYC.SA",XMODE,OPTLIST$[ALL],MORE$[ALL],ANSWER$,1,MAXLINES,NAME$,HEIGHT,WIDTH,FKEY
1030 LET ANSWER$=FNU$(FNP$(ANSWER$))
1040 IF ANSWER$="SPEEDSEARCH" THEN GOTO 1100
1050 IF ANSWER$="CALCULATOR" THEN GOTO 1200
1060 IF ANSWER$="CANCEL" THEN LET STATUS=1
1090 GOTO 9900
1100 REM " --- SpeedSearch"
1110 CALL "SYC.QA",FKEY
1190 GOTO 1000
1200 REM " --- Calculator"
1210 CALL "SYC.ZC",1,V$
1290 GOTO 1000
8000 REM " --- Functions"
8080 DEF FNP$(Q$)=CVS(Q$,2)
8090 DEF FNU$(Q$)=CVS(Q$,4)
9000 REM " --- Standard Error Routine (15May95)"
9010 IF ERR=127 THEN GOTO 9300
9020 CALL "SYC.EA",ERR=9090,EXIT_CTRL,PGM(-2),ERR,TCB(5),E$,E1,E2
9030 IF E1=1 THEN GOTO 9100
9040 IF E1=3 THEN GOTO 9200
9080 PRINT @(0,E2),'CL','CURSOR'("ON"),E$,'LF'
9090 ESCAPE
9100 REM " --- Retry"
9190 RETRY
9200 REM " --- Return"
9290 GOTO 9900
9300 REM " --- Standard Escape Routine"
9310 CALL "SYC.ES",ERR=9350,PGM(-2),TCB(8),E$,E2,V3
9320 IF V3<>127 THEN GOTO 9390
9330 PRINT @(0,E2),'CL','CURSOR'("ON"),E$,'LF'
9350 ESCAPE
9390 RETURN 
9900 REM " --- Return to calling program"
9910 CALL "SYC.WD",NAME$
9920 LET BANNER$(1)="     Press <F4> to interrupt printing ..."
9930 IF STATUS=0 THEN PRINT @(0,22),'BR',BANNER$,'ER',
9950 EXIT 
9999 END
