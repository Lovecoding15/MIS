0100 REM " --- Open/Lock Files"
0110 LET FILES=7
0120 DIM FILES$[FILES],OPTIONS$[FILES],CHANNELS[FILES]
0130 LET FILES$[1]="APM-11",FILES$[2]="APM-12",FILES$[3]="APM-13"
0140 LET FILES$[4]="SYS-01",FILES$[5]="GLM-01",FILES$[6]="GLM-02"
0150 LET FILES$[7]="GLT-06"
