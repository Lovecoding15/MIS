0040 REM 
0045 SETESC 9000
0050 SETERR 9000
0060 ON O9 GOTO 0100,4000
0100 REM " --- Open/Lock Files
0200 REM " --- IOLists
0220 APM02A: IOLIST B0$(1),B1$(1),B2$(1),B[ALL]
0230 APM10A: IOLIST X0$
0400 REM " --- Parameters
0500 REM " --- Init Data
0520 LET B0$(1)=A0$
0700 REM " --- Background
0710 GOSUB 6000
0720 PRINT 'SB',@(15,10),"History",
0730 IF P3$(1,1)="Y" THEN PRINT @(6,11),"AP Type:",
0740 PRINT @(0,12),"Open Invoices:",
0750 IF P3$(3,1)="Y" THEN PRINT @(39,12),"Open Retention:",
0760 CALL "SYC.WC",1,0,80,0,0,13,0
0770 CALL "SYC.WC",1,0,80,0,0,16,0
0780 PRINT 'SB',@(1,14),"Last Invoice:",@(1,15),"Last Payment:",@(4+M1,17),"Purchases",@(19+M1),"Discounts",@(35+M1),"Payments",@(50+M1),"Calendar-Yr",@(2,18),"Current Ytd:",@(3,19),"Prior Year:",@(4,20),"Next Year:",
0790 PRINT 'SF',
0900 REM " --- Init File
0920 READ (APM02_DEV,KEY=A0$,DOM=0930)
1000 REM " --- Key
1010 IF P3$(1,1)="Y" THEN GOTO 1100
1020 LET B0$=A0$+"  "
1030 GOSUB 6200
1060 READ (APM02_DEV,KEY=B0$,DOM=4000)IOL=APM02A
1070 GOSUB 5000
1090 GOTO 4000
1100 REM " --- Init File
1120 READ (APM02_DEV,KEY=A0$,DOM=1130)
1200 REM " --- AP Type
1210 GOSUB 6300
1220 LET V2$="",V2$=KEY(APM02_DEV,END=1250)
1230 IF V2$(1,LEN(A0$))<>A0$ THEN LET V2$=""
1240 IF V2$<>"" THEN LET V2$=V2$(9)
1250 LET V0$="S",V1$="KEC",V0=2,V1=15,V2=11,V4$="Enter A Valid AP Type (<F3>=Lookup)"
1260 GOSUB 7000
1262 IF V3=4 THEN RUN "APM.MA"
1265 IF V3<>3 THEN GOTO 1280
1267 LET V4=1,V5=APM10_DEV,V6=4,V7=2,V8=6,V9=20,V5$="A"
1270 CALL "SYC.LZ",V1,V2,V4,V5,V6,V7,V8,V9,V$,V5$,N0$
1280 IF V$="" THEN GOTO 1200
1290 LET B0$(9,2)=V$
1300 FIND (APM02_DEV,KEY=B0$,DOM=1200)IOL=APM02A
1320 GOSUB 5000
1390 GOTO 4000
1900 REM " --- Init
1920 LET I0=0
2000 REM " --- Open Invoices
2010 LET X0=I0
2020 IF X0=1 THEN IF P3$(3,1)<>"Y" THEN GOTO 3900
2030 LET V0$="N",V2$=STR(B[X0]),V3$=M1$,V1=15+X0*40,V2=12
2040 GOSUB 7000
2060 LET B[X0]=V
2090 GOTO 3900
2200 REM " --- Dates
2210 LET X0=I0-2
2220 LET V0$="D",V2$=B1$(7+X0*3,3),V0=8,V1=15,V2=14+X0
2240 GOSUB 7000
2260 LET B1$(7+X0*3,3)=V$
2290 GOTO 3900
2400 REM " --- Amts
2410 FOR X0=0 TO 2
2420 LET V0$="N",V2$=STR(B[X0+2]),V3$=M1$,V1=15,V2=18+X0
2440 GOSUB 7000
2460 LET B[X0+2]=V
2470 IF V3<>2 THEN GOTO 2500
2480 IF X0>0 THEN LET X0=X0-1
2490 GOTO 2420
2520 LET V0$="N",V2$=STR(B[X0+5]),V3$=M1$,V1=30,V2=18+X0
2540 GOSUB 7000
2560 LET B[X0+5]=V
2570 IF V3=2 THEN GOTO 2420
2620 LET V0$="N",V2$=STR(B[X0+8]),V3$=M1$,V1=45,V2=18+X0
2640 GOSUB 7000
2660 LET B[X0+8]=V
2670 IF V3=2 THEN GOTO 2520
2720 LET V0$="N",V2$=STR(B[X0+11]),V3$=M1$,V1=60,V2=18+X0
2740 GOSUB 7000
2760 LET B[X0+11]=V
2770 IF V3=2 THEN GOTO 2620
2790 NEXT X0
3900 REM " --- Next Field
3905 IF V3=4 THEN GOTO 3990
3910 IF V3<>2 THEN GOTO 3940
3920 IF I0>0 THEN LET I0=I0-1
3930 GOTO 3950
3940 LET I0=I0+1
3960 ON I0 GOTO 2000,2000,2200,2200,2400,3990
3990 WRITE (APM02_DEV,KEY=B0$)IOL=APM02A
4000 REM " --- Options
4010 LET V0$="S",V1$="SC",V2$="",V3$="",V4$="Continue <Enter>: ",V0=1,V1=FNV(V4$),V2=22
4020 GOSUB 7000
4030 IF V$="HISTORY" THEN GOTO 1900
4040 IF P3$(1,1)="Y" THEN GOTO 1200
4100 RUN "APM.MA"
5000 REM " --- Display
5010 IF P3$(1,1)<>"Y" THEN GOTO 5050
5020 GOSUB 6200
5030 IF X0$<>"" THEN PRINT @(18,11),X0$(6,20),
5050 PRINT @(15,12),B[0]:M1$,
5060 IF P3$(3,1)="Y" THEN PRINT @(55,12),B[1]:M1$,
5070 PRINT @(15,14),FNB$(B1$(7,3)),@(15,15),FNB$(B1$(10,3)),
5100 FOR X=0 TO 2
5110 PRINT @(15,18+X),B[X+2]:M1$,@(30),B[X+5]:M1$,@(45),B[X+8]:M1$,@(60),B[X+11]:M1$,
5120 NEXT X
5190 RETURN 
6000 REM " --- Clear Screen
6020 PRINT @(0,L0),'CE',
6090 RETURN 
6200 REM " --- AP Type
6210 LET X0$=""
6220 FIND (APM10_DEV,KEY=N0$+"A"+B0$(9,2),DOM=6230)IOL=APM10A
6290 RETURN 
6300 REM " --- Clear Data
6310 PRINT @(15,11),'CL',@(15,12),J1$(1,LEN(M1$)),@(55,12),'CL',@(15,14),'CL',@(15,15),'CL',
6320 FOR X=18 TO 20
6330 PRINT @(15,X),'CL',
6340 NEXT X
6390 RETURN 
7000 REM " --- Standard Input Routine (15May95)"
7010 CALL "SYC.IA",V0$,V1$,V2$,V3$,V4$,PGM(-2),V0,V1,V2,V$,V,V3,DISPLAY_LEN
7020 IF V3=999 THEN GOTO 7200
7030 IF V3=127 THEN GOTO 7100
7090 RETURN 
7100 REM " --- Escape During Input"
7110 CALL "SYC.ES",ERR=7200,PGM(-2),TCB(8),E$,E2,V3
7120 IF V3<>127 THEN GOTO 7000
7130 PRINT @(0,E2),'CL','CURSOR'("ON"),E$,'LF'
7200 REM " --- Error During Input"
7210 ESCAPE
7290 GOTO 7000
8000 REM " --- Functions
8010 DEF FNA$(Q$,Q2$)=STR(MOD((ASC(Q$)-32)*POS(" "<>Q2$(2,1)),100):"00")
8020 DEF FNB$(Q1$)=FNA$(Q1$(2),Q1$)+"/"+FNA$(Q1$(3),Q1$)+"/"+FNA$(Q1$(1),Q1$)
8095 DEF FNV(Q$)=42+INT(LEN(Q$)/2)
9000 REM " --- Standard Error Routine (15May95)"
9010 IF ERR=127 THEN GOTO 9300
9020 CALL "SYC.EA",ERR=9090,EXIT_CTRL,PGM(-2),ERR,TCB(5),E$,E1,E2
9030 IF E1=1 THEN GOTO 9100
9040 IF E1=3 THEN GOTO 9200
9080 PRINT @(0,E2),'CL','CURSOR'("ON"),E$,'LF'
9090 ESCAPE
9100 REM " --- Retry"
9190 RETRY
9200 REM " --- Return"
9210 SETERR 9000
9220 RUN "APM.MA"
9290 GOTO 9900
9300 REM " --- Standard Escape Routine"
9310 CALL "SYC.ES",ERR=9350,PGM(-2),TCB(8),E$,E2,V3
9320 IF V3<>127 THEN GOTO 9390
9330 PRINT @(0,E2),'CL','CURSOR'("ON"),E$,'LF'
9350 ESCAPE
9390 RETURN 
9900 RUN "SYS.AA"
9999 END
