0010 REM "GLC - G/L Financial Report Lines Lookup"
0020 REM "Program GLC.LL"
0022 REM "+-----------------------------------------------------------+"
0024 REM "| ADD+ON Software, Inc. Advantage/V Version 6.0.0 - 15May96 |"
0026 REM "|      Copyright (c) 1996 Open Systems Holdings Corp.       |"
0028 REM "|                  All Rights Reserved                      |"
0030 REM "+-----------------------------------------------------------+"
0040 REM 
0045 REM "REPORT$   : Report Number (Input)"
0050 REM "FIRM$     : Firm Number (Input)"
0055 REM "SELECTION$: G/L Financial Report Number (Returned)"
0060 REM 
0080 SETERR 9000
0085 SETESC 9900
0090 ENTER REPORT$,FIRM$,SELECTION$
0100 REM " --- Open/Lock Files"
0110 LET FILES=3
0120 DIM FILES$[FILES],OPTIONS$[FILES],CHANNELS[FILES]
0140 LET FILES$[1]="GLM-12",FILES$[2]="GLM-22",FILES$[3]="SYS-01"
0160 CALL "SYC.DA",1,1,3,FILES$[ALL],OPTIONS$[ALL],CHANNELS[ALL],BATCH,STATUS
0170 IF STATUS>0 THEN GOTO 9900
0185 LET GLM12_DEV=CHANNELS[1],GLM22_DEV=CHANNELS[2],SYS01_DEV=CHANNELS[3]
0200 REM " --- IOLIST's"
0210 GLM12A: IOLIST A0$(1)
0260 SYS01T: IOLIST X$,F0$,X$,X$,X$,F4$,F5$
0400 REM " --- Parameters"
0405 DIM A0$(30)
0410 FIND (SYS01_DEV,KEY="T"+FID(0),DOM=9800)IOL=SYS01T
0420 LET N0$=F0$(16,2)
0430 FIND (GLM12_DEV,KEY=N0$+REPORT$+"0000",DOM=9800)IOL=GLM12A
0500 REM " --- Initializations"
0510 LET NUMBER=1,RECORD$=FIRM$+REPORT$,TITLE$=FNP$(A0$(9,20))+" Lines"
0520 DIM DESCRIPTION$[NUMBER],FIELD[NUMBER],POSITION[NUMBER],LENGTH[NUMBER]
0550 LET DESCRIPTION$[0]="Line",DESCRIPTION$[1]="Description"
0560 LET FIELD[0]=1,POSITION[0]=5,LENGTH[0]=4
0570 LET FIELD[1]=2,POSITION[1]=2,LENGTH[1]=35
0580 LET ROW=3,COLUMN=79-LENGTH[0]-LENGTH[1]-2-NUMBER*4,SUFFIX$="0000"
0590 LET OLDVAL$=SELECTION$,SELECTION$="LINES & NO COMPANY"
1000 REM " --- Call header record lookup"
1010 CALL "SYC.LH",GLM22_DEV,RECORD$,SUFFIX$,NUMBER,TITLE$,DESCRIPTION$[ALL],FIELD[ALL],POSITION[ALL],LENGTH[ALL],COLUMN,ROW,SELECTION$
1020 IF SELECTION$="LINES & NO COMPANY" THEN LET SELECTION$=OLDVAL$
4000 REM " --- All done"
4090 GOTO 9900
8000 REM " --- Functions"
8080 DEF FNP$(Q$)=CVS(Q$,2)
9000 REM " --- Standard Error Routine (15May95)"
9010 IF ERR=127 THEN GOTO 9300
9020 CALL "SYC.EA",ERR=9090,EXIT_CTRL,PGM(-2),ERR,TCB(5),E$,E1,E2
9030 IF E1=1 THEN GOTO 9100
9040 IF E1=3 THEN GOTO 9200
9080 PRINT @(0,E2),'CL','CURSOR'("ON"),E$,'LF'
9090 ESCAPE
9100 REM " --- Retry"
9190 RETRY
9200 REM " --- Return"
9250 SETERR 9000
9290 GOTO 9900
9300 REM " --- Standard Escape Routine"
9310 CALL "SYC.ES",ERR=9350,PGM(-2),TCB(8),E$,E2,V3
9320 IF V3<>127 THEN GOTO 9390
9330 PRINT @(0,E2),'CL','CURSOR'("ON"),E$,'LF'
9350 ESCAPE
9390 RETURN 
9800 REM " --- Display Parameter record error"
9810 LET LINE_ERR$=LST(PGM(TCB(5)))
9820 CALL "SYC.YA",LINE_ERR$,N2$,ERR
9900 REM " --- Return to calling program"
9910 CLOSE (SYS01_DEV,ERR=9911)
9920 CLOSE (GLM12_DEV,ERR=9921)
9930 CLOSE (GLM22_DEV,ERR=9931)
9950 EXIT 
9999 END
