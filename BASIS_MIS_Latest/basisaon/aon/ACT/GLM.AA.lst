0180 LET GLM04_DEV=CHANNELS[4],GLM08_DEV=CHANNELS[5]
0185 LET GLM11_DEV=CHANNELS[7],GLM12_DEV=CHANNELS[8],GLM22_DEV=CHANNELS[9]
