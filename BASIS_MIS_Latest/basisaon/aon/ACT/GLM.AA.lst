4820 LET X$="Account "+FNF$(A0$(3,P[3]),M0$)+" "+FNP$(A1$(1,35))
4830 LET INFO$[0]="GLM-09",INFO$[1]=A0$,INFO$[2]=X$,ACTION=0,INFO[1]=L0
4850 CALL "SYC.KA",ACTION,INFO$[ALL],INFO[ALL]
4900 REM " --- Process submenu"
