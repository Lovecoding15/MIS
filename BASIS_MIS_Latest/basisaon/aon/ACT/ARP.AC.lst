0010 REM "ARP - Credit Management Parameter Maintenance"
0020 REM "Program ARP.AC"
0022 REM "+-----------------------------------------------------------+"
0024 REM "| ADD+ON Software, Inc. Advantage/V Version 6.0.0 - 15May96 |"
0026 REM "|      Copyright (c) 1996 Open Systems Holdings Corp.       |"
0028 REM "|                  All Rights Reserved                      |"
0030 REM "+-----------------------------------------------------------+"
0040 REM 
0080 SETERR 9000
0090 SETESC 9000
0200 REM " --- IOLIST's"
0210 ARS01C: IOLIST A0$(1)
0500 REM " --- Initializations"
0510 DIM A0$(56)
0590 LET A0$(1)=N0$+N2$+"01",K9=6,M7$="#######",M8$="#####0.00"; REM "WA:200
0700 REM " --- Background"
0750 PRINT @(0,3),'CE','SB',@(4,4),"Credit Management System Installed:",@(18,5),"Aging Bucket To Hold:",@(9,6),"Minimum Balance Limit To Hold:",@(11,7),"Auto Hold Over Credit Limit:",@(27,8),"Manual Hold:",@(6,9),"Print Pick Lists For Held Orders:",@(23,10),"Credit Password:",@(7,11),"Maximum Order Without Auto Hold:",@(11,12),"Auto Hold All New Customers:",@(4,13),"Display Credit Info In Order Entry:",'SF'
1200 REM " --- Retrieve record"
1210 FIND (SYS01_DEV,KEY=A0$(1,K9),DOM=1400)IOL=ARS01C
1220 IF FNP$(A0$(7))="" THEN GOTO 1400
1290 GOTO 1500
1400 REM " --- New Record"
1410 LET A0$(7)="Y50050.00YYN",A0$(25)="Y999999.99A"
1490 GOSUB 5000
1500 REM " --- Display"
1510 GOSUB 5000
1590 GOTO 4000
2000 REM "INSTALLED?
2020 LET V0$="Y",V1$="CE",V2$=A0$(7,1),V3$="",V4$="Should the Credit Management System Be Used (Y/N)?",V0=1,V1=40,V2=4,I0=0
2040 GOSUB 7000
2050 ON V3 GOTO 2060,2000,3900,2000,3900
2060 LET A0$(7,1)=V$
2080 IF A0$(7,1)="N" THEN LET A0$(8)=""; GOSUB 5000; GOTO 4000
2085 IF A0$(7,1)="Y" AND FNP$(A0$(8))="" THEN GOTO 1400
2090 GOTO 3900
2200 REM "AGING BUCKET TO USE
2210 LET V0$="S",V1$="C",V2$=A0$(8,1),V3$=" 2345",V4$="Credit Hold At Number Of Days (2=30 Days/3=60 Days/4=90 Days/5=120 Days)",V0=1,V1=40,V2=5
2220 GOSUB 7000
2230 ON V3 GOTO 2240,2200,3900,2200,3900
2240 LET A0$(8,1)=V$
2250 GOSUB 5100
2290 GOTO 3900
2400 REM "BALANCE TO HOLD
2410 LET V=0,V=NUM(A0$(9,7),ERR=2420)
2420 LET V0$="N",V1$="C",V2$=STR(V),V3$=M7$,V4$="Hold Past Due Balances Which Exceed This Amount",V0=7,V1=40,V2=6
2440 GOSUB 7000
2445 ON V3 GOTO 2450,2400,3900,2400,3900
2450 IF V<0 THEN GOTO 2400; REM "WA:200
2460 LET A0$(9,7)=STR(V:M7$)
2490 GOTO 3900
2600 REM "AUTO HOLD
2620 LET V0$="Y",V1$="C",V2$=A0$(16,1),V3$="",V4$="Automatically Hold Orders If A Credit Limit Has Been Established (Y/N)?",V0=1,V1=40,V2=7
2640 GOSUB 7000
2650 ON V3 GOTO 2660,2600,3900,2600,3900
2680 LET A0$(16,1)=V$
2690 GOTO 3900
2800 REM "MANUAL HOLD
2820 LET V0$="Y",V1$="C",V2$=A0$(17,1),V3$="",V4$="Allow Manual Credit Holds (Y/N)?",V0=1,V1=40,V2=8
2840 GOSUB 7000
2850 ON V3 GOTO 2860,2800,3900,2800,3900
2860 LET A0$(17,1)=V$
2890 GOTO 3900
3000 REM "CREDIT PASSWORD HERE
3020 LET V0$="S",V1$="C",V2$=A0$(19,6),V3$="",V4$="Enter The Password For Credit Release",V0=6,V1=40,V2=10
3040 GOSUB 7000
3050 ON V3 GOTO 3060,3000,3900,3000,3900
3080 LET A0$(19,6)=V$
3090 GOTO 3900
3200 REM "PRINT PICK LISTS?
3220 LET V0$="Y",V1$="C",V2$=A0$(18,1),V3$="",V4$="Print A Picking List If The Customer Is On Credit Hold (Y/N)?",V0=1,V1=40,V2=9
3240 GOSUB 7000
3250 ON V3 GOTO 3260,3200,3900,3200,3900
3260 LET A0$(18,1)=V$
3290 GOTO 3900
3300 REM "MAX ORDER
3310 LET V=0,V=NUM(A0$(26,9),ERR=3320)
3320 LET V0$="N",V1$="C",V2$=STR(V),V3$=M8$,V4$="Orders Over This Amount Will Automatically Be Held",V0=9,V1=40,V2=11
3340 GOSUB 7000
3350 ON V3 GOTO 3360,3300,3900,3300,3900
3360 LET A0$(26,9)=STR(V:M8$)
3380 GOTO 3900
3400 REM "AUTO HOLD NEW
3420 LET V0$="Y",V1$="C",V2$=A0$(25,1),V3$="",V4$="Hold All New Customer Orders For Approval (Y/N)?",V0=1,V1=40,V2=12
3440 GOSUB 7000
3450 ON V3 GOTO 3460,3400,3900,3400,3900
3460 LET A0$(25,1)=V$
3490 GOTO 3900
3500 REM "Display Credit info in Order Entry?
3520 LET V0$="s",V1$="C",V2$=A0$(35,1),V3$="ARN",V4$="A=Automatically Display Credit Info    R=On Request Only    N=Not At All",V0=1,V1=40,V2=13
3540 GOSUB 7000
3550 ON V3 GOTO 3560,3500,3900,3500,3900
3560 LET A0$(35,1)=V$
3590 GOTO 3900
3900 REM " --- Next Field"
3905 IF V3=4 THEN GOTO 3990
3910 IF V3<>2 THEN GOTO 3940
3920 IF I0>0 THEN LET I0=I0-1
3930 GOTO 3950
3940 LET I0=I0+1
3960 ON I0 GOTO 2000,2200,2400,2600,2800,3200,3000,3300,3400,3500,3990
3990 LET I0=K0
4000 REM " --- Correct?"
4010 LET V4$="Is The Above Information Correct (Y/N/Delete)?"
4020 LET V0$="S",V1$="KC",V2$="Y",V3$="",V0=6,V1=FNV(V4$),V2=22
4030 GOSUB 7000
4040 ON V3 GOTO 4050,4000,4000,4000,4900
4050 IF V$="DELETE" THEN GOTO 4200
4090 ON POS(V$="YN") GOTO 4000,4100,2000
4100 REM " --- Write record"
4110 WRITE (SYS01_DEV,KEY=A0$(1,K9))IOL=ARS01C
4180 IF O0>0 THEN RUN "SYM.RP"
4190 GOTO 4900
4200 REM " --- Remove records"
4210 REMOVE (SYS01_DEV,KEY=A0$(1,K9),DOM=4220)
4290 GOTO 4900
4900 REM " --- Run menu overlay"
4990 RUN "ARP.AA"
5000 REM " --- Display"
5010 LET MINIMUM=0,MINIMUM=NUM(A0$(9,7),ERR=5020)
5020 LET MAXIMUM=0,MAXIMUM=NUM(A0$(26,9),ERR=5030)
5030 PRINT @(40,4),A0$(7,1),@(40,5),A0$(8,1),@(40,6),MINIMUM:M7$,@(40,7),A0$(16,1),@(40,8),A0$(17,1),@(40,9),A0$(18,1),@(40,10),A0$(19,6),@(40,11),MAXIMUM:M8$,@(40,12),A0$(25,1),@(40,13),A0$(35,1),
5100 REM " --- Display number of days"
5110 PRINT @(45,3),'CL',
5120 IF POS(A0$(8,1)="2345")=0 THEN GOTO 5190
5130 LET V=NUM(A0$(8,1))-1
5140 PRINT @(43,5),"(",STR(V*30)," Days)",'CL',
5190 RETURN 
7000 REM " --- Standard Input Routine (15May95)"
7010 CALL "SYC.IA",V0$,V1$,V2$,V3$,V4$,PGM(-2),V0,V1,V2,V$,V,V3,DISPLAY_LEN
7020 IF V3=999 THEN GOTO 7200
7030 IF V3=127 THEN GOTO 7100
7090 RETURN 
7100 REM " --- Escape During Input"
7110 CALL "SYC.ES",ERR=7200,PGM(-2),TCB(8),E$,E2,V3
7120 IF V3<>127 THEN GOTO 7000
7130 PRINT @(0,E2),'CL','CURSOR'("ON"),E$,'LF'
7200 REM " --- Error During Input"
7210 ESCAPE
7290 GOTO 7000
8000 REM " --- Functions"
8080 DEF FNP$(Q$)=CVS(Q$,2)
8090 DEF FNV(Q$)=42+INT(LEN(Q$)/2)
9000 REM " --- Standard Error Routine (15May95)"
9010 IF ERR=127 THEN GOTO 9300
9020 CALL "SYC.EA",ERR=9090,EXIT_CTRL,PGM(-2),ERR,TCB(5),E$,E1,E2
9030 IF E1=1 THEN GOTO 9100
9040 IF E1=3 THEN GOTO 9200
9080 PRINT @(0,E2),'CL','CURSOR'("ON"),E$,'LF'
9090 ESCAPE
9100 REM " --- Retry"
9190 RETRY
9200 REM " --- Return"
9290 GOTO 9900
9300 REM " --- Standard Escape Routine"
9310 CALL "SYC.ES",ERR=9350,PGM(-2),TCB(8),E$,E2,V3
9320 IF V3<>127 THEN GOTO 9390
9330 PRINT @(0,E2),'CL','CURSOR'("ON"),E$,'LF'
9350 ESCAPE
9390 RETURN 
9900 RUN "SYS.AA"
9999 END
