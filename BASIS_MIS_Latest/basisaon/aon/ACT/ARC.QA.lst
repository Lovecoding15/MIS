0010 REM "ARC - Customer SpeedSearch Menu"
0020 REM "Program ARC.QA"
0022 REM "+-----------------------------------------------------------+"
0024 REM "| ADD+ON Software, Inc. Advantage/V Version 6.0.0 - 15May96 |"
0026 REM "|      Copyright (c) 1996 Open Systems Holdings Corp.       |"
0028 REM "|                  All Rights Reserved                      |"
0030 REM "+-----------------------------------------------------------+"
0040 REM 
0045 REM "D_STATUS  : SpeedSearch Status (0=No Error)"
0050 REM "OPTION$[n]: Standard SpeedSearch Options Array"
0055 REM 
0080 SETERR 9000
0085 SETESC 9000
0090 ENTER D_STATUS,OPTION$[ALL]
0400 REM " --- Parameters"
0410 DIM SPEED$(128)
0420 LET SPEED$(1)=STBL("!SPEEDSEARCH",ERR=9900),N0$=SPEED$(1,2)
0430 LET MAXOPT=NUM(SPEED$(57,2)),PGM$=PGM(-2),OPTION=0
0440 LET PARAM$=FNU$(FNP$(OPTION$[2])),SUBPARAM$="",P=POS("/"=PARAM$)
0450 IF P>0 THEN LET SUBPARAM$=PARAM$(P+1),PARAM$=PARAM$(1,P-1)
0500 REM " --- Initializations"
0510 DIM A0$(8),OPTLIST$[2,MAXOPT,6]
0540 LET PARAM$="CUSTOMER",PREFIX$=OPTION$[3],A0$(1)=N0$+PREFIX$,D_STATUS=0
0600 REM " --- Option Window"
0610 CALL "SYC.QC",SYM01_DEV,SYM11_DEV,PGM$,SECURITY$,OPTION,OPTLIST$[ALL],TITLE$,OMAXROW,PREVMENU$,""
1000 REM " --- Check for prior screen"
1010 IF PREFIX$<>"PRIOR" THEN GOTO 2000
1020 LET OPTION$[1]=PREFIX$
1090 GOTO 9900
2000 REM " --- Option window processing"
2010 DIM MORE$[1,MAXOPT,1],LLIST$[0,0,0]
2020 LET ACTION$="O",CHOICE1$=A0$(3),CHOICE2$=""
2030 GOSUB 5000
2100 REM " --- Vendor lookup"
2110 IF OPTION$[1]<>"LOOKUP" THEN GOTO 2200
2120 CALL "SYC.LC",V$
2130 LET A0$(3)=V$,CONTROL=1,OPTION$[2]=PARAM$,OPTION$[3]=A0$(3)
2200 REM " --- Continue?"
2210 IF CONTROL>0 THEN GOTO 1000
4000 REM " --- All done"
4090 GOTO 9900
5000 REM " --- Standard window processing"
5010 DIM WININFO$[10],WININFO[10]
5020 LET WININFO$[1]=CHOICE1$,WININFO$[2]=CHOICE2$,WININFO[3]=OMAXROW
5050 CALL "SYC.QW",ACTION$,OPTION$[ALL],OPTLIST$[ALL],LLIST$[ALL],MORE$[ALL],WININFO$[ALL],WININFO[ALL],FKEY
5060 LET CONTROL=WININFO[0]
5090 RETURN 
8000 REM " --- Function Definitions"
8080 DEF FNP$(Q$)=CVS(Q$,2)
8090 DEF FNU$(Q$)=CVS(Q$,4)
9000 REM " --- Standard Error Routine (15May95)"
9010 IF ERR=127 THEN GOTO 9300
9020 CALL "SYC.EA",ERR=9090,EXIT_CTRL,PGM(-2),ERR,TCB(5),E$,E1,E2
9030 IF E1=1 THEN GOTO 9100
9040 IF E1=3 THEN GOTO 9200
9080 PRINT @(0,E2),'CL','CURSOR'("ON"),E$,'LF'
9090 ESCAPE
9100 REM " --- Retry"
9190 RETRY
9200 REM " --- Return"
9290 GOTO 9900
9300 REM " --- Standard Escape Routine"
9310 CALL "SYC.ES",ERR=9350,PGM(-2),TCB(8),E$,E2,V3
9320 IF V3<>127 THEN GOTO 9390
9330 PRINT @(0,E2),'CL','CURSOR'("ON"),E$,'LF'
9350 ESCAPE
9390 RETURN 
9900 REM " --- Return to caller"
9950 EXIT 
9999 END
