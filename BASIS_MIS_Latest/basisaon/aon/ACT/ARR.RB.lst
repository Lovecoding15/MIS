0040 REM 
0085 SETESC 9000
0090 SETERR 9000
0100 REM " --- Open/Lock Files
0200 REM " --- IOList
0210 ARM01A: IOLIST A0$,A1$
0230 ARM10A: IOLIST X0$
0400 REM " --- Parameters
0500 REM " --- Init Data
0510 LET HEADINGS=2,CLOCK$=""
0530 DIM HEADINGS$[HEADINGS]
0540 LET HEADINGS$[0]=H1$,HEADINGS$[1]=H2$
0700 REM " --- Background
0800 REM " --- Options
0820 IF P7$="S" THEN LET I3$="B",I4$="F",I5$="Salesperson: "
0830 IF P7$="T" THEN LET I3$="C",I4$="H",I5$="Territory: "
0840 IF P7$="M" THEN LET I3$="F",I4$="A",I5$="Terms: "
0900 REM " --- Determine Start
0920 PRINT @(0,9),'CL','SB',@(30,9),"Printing:",'SF',
1000 REM " --- Initial Read
1020 READ (ARM04_DEV,KEY=N0$+I3$+I1$,DOM=1030)
1100 REM " --- Main Read
1120 LET K$=KEY(ARM04_DEV,END=4000)
1130 IF LEN(K$)<7 THEN GOTO 4000
1140 IF K$(1,3)<>N0$+I3$ THEN GOTO 4000
1145 IF I3$<>"F" AND I2$<>"" THEN IF K$(4,3)>I2$ THEN GOTO 4000
1150 READ (ARM04_DEV)
1152 IF I9$<>"First" THEN IF I3$="F" THEN IF K$(4,2)<>I1$ THEN GOTO 1100
1155 IF I3$="F" THEN FIND (ARM01_DEV,KEY=N0$+K$(6),DOM=1100)IOL=ARM01A; GOTO 1165
1160 FIND (ARM01_DEV,KEY=N0$+K$(7),DOM=1100)IOL=ARM01A
1170 IF I3$="F" THEN IF K$(4,2)<>T0$ THEN LET T0$=K$(4,2); GOSUB 5400; GOSUB 5200
1175 IF I3$="F" THEN GOTO 1200
1180 IF K$(4,3)<>T0$ THEN LET T0$=K$(4,3); GOSUB 5400; GOSUB 5200
1200 PRINT @(40,9),FNF$(A0$(3,P[0]),M0$)
1400 IF L>L9 THEN GOSUB 5200
1420 LET V0$=A1$(31,24),V1$=A1$(55,24)
1430 GOSUB 6000
1440 LET V0$=V$,V1$=A1$(79,24)
1450 GOSUB 6000
1460 LET V0$=V$,V1$=""
1470 GOSUB 6000
1500 PRINT (7)@(0),FNF$(A0$(3,P[0]),M0$),"  ",A1$(1,30)," ",V$,@(100),FNZ$(A1$(103)),"  ",FNF$(A1$(112,10),M9$)
1520 LET L=L+1
1990 GOTO 1100
4000 REM " --- End
4100 GOTO 9900
5000 REM " --- Heading"
5020 LET L=HEADINGS+1
5030 CALL "SYC.HA",7,HEADINGS$[ALL],HEADINGS,H,WIDTH,WHEN$,CLOCK$,STATUS
5040 IF STATUS>0 THEN EXITTO 9900
5100 PRINT (7)@(0),"Customer Number And Name"
5110 LET L=L+1
5190 RETURN 
5200 REM " --- Subheading
5210 IF L>L9-3 THEN GOSUB 5000
5220 PRINT (7)'LF',@(0),I5$,X0$,'LF'
5240 LET L=L+3
5290 RETURN 
5400 REM " --- Find Descr
5410 LET X0$=T0$+" - Not On File"
5420 FIND (ARM10_DEV,KEY=N0$+I4$+T0$,DOM=5480)IOL=ARM10A
5430 IF I3$="F" THEN LET X0$=X0$(4,2)+" - "+X0$(6,20); GOTO 5490
5450 LET X0$=X0$(4,3)+" - "+X0$(7,20)
5490 RETURN 
6000 REM " --- Build String
6020 IF V0$="" THEN LET V$=V1$; RETURN 
6040 FOR V=LEN(V0$) TO 1 STEP -1
6050 IF V0$(V,1)<>" " THEN EXITTO 6100
6060 NEXT V
6100 IF V<1 THEN LET V$=V1$; RETURN 
6110 LET V$=V0$(1,V)+" "+V1$
6190 RETURN 
8000 REM " --- Functions
8085 DEF FNZ$(Q$)=FILL(10,CVS(Q$(1,3)+FILL(POS("9"<Q$(1,5))>0)+Q$(4,2)+FILL(ABS(POS("A">=Q$(1,6))>0)-POS("0">Q$(6,4))>0,"-")+Q$(6,4)+FILL(10),16))
8200 REM " --- FNF$ AlphaNumeric Masking Function"
8210 DEF FNF$(Q1$,Q2$)
8220 IF Q2$="" THEN LET Q2$=FILL(LEN(Q1$),"0")
8230 RETURN STR(-NUM(Q1$,ERR=ALPHA_FNF):Q2$,ERR=ALPHA_FNF)
8240 ALPHA_FNF: 
8245 LET Q=1,Q0=0
8250 WHILE LEN(Q2$(Q))
8255 IF POS(Q2$(Q,1)="-()") THEN LET Q0=Q0+1 ELSE LET Q2$(Q,1)="X"
8260 LET Q=Q+1
8265 WEND
8270 IF LEN(Q1$)>LEN(Q2$)-Q0 THEN LET Q1$=Q1$(1,LEN(Q2$)-Q0)
8280 RETURN STR(Q1$:Q2$)
8290 FNEND
9000 REM " --- Standard Error Routine (15May95)"
9010 IF ERR=127 THEN GOTO 9300
9020 CALL "SYC.EA",ERR=9090,EXIT_CTRL,PGM(-2),ERR,TCB(5),E$,E1,E2
9030 IF E1=1 THEN GOTO 9100
9040 IF E1=3 THEN GOTO 9200
9080 PRINT @(0,E2),'CL','CURSOR'("ON"),E$,'LF'
9090 ESCAPE
9100 REM " --- Retry"
9190 RETRY
9200 REM " --- Return"
9210 SETERR 9000
9290 GOTO 9900
9300 REM " --- Standard Escape Routine"
9310 CALL "SYC.ES",ERR=9350,PGM(-2),TCB(8),E$,E2,V3
9320 IF V3<>127 THEN GOTO 9390
9330 PRINT @(0,E2),'CL','CURSOR'("ON"),E$,'LF'
9350 ESCAPE
9390 RETURN 
9900 RUN "SYS.AA"
9999 END
