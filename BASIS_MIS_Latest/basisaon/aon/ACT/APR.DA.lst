0100 REM " --- Open/Lock Files"
0110 LET FILES=8
0120 DIM FILES$[FILES],OPTIONS$[FILES],CHANNELS[FILES]
0130 LET FILES$[1]="APE-04",FILES$[2]="APM-01",FILES$[3]="APM-03"
0140 LET FILES$[4]="APE-01",FILES$[5]="APE-11",FILES$[6]="APE-16"
0150 LET FILES$[7]="APM-10",FILES$[8]="SYS-01"
0160 CALL "SYC.DA",1,1,8,FILES$[ALL],OPTIONS$[ALL],CHANNELS[ALL],BATCH,STATUS
0170 IF STATUS>0 THEN GOTO 9900
0180 LET APE04_DEV=CHANNELS[1],APM01_DEV=CHANNELS[2],APM03_DEV=CHANNELS[3]
0185 LET APE01_DEV=CHANNELS[4],APE11_DEV=CHANNELS[5],APE16_DEV=CHANNELS[6]
0190 LET APM10_DEV=CHANNELS[7],SYS01_DEV=CHANNELS[8]
0200 REM " --- IOLISTs"
0210 APE16A: IOLIST *,X0$
0260 SYS01T: IOLIST X$,F0$,X$,X$,X$,F4$,F5$
0270 APS01A: IOLIST P0$,P1$,P2$,P3$,P4$,M0$,M1$,M2$,M3$
0280 GLS01A: IOLIST X$,G1$,G2$,G3$,G4$,G5$,G6$,G7$
0400 REM " --- Parameters"
0410 FIND (SYS01_DEV,KEY="T"+FID(0),DOM=9800)IOL=SYS01T
0420 LET N0$=F0$(16,2),N1$=F4$,N2$="AP",N3$=F5$,WHEN$=F0$(7,3)
0430 FIND (SYS01_DEV,KEY=N0$+N2$+"00",DOM=9800)IOL=APS01A
0440 FIND (SYS01_DEV,KEY=N0$+"GL00",DOM=9800)IOL=GLS01A
0450 DIM P[2],G[4]
0460 FOR X=0 TO 4
0470 LET G[X]=NUM(G2$(X*2+1,2),ERR=0480)
0480 NEXT X
0485 LET G[2]=FNYY_YEAR(G2$(5,2))
0490 LET P[0]=NUM(P2$(1,2)),P[1]=NUM(P2$(3,2)),P[2]=NUM(P3$(9,1))
0500 REM " --- Init Data"
0505 LET HEADINGS=1
0510 LET H0=132,H=0
0520 LET L9=59,L=L9+1
0530 DIM J$(80,"-"),HEADINGS$[HEADINGS]
0540 DIM U[2],T[2],A[2],W[1]
0545 IF LEN(M1$)>13 THEN LET M1$="#####,###.00-"
0550 LET M0=LEN(M0$),M1=LEN(M1$),G5=LEN(G5$)
0560 LET HEADINGS$[0]=N1$,HEADINGS$[1]=N3$
0700 REM " --- Background"
0710 CALL "SYC.WC",1,0,80,0,0,4,0
0800 REM " --- Run Report?
0810 LET V4$="Do You Want To Print The "+N3$
