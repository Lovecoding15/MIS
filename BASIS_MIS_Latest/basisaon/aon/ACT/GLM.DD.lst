0040 REM 
0085 SETESC 9000
0090 SETERR 9000
0200 REM " --- IOLists"
0220 GLM22A: IOLIST B0$(1),B1$(1),B2$(1),B3$(1)
0500 REM " --- Init Data"
0510 LET B0$(1,4)=A0$(1,4)
0700 REM " --- Background"
0720 FOR X=7 TO 11 STEP 2
0730 CALL "SYC.WC",1,0,80,0,0,X,0
0740 NEXT X
0750 PRINT 'SB',@(4,6),"Column No:",@(0,8),"From Position:",@(2,10),"To Position:",@(6,12),"Line No:",'SF',
1000 REM " --- From Column"
1010 PRINT 'CF',@(15,3),A0$(3,2),@(18),A0$(9,20),
1015 LET V4$="Enter the column to be copied"
1020 LET V0$="Z",V1$="CE",V2$="",V3$="",V0=3,V1=15,V2=6,I0=0
1040 GOSUB 7000
1050 ON V3 GOTO 1060,1000,1000,1000,3900
1060 IF V<1 OR V>8 THEN GOTO 1000
1080 LET X=(V-1)*3+1
1090 GOTO 3900
1200 REM " --- From Pos"
1210 LET V4$="Enter the starting position to be copied"
1220 LET V0$="Z",V1$="C",V2$="",V3$="",V0=3,V1=15,V2=8
1240 GOSUB 7000
1250 ON V3 GOTO 1260,1200,3900,1200,3900
1260 IF V>131 THEN GOTO 1200
1280 LET X0$=STR(V:"000")
1290 GOTO 3900
1300 REM " --- To Pos"
1310 LET V4$="Enter the ending position to be copied"
1320 LET V0$="Z",V1$="C",V2$="",V3$="",V0=3,V1=15,V2=10
1340 GOSUB 7000
1350 ON V3 GOTO 1360,1300,3900,1300,3900
1360 IF V>131 THEN GOTO 1300
1380 LET X1$=STR(V:"000")
1390 GOTO 3900
3900 REM " --- Next Field"
3905 IF V3=4 THEN GOTO 4900
3910 IF V3<>2 THEN GOTO 3940
3920 IF I0>0 THEN LET I0=I0-1
3930 GOTO 3950
3940 LET I0=I0+1
3950 LET V3=0
3960 ON I0 GOTO 1000,1200,1300,3990
3990 LET I0=0
4000 REM " --- Correct?"
4010 LET V4$="Is The Above Information Correct (Y/N)?"
4020 LET V0$="Y",V1$="CR",V2$="Y",V3$="",V0=1,V2=22,V1=FNV(V4$)
4030 GOSUB 7000
4040 ON V3 GOTO 4050,4000,4000,4000,4900
4090 ON POS(V$="YN") GOTO 4000,4100,1000
4100 REM " --- Copy column"
4190 READ (GLM22_DEV,KEY=A0$(1,8),DOM=4200)
4200 REM " --- Top of copy loop"
4210 LET K$=KEY(GLM22_DEV,END=4800)
4220 IF K$(1,4)<>A0$(1,4) THEN GOTO 4800
4230 READ (GLM22_DEV,KEY=K$)IOL=GLM22A
4240 PRINT @(15,12),B0$(5,4),
4250 LET X0=0
4260 IF B3$(X,3)=FILL(3) THEN LET B3$(X,3)=X0$
4270 IF X0$=B3$(X,3) THEN LET B3$(X,3)=X1$,X0=1
4280 IF X0=1 THEN WRITE (GLM22_DEV,KEY=K$)IOL=GLM22A
4290 GOTO 4200
4800 REM 
4810 GOTO 1000
4900 REM " --- Return to submenu"
4990 RUN "GLM.DA"
7000 REM " --- Standard Input Routine (15May95)"
7010 CALL "SYC.IA",V0$,V1$,V2$,V3$,V4$,PGM(-2),V0,V1,V2,V$,V,V3,DISPLAY_LEN
7020 IF V3=999 THEN GOTO 7200
7030 IF V3=127 THEN GOTO 7100
7090 RETURN 
7100 REM " --- Escape During Input"
7110 CALL "SYC.ES",ERR=7200,PGM(-2),TCB(8),E$,E2,V3
7120 IF V3<>127 THEN GOTO 7000
7130 PRINT @(0,E2),'CL','CURSOR'("ON"),E$,'LF'
7200 REM " --- Error During Input"
7210 ESCAPE
7290 GOTO 7000
8000 REM " --- Functions"
8090 DEF FNV(Q$)=42+INT(LEN(Q$)/2)
9000 REM " --- Standard Error Routine (15May95)"
9010 IF ERR=127 THEN GOTO 9300
9020 CALL "SYC.EA",ERR=9090,EXIT_CTRL,PGM(-2),ERR,TCB(5),E$,E1,E2
9030 IF E1=1 THEN GOTO 9100
9040 IF E1=3 THEN GOTO 9200
9080 PRINT @(0,E2),'CL','CURSOR'("ON"),E$,'LF'
9090 ESCAPE
9100 REM " --- Retry"
9190 RETRY
9200 REM " --- Return"
9290 GOTO 9900
9300 REM " --- Standard Escape Routine"
9310 CALL "SYC.ES",ERR=9350,PGM(-2),TCB(8),E$,E2,V3
9320 IF V3<>127 THEN GOTO 9390
9330 PRINT @(0,E2),'CL','CURSOR'("ON"),E$,'LF'
9350 ESCAPE
9390 RETURN 
9900 RUN "SYS.AA"
9999 END
