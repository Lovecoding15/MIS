0010 REM "ARR - SIMPLE INVOICE PRINTING"
0020 REM "Program ARR.UA"
0022 REM "+-----------------------------------------------------------+"
0024 REM "| ADD+ON Software, Inc. Advantage/V Version 6.0.0 - 15May96 |"
0026 REM "|      Copyright (c) 1996 Open Systems Holdings Corp.       |"
0028 REM "|                  All Rights Reserved                      |"
0030 REM "+-----------------------------------------------------------+"
0040 REM 
0050 BEGIN 
0085 SETESC 9000
0090 SETERR 9000
0100 REM " --- Open/Lock Files"
0110 LET FILES=5
0120 DIM FILES$[FILES],OPTIONS$[FILES],CHANNELS[FILES]
0130 LET FILES$[1]="ARE-05",FILES$[2]="ARE-15",FILES$[3]="ARM-01"
0140 LET FILES$[4]="ARM-10",FILES$[5]="SYS-01"
0150 LET OPTIONS$[1]="L",OPTIONS$[2]="L"
0160 CALL "SYC.DA",1,1,5,FILES$[ALL],OPTIONS$[ALL],CHANNELS[ALL],BATCH,STATUS
0170 IF STATUS>0 THEN GOTO 9900
0185 LET ARE05_DEV=CHANNELS[1],ARE15_DEV=CHANNELS[2],ARM01_DEV=CHANNELS[3]
0190 LET ARM10_DEV=CHANNELS[4],SYS01_DEV=CHANNELS[5]
0200 REM " --- IOLists" 
0260 SYS01T: IOLIST X$,F0$,X$,X$,X$,F4$,F5$
0270 ARS01A: IOLIST P0$,P1$,P2$,P3$,P4$,M0$,M1$,M2$,M3$,M4$,M5$
0280 GLS01A: IOLIST X$,G1$,G2$,G3$,G4$,G5$,G6$,G7$
0290 ARS01B: IOLIST R0$,R1$
0400 REM " --- Parameters
0410 FIND (SYS01_DEV,KEY="T"+FID(0),DOM=9800)IOL=SYS01T
0420 LET N0$=F0$(16,2),N1$=F4$,N2$="AR",N3$=F5$
0430 FIND (SYS01_DEV,KEY=N0$+N2$+"00",DOM=9800)IOL=ARS01A
0440 FIND (SYS01_DEV,KEY=N0$+N2$+"02",DOM=9800)IOL=ARS01B
0450 DIM P[6],G[4],R[4]
0455 LET P[0]=NUM(P2$(1,2)),P[1]=NUM(P2$(3,2)),P[6]=NUM(P3$(4,1)),G[4]=10
0500 REM " --- Init Data
0520 LET L9=59
0530 DIM J$(80,"-"),J0$(40,"0"),H9$(80,$0A$)
0535 CALL "SYC.RM",M1$,M1,8,13
0545 LET M7$="00000"
0550 DIM W[2]
0560 IF P[6]=9 THEN LET M7$="00000-0000"
0570 LET M0=LEN(M0$),M5=LEN(M5$),M9=LEN(M9$),M2=LEN(M2$),M3=LEN(M3$),M1=LEN(M1$)
0700 REM " --- Background
0710 FOR X=4 TO 12 STEP 2
0720 CALL "SYC.WC",1,0,80,0,0,X,0
0730 NEXT X
0740 PRINT 'SB',@(23,3),"Restart? (Y/N): ",@(23,5),"Invoice Number:",@(30,7),"Message:",@(21,9),"Number Of Copies:",'SF',
1000 REM " --- Restart?
1010 PRINT 'CF',
1015 IF P9$="" THEN LET P9$="N"
1020 LET V0$="Y",V1$="KER",V2$=P9$,V0=1,V1=39,V2=3,I0=0
1040 GOSUB 7000
1050 IF V3=4 THEN GOTO 9900
1060 LET P9$=V$
1090 GOTO 3900
1100 REM " --- Invoice Number
1110 IF P9$<>"Y" THEN PRINT @(40,5),'CL',; GOTO 3900
1120 LET V0$="Z",V1$="KR",V2$=P8$,V0=7,V1=39,V2=5
1140 GOSUB 7000
1150 IF V3=2 THEN GOTO 1000
1160 LET P8$=V$
1170 FIND (ARE05_DEV,KEY=N0$+P8$+"000",DOM=1100)
1190 GOTO 3900
1200 REM " --- Message
1220 LET V0$="S",V2$=P7$,V0=40,V1=39,V2=7
1240 GOSUB 7000
1260 LET P7$=V$
1290 GOTO 3900
1400 REM " --- Number of Copies
1410 IF X9=0 THEN LET X9=1
1420 LET V0$="N",V2$=STR(X9:"00"),V3$="00",V1=39,V2=9
1430 GOSUB 7000
1440 LET X9=V
1490 GOTO 3900
3900 REM " --- Next Field
3910 IF V3<>2 THEN GOTO 3940
3920 IF I0>0 THEN LET I0=I0-1
3930 GOTO 3950
3940 LET I0=I0+1
3960 ON I0 GOTO 1000,1100,1200,1400,4000
4000 REM " --- Correct?"
4010 LET V0$="Y",V1$="CE",V2$="Y",V3$="",V4$="Is The Above Information Correct (Y/N)? ",V0=1,V1=FNV(V4$),V2=22
4020 GOSUB 7000
4040 IF V3=4 THEN GOTO 9900
4060 ON POS(V$="YN") GOTO 4000,4100,1000
4200 RUN "ARR.UB"
7000 REM " --- Standard Input Routine (15May95)"
7010 CALL "SYC.IA",V0$,V1$,V2$,V3$,V4$,PGM(-2),V0,V1,V2,V$,V,V3,DISPLAY_LEN
7020 IF V3=999 THEN GOTO 7200
7030 IF V3=127 THEN GOTO 7100
7090 RETURN 
7100 REM " --- Escape During Input"
7110 CALL "SYC.ES",ERR=7200,PGM(-2),TCB(8),E$,E2,V3
7120 IF V3<>127 THEN GOTO 7000
7130 PRINT @(0,E2),'CL','CURSOR'("ON"),E$,'LF'
7200 REM " --- Error During Input"
7210 ESCAPE
7290 GOTO 7000
8000 REM " --- Functions
8095 DEF FNV(Q$)=42+INT(LEN(Q$)/2)
9000 REM " --- Standard Error Routine (15May95)"
9010 IF ERR=127 THEN GOTO 9300
9020 CALL "SYC.EA",ERR=9090,EXIT_CTRL,PGM(-2),ERR,TCB(5),E$,E1,E2
9030 IF E1=1 THEN GOTO 9100
9040 IF E1=3 THEN GOTO 9200
9080 PRINT @(0,E2),'CL','CURSOR'("ON"),E$,'LF'
9090 ESCAPE
9100 REM " --- Retry"
9190 RETRY
9200 REM " --- Return"
9210 SETERR 9000
9290 GOTO 9900
9300 REM " --- Standard Escape Routine"
9310 CALL "SYC.ES",ERR=9350,PGM(-2),TCB(8),E$,E2,V3
9320 IF V3<>127 THEN GOTO 9390
9330 PRINT @(0,E2),'CL','CURSOR'("ON"),E$,'LF'
9350 ESCAPE
9390 RETURN 
9800 REM " --- Display Parameter record error"
9810 LET LINE_ERR$=LST(PGM(TCB(5)))
9820 CALL "SYC.YA",LINE_ERR$,N2$,ERR
9900 RUN "SYS.AA"
9999 END
