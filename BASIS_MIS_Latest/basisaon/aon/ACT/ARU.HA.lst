1440 GOSUB 7000
1450 IF V<0 THEN GOTO 1400
1460 LET P8=V
1490 GOTO 3900
1600 REM " --- Percent
1620 LET V0$="N",V1$="C",V2$=STR(P7),V3$=M3$,V4$="Enter Monthly Finance Charge Percent (e.g. 2.0 = 2%)",V1=40,V2=9
