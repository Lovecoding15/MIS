1800 REM " --- Dist Code
1820 LET V0$="S",V1$="KC",V2$=P8$,V4$="Enter Code For Distribution Of Finance Charge To GL (<F3>=Lookup)",V0=2,V1=40,V2=13
1830 GOSUB 7000
1831 IF V3<>3 THEN GOTO 1835
1832 LET V4=1,V5=ARM10_DEV,V6=4,V7=2,V8=6,V9=20,V5$="D"
1833 CALL "SYC.LZ",V1,V2,V4,V5,V6,V7,V8,V9,V$,V5$,N0$
1834 IF V$="" THEN GOTO 1800
1835 IF V3=2 THEN GOTO 3900
1840 LET P8$=V$
1850 FIND (ARM10_DEV,KEY=N0$+"D"+P8$,DOM=1800)IOL=ARM10D
1860 PRINT @(V1+V0+1,V2),X0$(6,20),
