0040 REM 
0085 SETESC 9000
0090 SETERR 9000
0200 REM " --- IOLists
0210 ARM01A: IOLIST A0$,A1$
0230 ARM03A: IOLIST B0$,B1$(1)
0500 REM " --- Init Data
0520 DIM W9$(W2,$0A$)
0800 REM " --- Options
0810 CALL "SYC.YN",0,"Do You Wish To Print A Test Pattern?",3,V$,V3
0820 PRINT @(0,13),'CL',
0830 IF V3=4 THEN GOTO 9900
0840 ON POS(V$="YN") GOTO 0800,0850,0900
0850 DIM W0$(W0*W1*4,"X"),W1$(W0*W1*4,"X"),W2$(W0*W1,"X")
0860 LET X0=1
0870 GOSUB 5500
0880 GOTO 0800
0920 CALL "SYC.NB","Printing:",30,COLUMN
0980 ON POS(P7$="NA") GOTO 0910,1000,1500
1000 REM " --- Numeric Sequence
1010 IF P6$<>"A" THEN GOTO 1120
1020 READ (ARM01_DEV,KEY=N0$,DOM=1030)
1100 REM " --- Main Read Numeric Seq
1110 IF P6$="S" THEN GOTO 4000
1120 READ (ARM01_DEV,END=4000)IOL=ARM01A
1125 IF LEN(A0$)<2 THEN GOTO 4000
1130 IF A0$(1,2)<>N0$ THEN GOTO 4000
1170 GOSUB 6000
1200 REM " --- Setup
1280 GOSUB 5000
1290 GOTO 1100
1300 REM " --- Setup
1500 REM " --- Alternate Sequence
1510 IF P6$<>"A" THEN GOTO 1550
1520 READ (ARM04_DEV,KEY=N0$+"A",DOM=1530)
1530 GOTO 1600
1550 EXTRACT (ARM04_DEV,KEY=N0$+"A"+A1$(146,10),DOM=1560)
1560 IF P6$<>"A" THEN GOTO 1620
1600 REM " --- Main Read Alternate Seq
1610 IF P6$="S" THEN GOTO 4000
1620 LET K$=KEY(ARM04_DEV,END=4000)
1640 IF K$(1,3)<>N0$+"A" THEN GOTO 4000
1660 READ (ARM04_DEV)
1680 FIND (ARM01_DEV,KEY=N0$+K$(14),DOM=1600)IOL=ARM01A
1700 GOSUB 6000
1800 REM " --- Setup
1880 GOSUB 5000
1890 GOTO 1600
4000 REM " --- Totals
4020 GOSUB 5500
4030 LET O0=1
4050 IF P6$<>"S" THEN GOTO 9900
4055 FOR X=10 TO 12 STEP 2
4060 CALL "SYC.WC",1,0,80,0,0,X,0
4065 NEXT X
4070 PRINT @(0,11),'CL','SB',@(27),"Customer No: ",'SF',
4080 RUN "ARR.FA"
4100 GOTO 9900
5000 REM " --- Prepare Address
5020 IF POS(" "<>A1$(79,24))=0 THEN LET A1$(79,33)=FNZ$(A1$(103))
5040 IF POS(" "<>B1$(79,24))=0 THEN LET B1$(79,33)=FNZ$(B1$(103))
5100 REM " --- Assemble
5120 LET X3=0
5130 LET X3=X3+1
5140 IF X3>W3 THEN RETURN 
5150 IF X0>=W0 THEN GOSUB 5500
5160 LET X0=X0+1
5180 PRINT @(COLUMN,11),A1$(1,30),
5190 LET W2$(W1*(X0-1)+1,W1)=FNF$(A0$(3,P[0]),M0$),W2$(W1*(X0-1)+20,M8)=FNF$(A1$(112,10),M8$)
5200 LET W0$(W1*(X0-1)+1,W1)=A1$(1,30)
5210 LET W0$(W1*(W0+X0-1)+1,W1)=A1$(31,24)
5220 LET W0$(W1*(2*W0+X0-1)+1,W1)=A1$(55,24)
5230 LET W0$(W1*(3*W0+X0-1)+1,W1)=A1$(79,24)+FNZ$(A1$(103))
5240 LET W1$(W1*(X0-1)+1,W1)=B1$(1,30)
5250 LET W1$(W1*(W0+X0-1)+1,W1)=B1$(31,24)
5260 LET W1$(W1*(2*W0+X0-1)+1,W1)=B1$(55,24)
5270 LET W1$(W1*(3*W0+X0-1)+1,W1)=B1$(79,24)
5280 LET W3$="R/S#:"+A1$(126,20)+" "+"Alt#:"+FNF$(A1$(169,10),M8$)
5285 LET W4$="Contact: "+A1$(228,18)
5290 GOTO 5130
5500 REM " --- Print
5520 IF X0=0 THEN RETURN 
5530 PRINT (7)@(0+W9),W2$
5540 FOR X=0 TO 3
5560 PRINT (7)@(0+W9),W0$(X*W0*W1+1,W0*W1)
5580 NEXT X
5590 PRINT (7)'LF',
5600 FOR X=0 TO 3
5610 PRINT (7)@(0+W9),W1$(X*W0*W1+1,W0*W1)
5620 NEXT X
5630 PRINT (7)@(0+W9),W4$,'LF',
5640 PRINT (7)@(0+W9),W3$
5700 IF W2>4 THEN PRINT (7)W9$(1,W2-13)
5720 LET X0=0,W0$(1)=""
5790 RETURN 
6000 REM " --- Ship-to
6010 DIM B1$(174)
6020 READ (ARM03_DEV,KEY=A0$,DOM=6030)
6030 READ (ARM03_DEV,END=6090)IOL=ARM03A
6040 IF B0$(1,8)<>A0$ THEN LET B1$(1)=""
6090 RETURN 
8000 REM " --- Functions
8085 DEF FNZ$(Q$)=FILL(10,CVS(Q$(1,3)+FILL(POS("9"<Q$(1,5))>0)+Q$(4,2)+FILL(ABS(POS("A">=Q$(1,6))>0)-POS("0">Q$(6,4))>0,"-")+Q$(6,4)+FILL(10),16))
8200 REM " --- FNF$ AlphaNumeric Masking Function"
8210 DEF FNF$(Q1$,Q2$)
8220 IF Q2$="" THEN LET Q2$=FILL(LEN(Q1$),"0")
8230 RETURN STR(-NUM(Q1$,ERR=ALPHA_FNF):Q2$,ERR=ALPHA_FNF)
8240 ALPHA_FNF: 
8245 LET Q=1,Q0=0
8250 WHILE LEN(Q2$(Q))
8255 IF POS(Q2$(Q,1)="-()") THEN LET Q0=Q0+1 ELSE LET Q2$(Q,1)="X"
8260 LET Q=Q+1
8265 WEND
8270 IF LEN(Q1$)>LEN(Q2$)-Q0 THEN LET Q1$=Q1$(1,LEN(Q2$)-Q0)
8280 RETURN STR(Q1$:Q2$)
8290 FNEND
9000 REM " --- Standard Error Routine (15May95)"
9010 IF ERR=127 THEN GOTO 9300
9020 CALL "SYC.EA",ERR=9090,EXIT_CTRL,PGM(-2),ERR,TCB(5),E$,E1,E2
9030 IF E1=1 THEN GOTO 9100
9040 IF E1=3 THEN GOTO 9200
9080 PRINT @(0,E2),'CL','CURSOR'("ON"),E$,'LF'
9090 ESCAPE
9100 REM " --- Retry"
9190 RETRY
9200 REM " --- Return"
9210 SETERR 9000
9290 GOTO 9900
9300 REM " --- Standard Escape Routine"
9310 CALL "SYC.ES",ERR=9350,PGM(-2),TCB(8),E$,E2,V3
9320 IF V3<>127 THEN GOTO 9390
9330 PRINT @(0,E2),'CL','CURSOR'("ON"),E$,'LF'
9350 ESCAPE
9390 RETURN 
9900 RUN "SYS.AA"
9999 END
