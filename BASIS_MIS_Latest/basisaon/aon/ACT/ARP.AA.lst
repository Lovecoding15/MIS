0010 REM "ARP - A/R Parameter Maintenance"
0020 REM "Program ARP.AA"
0022 REM "+-----------------------------------------------------------+"
0024 REM "| ADD+ON Software, Inc. Advantage/V Version 6.0.0 - 15May96 |"
0026 REM "|      Copyright (c) 1996 Open Systems Holdings Corp.       |"
0028 REM "|                  All Rights Reserved                      |"
0030 REM "+-----------------------------------------------------------+"
0040 REM 
0060 BEGIN 
0080 SETERR 9000
0090 SETESC 9000
0100 REM " --- Open/Lock Files"
0110 LET FILES=2
0120 DIM FILES$[FILES],OPTIONS$[FILES],CHANNELS[FILES]
0130 LET FILES$[1]="SYS-01",FILES$[2]="ARS-10"
0140 CALL "SYC.DA",1,1,2,FILES$[ALL],OPTIONS$[ALL],CHANNELS[ALL],BATCH,STATUS
0150 IF STATUS THEN GOTO 9900
0160 LET SYS01_DEV=CHANNELS[1],ARS10_DEV=CHANNELS[2]
0200 REM " --- IOLIST's"
0260 SYS01T: IOLIST X$,F0$,X$,X$,X$,F4$,F5$
0270 ARS01A: IOLIST X$,P1$,P2$,P3$,P4$,M0$,M1$,M2$,M3$
0280 GLS01A: IOLIST X$,X$,G0$
0400 REM " --- Parameters"
0405 DIM INFO$[20],P[2],M9$(7,"#")
0410 FIND (SYS01_DEV,KEY="T"+FID(0),DOM=9800)IOL=SYS01T
0415 LET N0$=F0$(16,2),N2$="AR",P8=6
0420 FIND (SYS01_DEV,KEY=N0$+"GL00",DOM=9800)IOL=GLS01A
0430 CALL "SYC.VA","GL",INFO$[ALL]
0435 LET GL$=INFO$[20]
0440 CALL "SYC.VA","AP",INFO$[ALL]
0445 LET AP$=INFO$[20],BR$=INFO$[9]
0450 CALL "SYC.VA","IV",INFO$[ALL]
0455 LET IV$=INFO$[20]
0480 LET G0=NUM(G0$(1,2)),O0=1,O0$=PGM(-2),O1$=O0$
0485 FIND (SYS01_DEV,KEY=N0$+N2$+"00",DOM=4900)IOL=ARS01A
0490 LET P[0]=NUM(P2$(1,2)),O0=0
1000 REM " --- Process submenu"
1010 DIM MENUS$[1]
1020 LET MENUS=1,MENUS$[1]="ARP.AA",WIN_X=0,WIN_Y=4
1030 CALL "SYC.OA",MENUS,MENUS$[ALL],WIN_X,WIN_Y,DESCRIPTION$,SELECTION$
1040 IF SELECTION$="" THEN GOTO 9900
1050 PRINT @(0,3),'CE',
1060 IF SELECTION$="SYC.NS" THEN GOTO 1100
1090 RUN SELECTION$,ERR=1000
1100 REM " --- Sequence Numbers"
1110 DIM TYPE$[4],PROMPT$[4],LENGTH[4],MASK$[4]
1120 LET TYPE$[0]="M",PROMPT$[0]="Next Customer Number",LENGTH[0]=P[0]
1130 LET TYPE$[1]="M",PROMPT$[1]="Next Temporary Customer Number",LENGTH[1]=P[0]
1140 LET TYPE$[2]="Z",PROMPT$[2]="Next Order Number",LENGTH[2]=7
1150 LET TYPE$[3]="Z",PROMPT$[3]="Next Invoice Number",LENGTH[3]=7
1160 LET TYPE$[4]="Z",PROMPT$[4]="Next Simple Invoice Number",LENGTH[4]=7
1165 LET MASK$[0]=M0$,MASK$[1]=M0$,MASK$[2]=M9$,MASK$[3]=M9$,MASK$[4]=M9$
1170 LET NUMBER=4,KEYVAL$=N0$+"N",CHANNEL=ARS10_DEV,LINE=4
1180 CALL "SYC.NS",CHANNEL,LINE,NUMBER,TYPE$[ALL],PROMPT$[ALL],LENGTH[ALL],MASK$[ALL],KEYVAL$
1190 GOTO 1000
4000 REM " --- Run 1st Overlay for new records"
4990 RUN "ARP.AB"
9000 REM " --- Standard Error Routine (15May95)"
9010 IF ERR=127 THEN GOTO 9300
9020 CALL "SYC.EA",ERR=9090,EXIT_CTRL,PGM(-2),ERR,TCB(5),E$,E1,E2
9030 IF E1=1 THEN GOTO 9100
9040 IF E1=3 THEN GOTO 9200
9080 PRINT @(0,E2),'CL','CURSOR'("ON"),E$,'LF'
9090 ESCAPE
9100 REM " --- Retry"
9190 RETRY
9200 REM " --- Return"
9290 GOTO 9900
9300 REM " --- Standard Escape Routine"
9310 CALL "SYC.ES",ERR=9350,PGM(-2),TCB(8),E$,E2,V3
9320 IF V3<>127 THEN GOTO 9390
9330 PRINT @(0,E2),'CL','CURSOR'("ON"),E$,'LF'
9350 ESCAPE
9390 RETURN 
9800 REM " --- Display Parameter record error"
9810 LET LINE_ERR$=LST(PGM(TCB(5)))
9820 CALL "SYC.YA",LINE_ERR$,N2$,ERR
9900 RUN "SYS.AA"
9999 END
