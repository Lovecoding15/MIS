1420 LET V2$="",V2$=KEY(APE03_DEV,END=1460)
1430 IF V2$(1,10)<>A0$(1,10) THEN LET V2$=""
1450 IF V2$<>"" THEN LET V2$=V2$(11,10)
1460 LET V0$="S",V1$="K",V0=10,V1=15,V2=7
1465 IF F0$(10,3)="APM" THEN LET V0=6,V4$="Invoice Number Restricted To 6 Characters" ELSE LET V0=10
