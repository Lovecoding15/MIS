1490 LET A0$(11,12)=V$,A0$(21,2)="00"
1500 REM "ON FILE?"
1510 LET O9=0
1520 FIND (APE03_DEV,KEY=A0$(1,22),DOM=1600)IOL=APE03A
1550 LET O9=1
1600 REM "OPEN INVOICE?"
1620 FIND (APT02_DEV,KEY=A0$(1,22),DOM=1660)IOL=APT02A
1640 LET O1=1
1660 IF O9=1 THEN GOTO 1900
1730 LET A0$(23)="",D1$(1)=""
1740 LET A[0]=0,A[1]=0,A[2]=0,A[3]=0,A0$(29,3)=F0$(7,3)
1750 LET O9=0
1770 IF O1=1 THEN LET A0$(1)=E0$
1790 GOTO 2000
1900 GOSUB 5000
2000 REM "TEMP VENDOR"
2010 LET D0$(1)=A0$(1,4)+A0$(11,10)
2020 FIND (APM03_DEV,KEY=D0$,DOM=2100)IOL=APM03A
2040 GOSUB 5600
