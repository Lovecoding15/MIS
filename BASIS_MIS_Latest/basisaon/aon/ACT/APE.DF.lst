2210 FOR X=0 TO 2
2220 LET V0$="S",V2$=D1$(31+X*24,24),V0=24,V1=15,V2=14+X
2230 GOSUB 7000
2240 LET D1$(31+X*24,24)=V$
2250 IF V3=4 THEN EXITTO 3900
2260 IF V3<>2 THEN GOTO 2380
2270 IF V3=2 THEN EXITTO 2100
2280 LET X=X-1
2290 GOTO 2220
2380 NEXT X
4000 REM "OPTIONS"
4010 CALL "SYC.YN",1,"Is The Name And Address Information Correct",2,V$,V3
4040 IF V$="" THEN GOTO 4100
4050 ON POS(V$="YN") GOTO 4000,4100,2100
4100 REM "WRITE"
4110 PRINT @(0,14),'CL',@(0,15),'CL',@(0,16),'CL',
4120 WRITE (APM03_DEV,KEY=D0$)IOL=APM03A
