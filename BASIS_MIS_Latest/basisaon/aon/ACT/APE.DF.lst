5040 PRINT @(35,8),FNB$(A0$(29,3)),@(35,9),FNB$(A0$(32,3)),@(35,10),FNB$(A0$(35,3)),@(35,11),FNB$(A0$(38,3)),
5050 PRINT @(60,8),A[1]:M1$,@(60,10),A0$(41,10),@(60,11),A0$(51,16),
