1020 READ (TMM04,KEY=CONTACT$,DOM=1021)
1030 PRINT 'CF',
1080 LET L=L0,DT_BRK$=""
1100 REM "--- Main Read
1120 LET K$=KEY(TMM04,END=4000)
1130 IF POS(CONTACT$=K$)<>1 THEN GOTO 4000
1140 READ (TMM04,KEY=K$)IOL=0220
1190 LET MORE$=""
1200 REM "--- Page Break?
1220 IF L>L9 THEN LET MORE$="Y"; GOTO 4000
1500 REM "--- Display
1520 PRINT @(0,L),FNB$(B1$(11,3)),@(9),B1$(14,30),@(40),B1$(4,7),@(49),B0$(29,7),@(57),B[0]:M2$,B[1]:M1$
