0010 REM "ECM - E_commerce Customer List"
0020 REM "Program BEC.02"
0050 SETESC 9000
0060 SETERR 9000
0100 REM " --- Open/Lock Files
0110 LET FILES=2
0120 DIM FILES$[FILES],OPTIONS$[FILES],CHANNELS[FILES]
0130 LET FILES$[1]="ECM-01",FILES$[2]="ARM-01"
0170 CALL "SYC.DA",1,1,2,FILES$[ALL],OPTIONS$[ALL],CHANNELS[ALL],BATCH,STATUS
0175 IF STATUS>0 THEN GOTO 9900
0180 LET ECM01_DEV=CHANNELS[1],ARM01_DEV=CHANNELS[2]
0200 REM " --- IOLists
0210 call "templates.pgm::ECM01"
0500 REM " --- Initializations"
0600 REM "SET PARAMETERS
0610 LET WIDTH=78,HEIGHT=24,WIN_X=1,WIN_Y=3,LINE=0
0655 LET TITLE$="E-Commerce Customers",NAME$=TITLE$(1,8),X$=STBL("WINDOW_NAME",NAME$)
0700 REM " --- Background
0710 CALL "SYC.WA",0,WIDTH,HEIGHT,WIN_X,WIN_Y,TITLE$,NAME$
1000 REM 
1010 READ record(ECM01_DEV,END=2000)ECM01$
1300 REM " --- Display"
1320 IF LINE<HEIGHT-4 THEN GOTO 1340
1330 PRINT @(11,LINE),"Press Enter to Continue",; INPUT X$,; PRINT 'CS'; LET LINE=0
1340 FIND (ARM01_DEV,KEY=ecm01$(1,8),DOM=1000)*,N$
1350 PRINT @(1,LINE),ecm01.firm_id$," ",ecm01.customer_nbr$," ",ecm01.user_code$," ",ecm01.password$(1,8)," ",N$(1,30),
1360 LET LINE=LINE+1; GOTO 1000
2000 REM 
2010 IF LINE THEN PRINT @(11,LINE),"Done - Press Enter",; INPUT X$,
2050 GOTO 9900
7000 REM " --- Standard Input Routine (15May95)"
7010 CALL "SYC.IA",V0$,V1$,V2$,V3$,V4$,PGM(-2),V0,V1,V2,V$,V,V3,DISPLAY_LEN
7020 IF V3=999 THEN GOTO 7200
7030 IF V3=127 THEN GOTO 7100
7090 RETURN 
7100 REM " --- Escape During Input"
7110 CALL "SYC.ES",ERR=7200,PGM(-2),TCB(8),E$,E2,V3
7120 IF V3<>127 THEN GOTO 7000
7130 PRINT @(0,E2),'CL','CURSOR'("ON"),E$,'LF'
7200 REM " --- Error During Input"
7210 ESCAPE
7290 GOTO 7000
9000 REM " --- Standard Error Routine (15May95)"
9010 IF ERR=127 THEN GOTO 9300
9020 CALL "SYC.EA",ERR=9090,EXIT_CTRL,PGM(-2),ERR,TCB(5),E$,E1,E2
9030 IF E1=1 THEN GOTO 9100
9040 IF E1=3 THEN GOTO 9200
9080 PRINT @(0,E2),'CL','CURSOR'("ON"),E$,'LF'
9090 ESCAPE
9100 REM " --- Retry"
9190 RETRY
9200 REM " --- Return"
9210 SETERR 9000
9220 GOTO 9900
9300 REM " --- Standard Escape Routine"
9310 CALL "SYC.ES",ERR=9350,PGM(-2),TCB(8),E$,E2,V3
9320 IF V3<>127 THEN GOTO 9390
9330 PRINT @(0,E2),'CL','CURSOR'("ON"),E$,'LF'
9350 ESCAPE
9390 RETURN 
9800 REM " --- Display Parameter record error"
9810 LET LINE_ERR$=LST(PGM(TCB(5)))
9820 CALL "SYC.YA",LINE_ERR$,N2$,ERR
9900 REM "Exit"
9915 SETERR 9990
9920 PRINT 'POP',
9990 RUN "SYS.AA"
9999 END
