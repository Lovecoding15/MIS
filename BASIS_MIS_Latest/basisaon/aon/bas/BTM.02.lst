0700 REM "BACKGROUND"
0720 PRINT 'SB',@(11,3),"Country:",@(6,4),"Country code:",@(2,5),"Postal code flag:",@(5,6),"Shipping zone:",@(1,7),"BSG shipping zone:",@(1,8),"Shipping required:",@(10,9),"Language:"
0790 PRINT 'SF',
