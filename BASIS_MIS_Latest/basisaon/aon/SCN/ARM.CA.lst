4760 LET LENGTH[5]=1,TYPE$[5]="Y",MASK$[5]=""
4770 LET FIELD$[6]="Cash Acct",FIELD[6]=2,POSITION[6]=1
4780 LET LENGTH[6]=G[3],TYPE$[6]="M",MASK$[6]=G5$
