1440 ON V3 GOTO 1460,1400,1400,1400,4500
1490 ON POS(V$="YN") GOTO 1400,1500,1000
1500 REM " --- Initialize new record"
1510 LET A0$(7)="",A1$(1)=""
1520 LET A0$(27,1)="Y",A0$(28,1)="Y",A0$(29,1)="A",A0$(30,1)="$"
2000 REM " --- Description"
2020 LET V0$="S",V1$="",V2$=A0$(7,20),V3$="",V0=20,V1=15,V2=4,I0=0
2030 LET V4$="Enter The Description For This Cash Receipts Code"
2040 GOSUB 7000
2050 ON V3 GOTO 2060,2000,3900,2000,3900
2060 LET A0$(7,20)=V$
2090 GOTO 3900
2100 REM " --- Cash code"
2110 LET V4$="Y=Deposit Amount And Adjustments     N=Adjustments Only"
2120 LET V0$="Y",V1$="RC",V2$=A0$(27,1),V3$="YN",V0=1,V1=15,V2=5
2130 GOSUB 7000
2140 ON V3 GOTO 2150,2100,3900,2100,3900
2150 LET A0$(27,1)=V$
