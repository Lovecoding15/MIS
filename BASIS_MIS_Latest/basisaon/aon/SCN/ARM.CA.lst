4680 LET LENGTH[1]=20,TYPE$[1]="S",MASK$[1]=""
4690 LET FIELD$[2]="Cash?",FIELD[2]=1,POSITION[2]=27
4700 LET LENGTH[2]=1,TYPE$[2]="Y",MASK$[2]=""
4710 LET FIELD$[3]="Disc?",FIELD[3]=1,POSITION[3]=28
4720 LET LENGTH[3]=1,TYPE$[3]="Y",MASK$[3]=""
4730 LET FIELD$[4]="POS",FIELD[4]=2,POSITION[4]=G[4]*2+1
4740 LET LENGTH[4]=1,TYPE$[4]="S",MASK$[4]=""
