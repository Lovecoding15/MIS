1040 IF V2$<>"" THEN LET V2$=V2$(4)
1050 LET V0$="S",V1$="KEC",V3$="",V0=3,V1=15,V2=3,V4$="Enter A Valid Cash Receipts Code (<F3>=Lookup)"
