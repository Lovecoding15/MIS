3160 GOSUB 7000
3170 ON V3 GOTO 3200,3100,3900,3180,3900
3180 CALL "SYC.LG",V$
3190 IF V$="" THEN GOTO 3100
3200 REM " --- Retrieve account"
3210 FIND (GLM01_DEV,KEY=N0$+V$,DOM=3100)IOL=GLM01A
3220 PRINT @(V1,V2),FNF$(B0$(3,G[3]),G5$)," ",B1$(1,30),
3230 LET A1$(X0*G[4]+1,G[4])=B0$(3)
