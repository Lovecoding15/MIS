0010 REM "WOS - Generate Requisitions (Input Overlay)"
0020 REM "Program WOU.IA"
0022 REM "+-----------------------------------------------------------+"
0024 REM "| ADD+ON Software, Inc. Advantage/V Version 6.0.0 - 15May96 |"
0026 REM "|      Copyright (c) 1996 Open Systems Holdings Corp.       |"
0028 REM "|                  All Rights Reserved                      |"
0030 REM "+-----------------------------------------------------------+"
0031 REM "16Jan99 WGH: Use Vendor's item discount pricing when available for Special Order Items (105,140,190)
0040 REM 
0070 BEGIN 
0080 SETERR 9000
0090 SETESC 9000
0100 REM " --- Open/Lock Files"
0105 LET FILES=17
0110 DIM FILES$[FILES],OPTIONS$[FILES],CHANNELS[FILES]
0115 LET FILES$[1]="WOE-01",FILES$[2]="WOE-22",FILES$[3]="WOE-32"
0120 LET FILES$[4]="POE-01",FILES$[5]="POE-02",FILES$[6]="POE-11"
0125 LET FILES$[7]="POE-52",FILES$[8]="POM-02",FILES$[9]="POS-10"
0130 LET FILES$[10]="SYS-01",FILES$[11]="APM-02",FILES$[12]="IVM-01"
0135 LET FILES$[13]="IVM-02",FILES$[14]="POE-41",FILES$[15]="POE-31"
0140 LET FILES$[16]="POE-21",FILES$[17]="IVM-05"
0150 CALL "SYC.DA",1,1,FILES,FILES$[ALL],OPTIONS$[ALL],CHANNELS[ALL],BATCH,STATUS
0155 IF STATUS THEN GOTO 9900
0160 LET WOE01_DEV=CHANNELS[1],WOE22_DEV=CHANNELS[2],WOE32_DEV=CHANNELS[3]
0165 LET POE01_DEV=CHANNELS[4],POE02_DEV=CHANNELS[5],POE11_DEV=CHANNELS[6]
0170 LET POE52_DEV=CHANNELS[7],POM02_DEV=CHANNELS[8],POS10_DEV=CHANNELS[9]
0175 LET SYS01_DEV=CHANNELS[10],APM02_DEV=CHANNELS[11],IVM01_DEV=CHANNELS[12]
0185 LET IVM02_DEV=CHANNELS[13],POE41_DEV=CHANNELS[14],POE31_DEV=CHANNELS[15]
0190 LET POE21_DEV=CHANNELS[16],IVM05_DEV=CHANNELS[17]
0200 REM " --- IOLISTs"
0210 SYS01T: IOLIST X$,F0$,X$,X$,X$,F4$,F5$
0220 WOS01A: IOLIST P0$,P1$,P2$,P3$,P4$,M0$,M1$,M2$,M3$
0400 REM " --- Parameters"
0405 DIM INFO$[20]
0410 FIND (SYS01_DEV,KEY="T"+FID(0),DOM=9800)IOL=SYS01T
0420 LET N0$=F0$(16,2),N1$=F4$,N2$="WO",N3$=F5$
0430 FIND (SYS01_DEV,KEY=N0$+N2$+"00",DOM=9800)IOL=WOS01A
0440 IF P3$(3,1)<>"Y" THEN GOTO 4900
0450 CALL "SYC.VA","PO",INFO$[ALL]
0460 IF INFO$[20]="N" THEN GOTO 4900
0500 REM " --- Init Data"
0510 DIM A0$(85),A1$(110),A[5]
0700 REM " --- Background"
0710 FOR X=4 TO 10 STEP 2
0720 CALL "SYC.WC",1,0,80,0,0,X,0
0730 NEXT X
0740 PRINT 'SB',@(23,3),"From Work Order:",@(20,5),"Through Work Order:",@(26,7),"Open/Planned:",'SF',
1000 REM " --- From Work Order #"
1010 LET I0=0
1020 LET V0$="Z",V1$="C",V2$=R0$,V3$="",V4$="Enter Beginning Work Order (<F1>=First/<F3>=Lookup)",V0=7,V1=40,V2=3
1030 GOSUB 7000
1040 ON V3 GOTO 1070,1060,1120,1050,9900
1050 CALL "SYC.LW",V$,"?"; GOTO 1080
1060 PRINT @(V1,V2),'CL',"First",; LET V$=""; GOTO 1110
1070 IF V$="" THEN GOTO 1060
1090 FIND (WOE01_DEV,KEY=N0$+"  "+V$,DOM=1000)
1100 PRINT @(V1,V2),V$,'CL',
1110 LET R0$=V$
1120 GOTO 3900
1200 REM " --- Ending"
1210 LET V0$="Z",V1$="C",V2$=R1$,V3$="",V4$="Enter Ending Work Order (<F1>=Last/<F3>=Lookup)",V0=7,V1=40,V2=5
1220 GOSUB 7000
1230 ON V3 GOTO 1260,1250,1320,1240,9900
1240 CALL "SYC.LW",V$,"?"; GOTO 1270
1250 PRINT @(V1,V2),'CL',"Last",; LET V$=""; GOTO 1310
1260 IF V$="" THEN GOTO 1250
1280 IF V$<R0$ THEN GOTO 1200
1290 FIND (WOE01_DEV,KEY=N0$+"  "+V$,DOM=1200)
1300 PRINT @(V1,V2),V$,'CL',
1310 LET R1$=V$
1320 GOTO 3900
1500 REM " --- Open/Planned"
1510 LET H4$="",V0$="S",V1$="CK^E",V2$=P6$,V3$="",V0=2,V1=40,V2=7
1520 LET V4$="O=Open     P=Planned     <F1>=Both"
1530 PRINT @(V1,V2),'CL',
1540 GOSUB 7000
1550 ON V3 GOTO 1570,1560,1650,1570,9900
1560 LET V$="OP"
1570 IF V$="" THEN GOTO 1560
1580 FOR X=1 TO LEN(V$)
1585 IF POS(V$(X,1)="OP")=0 THEN EXITTO 1500
1590 NEXT X
1600 LET P6$=V$
1610 IF POS("O"=P6$)>0 THEN LET H4$="Open/"
1620 IF POS("P"=P6$)>0 THEN LET H4$=H4$+"Planned/"
1630 LET H4$=H4$(1,LEN(H4$)-1)
1640 PRINT @(V1,V2),V$+" "+H4$,'CL',
1650 GOTO 3900
3900 REM " --- Next Field"
3910 IF V3=4 THEN GOTO 4000
3920 IF V3<>2 THEN GOTO 3950
3930 IF I0>0 THEN LET I0=I0-1
3940 GOTO 3960
3950 LET I0=I0+1
3960 ON I0 GOTO 1000,1200,1500,4000
4000 REM " --- Overlay"
4010 LET V4$="Is The Above Information Correct"
4020 CALL "SYC.YN",1,V4$,1,V$,V3
4030 ON V3 GOTO 4040,4000,4000,4000,9900
4040 ON POS(V$="YN") GOTO 4000,4050,1000
4090 RUN "WOU.IB"
4900 REM " --- Purchase Orders not installed"
4990 GOTO 9900
7000 REM " --- Standard Input Routine (15May95)"
7010 CALL "SYC.IA",V0$,V1$,V2$,V3$,V4$,PGM(-2),V0,V1,V2,V$,V,V3,DISPLAY_LEN
7020 IF V3=999 THEN GOTO 7200
7030 IF V3=127 THEN GOTO 7100
7090 RETURN 
7100 REM " --- Escape During Input"
7110 CALL "SYC.ES",ERR=7200,PGM(-2),TCB(8),E$,E2,V3
7120 IF V3<>127 THEN GOTO 7000
7130 PRINT @(0,E2),'CL','CURSOR'("ON"),E$,'LF'
7200 REM " --- Error During Input"
7210 ESCAPE
7290 GOTO 7000
9000 REM " --- Standard Error Routine (15May95)"
9010 IF ERR=127 THEN GOTO 9300
9020 CALL "SYC.EA",ERR=9090,EXIT_CTRL,PGM(-2),ERR,TCB(5),E$,E1,E2
9030 IF E1=1 THEN GOTO 9100
9040 IF E1=3 THEN GOTO 9200
9080 PRINT @(0,E2),'CL','CURSOR'("ON"),E$,'LF'
9090 ESCAPE
9100 REM " --- Retry"
9190 RETRY
9200 REM " --- Return"
9290 GOTO 9900
9300 REM " --- Standard Escape Routine"
9310 CALL "SYC.ES",ERR=9350,PGM(-2),TCB(8),E$,E2,V3
9320 IF V3<>127 THEN GOTO 9390
9330 PRINT @(0,E2),'CL','CURSOR'("ON"),E$,'LF'
9350 ESCAPE
9390 RETURN 
9800 REM " --- Display Parameter record error"
9810 LET LINE_ERR$=LST(PGM(TCB(5)))
9820 CALL "SYC.YA",LINE_ERR$,N2$,ERR
9900 RUN "SYS.AA"
9999 END
