0010 REM "IVP - Parameter Maintenance (Inventory Factors)"
0020 REM "Program IVP.AC"
0022 REM "+-----------------------------------------------------------+"
0024 REM "| ADD+ON Software, Inc. Advantage/V Version 6.0.0 - 15May96 |"
0026 REM "|      Copyright (c) 1996 Open Systems Holdings Corp.       |"
0028 REM "|                  All Rights Reserved                      |"
0030 REM "+-----------------------------------------------------------+"
0031 REM "04Oct96 JAL: Use correct mask for carrying cost/ABC percentages (1710,1720,1810,5010)"
0040 REM 
0080 SETERR 9000
0090 SETESC 9000
0200 REM " --- IOLIST's"
0210 IVS01B: IOLIST B0$,B1$,B[ALL]
0220 IVS01C: IOLIST C0$,C[ALL],F[ALL]
0500 REM " --- Initializations"
0510 DIM B[1],C[25],F[25]
0550 LET LETTERS$="ABCDEFGHIJKLMNOPQRSTUVWXYZ",M6$="##0.00%",M7$="##0.00"
0590 LET B0$=N0$+N2$+"01",C0$=N0$+N2$+"02",M3=LEN(M3$),M7=LEN(M7$)
0700 REM " --- Background"
0710 PRINT @(0,3),'CE',
0720 CALL "SYC.WC",1,0,80,0,0,7,0
0730 PRINT 'SB',@(28,4),"Setup Cost:",@(25,5),"Carrying Cost:",@(21,7)," ABC Analysis Percentages And Factors ",@(15,8),"Level",@(22),"Percent",@(31),"Factor",@(42),"Level",@(49),"Percent",@(58),"Factor",'SF',
0740 FOR X=1 TO 13
0750 PRINT 'SB',@(17,8+X),LETTERS$(X,1),@(44),LETTERS$(X+13,1),'SF',
0760 NEXT X
1200 REM " --- Retrieve record"
1210 FIND (SYS01_DEV,KEY=B0$,DOM=1220)IOL=IVS01B
1220 FIND (SYS01_DEV,KEY=C0$,DOM=1230)IOL=IVS01C
1300 REM " --- Display record"
1310 GOSUB 5000
1390 GOTO 4000
1600 REM " --- Setup Cost"
1610 LET V4$="Enter The Inventory Setup Cost",I0=0
1620 LET V0$="N",V1$="C",V2$=STR(B[1]),V3$=M3$,V0=M3,V1=40,V2=4
1630 GOSUB 7000
1640 ON V3 GOTO 1650,1600,3900,1600,3900
1650 LET B[1]=V
1690 GOTO 3900
1700 REM " --- Carrying Cost"
1710 LET V4$="Enter The Inventory Carrying Cost Percentage"
1720 LET V0$="N",V1$="C",V2$=STR(B[0]),V3$=M6$,V0=M6,V1=40,V2=5
1730 GOSUB 7000
1740 ON V3 GOTO 1750,1700,3900,1700,3900
1750 LET B[0]=V
1790 GOTO 3900
1800 REM " --- ABC Percentage"
1810 LET X=(I0-2)/2,V0=M6,V1=22,V2=9+X,V0$="N",V1$="C",V2$=STR(C[X]),V3$=M6$
1815 IF X>12 THEN LET V1=49,V2=9+(X-13)
1820 LET V4$="Enter The "+$22$+LETTERS$(X+1,1)+$22$+" Percentage For ABC Analysis"
1830 GOSUB 7000
1840 ON V3 GOTO 1850,1800,1880,1800,1880
1850 IF V<0 OR V>999.99 THEN GOTO 1800
1860 LET C[X]=V
1880 PRINT @(V1,V2),C[X]:M6$,
1890 GOTO 3900
1900 REM " --- Factor"
1910 LET X=INT((I0-3)/2),V0=M7,V1=31,V2=9+X,V1$="C",V2$=STR(F[X]),V3$=M7$
1915 IF X>12 THEN LET V1=58,V2=9+(X-13)
1920 LET V0$="N",V4$="Enter The "+$22$+LETTERS$(X+1,1)+$22$+" Inventory Factor"
1930 GOSUB 7000
1940 ON V3 GOTO 1950,1900,1980,1900,1980
1950 IF V<0 OR V>999.99 THEN GOTO 1900
1960 LET F[X]=V
1980 PRINT @(V1,V2),F[X]:M7$,
1990 GOTO 3900
3900 REM " --- Next field"
3910 IF V3=4 THEN GOTO 4000
3920 IF V3<>2 THEN GOTO 3950
3930 IF I0>0 THEN LET I0=I0-1
3940 GOTO 3960
3950 LET I0=I0+1
3960 ON I0 GOTO 1600,1700,1800,1900,1800,1900,1800,1900,1800,1900,1800,1900,1800,1900,1800,1900,1800,1900,1800,1900,1800,1900,1800,1900,1800,1900,1800,1900,1800,1900,1800,1900,1800,1900,1800,1900,1800,1900,1800,1900,1800,1900,1800,1900,1800,1900,1800,1900,1800,1900,1800,1900,1800,1900,3990
3990 LET I0=0
4000 REM " --- Correct?"
4010 LET V4$="Is The Above Information Correct (Y/N)?"
4020 LET V0$="S",V1$="KC",V2$="Y",V3$="",V0=6,V1=FNV(V4$),V2=22
4030 GOSUB 7000
4040 ON V3 GOTO 4050,4000,4000,4000,4900
4050 IF V$="DELETE" THEN GOTO 4200
4090 ON POS(V$="YN") GOTO 4000,4100,1600
4100 REM " --- Write"
4110 LET NUMBER=0
4120 FOR X=0 TO 25
4130 LET NUMBER=NUMBER+C[X]
4140 NEXT X
4145 IF NUMBER<>100 THEN GOTO 4500
4150 WRITE (SYS01_DEV,KEY=B0$)IOL=IVS01B
4160 WRITE (SYS01_DEV,KEY=C0$)IOL=IVS01C
4180 IF O0>1 THEN RUN "IVP.AD"
4190 GOTO 4900
4200 REM " ---- Remove"
4210 REMOVE (SYS01_DEV,KEY=B0$,DOM=4220)
4220 REMOVE (SYS01_DEV,KEY=C0$,DOM=4230)
4290 GOTO 4900
4500 REM " --- Percentages don't total to 100%"
4510 DIM MESSAGE$[1]
4520 LET MESSAGE$[0]="ABC Analysis Percentages Must Total To 100% (<Enter>=Continue)"
4530 CALL "SYC.XA",2,MESSAGE$[ALL],0,22,-1,V$,V3
4540 LET I0=1
4590 GOTO 3900
4900 REM " --- Run menu overlay"
4990 RUN "IVP.AA"
5000 REM " --- Display"
5010 PRINT @(40,4),B[1]:M3$,@(40,5),B[0]:M6$,
5020 FOR X=0 TO 12
5030 PRINT @(22,9+X),C[X]:M6$,@(31),F[X]:M7$,@(49),C[X+13]:M6$,@(58),F[X+13]:M7$,
5040 NEXT X
5090 RETURN 
7000 REM " --- Standard Input Routine (15May95)"
7010 CALL "SYC.IA",V0$,V1$,V2$,V3$,V4$,PGM(-2),V0,V1,V2,V$,V,V3,DISPLAY_LEN
7020 IF V3=999 THEN GOTO 7200
7030 IF V3=127 THEN GOTO 7100
7090 RETURN 
7100 REM " --- Escape During Input"
7110 CALL "SYC.ES",ERR=7200,PGM(-2),TCB(8),E$,E2,V3
7120 IF V3<>127 THEN GOTO 7000
7130 PRINT @(0,E2),'CL','CURSOR'("ON"),E$,'LF'
7200 REM " --- Error During Input"
7210 ESCAPE
7290 GOTO 7000
8000 REM " --- Functions"
8080 DEF FNV(Q$)=42+INT(LEN(Q$)/2)
9000 REM " --- Standard Error Routine (15May95)"
9010 IF ERR=127 THEN GOTO 9300
9020 CALL "SYC.EA",ERR=9090,EXIT_CTRL,PGM(-2),ERR,TCB(5),E$,E1,E2
9030 IF E1=1 THEN GOTO 9100
9040 IF E1=3 THEN GOTO 9200
9080 PRINT @(0,E2),'CL','CURSOR'("ON"),E$,'LF'
9090 ESCAPE
9100 REM " --- Retry"
9190 RETRY
9200 REM " --- Return"
9220 GOTO 4900
9300 REM " --- Standard Escape Routine"
9310 CALL "SYC.ES",ERR=9350,PGM(-2),TCB(8),E$,E2,V3
9320 IF V3<>127 THEN GOTO 9390
9330 PRINT @(0,E2),'CL','CURSOR'("ON"),E$,'LF'
9350 ESCAPE
9390 RETURN 
9900 RUN "SYS.AA"
9999 END
