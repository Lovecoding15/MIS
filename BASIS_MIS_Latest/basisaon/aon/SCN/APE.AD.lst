4710 IF P3$(2,1)="Y" THEN LET I0=I0-1
4730 IF V$="N" THEN GOTO 2000 ELSE GOTO 3900
6200 REM " --- Create Due & Disc
6210 IF D9$="" THEN LET A0$(32,3)=A0$(29,3) ELSE LET A0$(32,3)=D9$
6220 LET V=X[1]
