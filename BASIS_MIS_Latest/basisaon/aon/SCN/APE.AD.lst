4270 GOTO 4240
4290 IF A0$(5,4)="TEMP" THEN IF O1=0 THEN REMOVE (APM03_DEV,KEY=D0$,DOM=4300)
4292 CALL "SYC.WC",1,0,80,0,0,13,0
4295 PRINT 'CF','SB',
4400 RUN "APE.AB"
