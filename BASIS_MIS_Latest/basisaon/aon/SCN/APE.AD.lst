2240 LET A0$(27,2)=V$
2250 FIND (APM10_DEV,KEY=N0$+"C"+A0$(27,2),DOM=2220)IOL=APM10C
2255 LET Q=POS("  "=X0$(6,20))
2257 IF Q=0 THEN LET Q=21
