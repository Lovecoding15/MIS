6320 IF P3$(2,1)="Y" THEN PRINT @(10,15),'SB',"Distribution Code: ",'SF',X1$,'CL',
6330 PRINT @(14,17),'SB',"Payment Group: ",'SF',X2$,'CL',
6340 PRINT @(22,19),'SB',"Terms: ",'SF',X3$,'CL',
6390 RETURN 
