2320 LET V0$="Y",V1$="RC",V2$=A0$(67,1),V4$="Y=Yes N=No",V0=1,V1=15,V2=11
2330 IF V2$=" " THEN LET V2$="N"
2340 GOSUB 7000
2360 LET A0$(67,1)=V$
