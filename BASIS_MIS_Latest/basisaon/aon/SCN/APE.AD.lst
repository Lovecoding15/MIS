3090 GOTO 3900
3100 REM " --- Ref
3120 LET V0$="S",V1$="",V2$=A0$(41,10),V0=10,V1=63,V2=11
3140 GOSUB 7000
3160 LET A0$(41,10)=V$
3190 GOTO 3900
3200 REM " --- Memo
3220 LET V0$="S",V1$="",V2$=A0$(51,16),V0=16,V1=63,V2=12
3240 GOSUB 7000
3260 LET A0$(51,16)=V$
3290 GOTO 3900
3300 REM " --- Net Inv Amt
3320 LET V0$="N",V1$="C",V2$=STR(A[3]),V3$=M1$,V4$="Enter The Net Discountable Invoice Amount",V1=63,V2=7
