2720 LET V0$="D",V2$=A0$(38,3),V0=8,V1=37,V2=11
2740 GOSUB 7000
2760 LET A0$(38,3)=V$
2790 GOTO 3900
2800 REM " --- Inv Amt
2820 LET V0$="N",V1$="C",V2$=STR(A[0]),V4$="Enter The Total Invoice Amount",V3$=M1$,V1=63,V2=6
2830 GOSUB 7000
2840 LET A[0]=V
2860 LET A[3]=A[0]
