1561 IF V$="M" THEN CALL "TAOSSET::PARAM","(BBX)snquery.bbx",B0$(1,20)
1580 LET L=L+1
1990 GOTO 1100
2000 REM "--- Edit Comment
2010 IF L>L9 THEN PRINT @(0,L0),'LD','LD'; LET L=L-2
2030 LET K$=KEY(SNM01,END=2100)
2040 IF POS(N0$+CONTACT$=K$)<>1 THEN GOTO 2100
2050 READ (SNM01,KEY=K$)IOL=0220
2060 GOTO 2190
2100 REM SEQ
2110 IF B0$="" THEN DIM B0$(20)
2120 REM LET V0$="S",V1$="CER^",V2$=B0$(1,20),V3$="",V4$="Enter the Serial Number, <F4>=End, <F9>=Quit",V0=3,V1=0,V2=20,I0=0
2122 LET V0$="S",V1$="^",V2$=B0$(1,20),V3$="",V4$="Enter Serial Number <F4>=End",V0=20,V1=1,V2=L9+1,I0=0
2130 GOSUB 7000
2135 RETURN 
2140 REM IF V3=4 OR V$="END" THEN GOTO 4000
2150 REM IF V$="" THEN GOTO 2100
2160 REM LET B0$(1)=V$
2180 REM READ (SNM01,KNUM=0,KEY=B0$(1,20),DOM=2185)IOL=0220; GOTO 2190
2185 REM READ (SNM01,END=2100)IOL=0220
2190 REM PRINT @(0,L),B0$(1,20),@(22),B2$(1,3),@(30),B2$(4,3),@(35),B2$(7,3),@(43),B2$(10,3),@(49),B2$(13,3),@(54),FNB$(B3$(2,3)),@(10,L+1),B4$
2195 GOTO 2800
2200 REM COMMENT
2220 LET V0$="S",V1$="C",V2$=B4$,V3$="",V4$="",V0=20,V1=10,V2=L+1
2225 LET I0=1
2230 GOSUB 7000
2280 LET B4$=V$
2290 GOTO 2900
2800 REM NEXT
2810 REM LET V0$="S",V1$="CE",V2$="",V3$="",V4$="<CR>=OK <F2>=Edit <F4>=End ",V0=1,V1=76,V2=L,I0=1
2812 LET V0$="S",V1$="CE",V2$="",V3$="",V4$="<CR>=Done ",V0=1,V1=76,V2=L,I0=1
2820 GOSUB 7000
2825 GOTO 4000
2830 REM IF V3=2 THEN LET I0=2; GOTO 2900
2840 REM WRITE (SNM01,KEY=B0$(1,20))IOL=0220
2850 REM IF V3=4 THEN GOTO 4000
2860 REM IF V3=9 THEN GOTO 9900
2880 LET L=L+2
2890 GOTO 2000
2900 REM SEQ CONTROL
2905 REM IF V3=9 THEN GOTO 9900
2910 IF V3=4 THEN IF I0>1 THEN LET I0=4; GOTO 4000
2920 IF V3<>2 THEN GOTO 2950
2930 IF I0>0 THEN LET I0=I0-1
2940 GOTO 2960
2950 LET I0=I0+1
2960 ON I0 GOTO 2100,2200,2800
4000 REM "--- Correct
4010 REM LET FOOTING$(1)="",LINE$="<F1>=Restart <F2>=Edit Serial Number Comment <F4>=End"; IF MORE$="Y" THEN LET LINE$="<CR>=More "+LINE$
4012 LET FOOTING$(1)="",LINE$="<F1>=Restart <F4>=End"; IF MORE$="Y" THEN LET LINE$="<CR>=More "+LINE$
4020 LET V0$="S",V1$="C",V2$="",V3$="",V0=1,V1=74,V2=14,FOOTING$(39-INT(LEN(LINE$)/2))=LINE$
4030 PRINT @(0,14),'BR',FOOTING$,'ER',
4040 GOSUB 7000
4045 PRINT @(0,14),'CL',
4047 IF V3=1 THEN GOTO 0900
4049 REM IF V3=2 THEN LET L=L0; PRINT 'CF',; READ (SNM01,KNUM=SRT,KEY=N0$+CONTACT$,DOM=2000); GOTO 2000
4050 IF V3=4 THEN LET V3=0; GOTO 9900
4070 IF POS(" "<>V$)=0 THEN IF MORE$="Y" THEN LET L=L0; PRINT 'CF',; GOTO 1300 ELSE GOTO 4000
4090 GOTO 2000
5000 REM "--- Page Break
5020 LET V0$="S",V1$="CE",V2$="",V3$="",V4$="<CR> To Continue or END, <F9>=Quit",V0=1,V1=41+INT(LEN(V4$)/2),V2=16
5040 GOSUB 7000
5050 IF V$="END" THEN EXITTO 4000
5060 IF V3=9 THEN EXITTO 9900
5070 LET L=L0,DT_BRK$=""
5080 PRINT 'CF',
5090 RETURN 
