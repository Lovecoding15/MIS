1080 REM LET L=L0,DT_BRK$=""
1100 REM "--- Main Read
1110 REM IF SELECTION$="RECENT" THEN LET K$=KEYP(SNM01,END=4000); GOTO 1130
1120 LET K$=KEY(SNM01,END=4000)
1130 IF POS(N0$+CONTACT$=K$)<>1 THEN GOTO 4000
1150 READ (SNM01,DIR=KEYDIR,KEY=K$)IOL=0220
1190 LET MORE$=""
1200 REM "--- Page Break?
1220 IF L>L9 THEN LET MORE$="Y"; GOTO 4000
1500 REM "--- Display
1520 PRINT @(0,L),B0$(1,13),B3$(1,1),STR(B[0]:"####0"),@(21),B2$(1,3),@(26),B2$(4,3),@(31),B2$(7,3),@(36),B2$(10,3),@(41),B2$(13,3),@(46),FNB4$(B3$(2,3)),@(57),B4$
