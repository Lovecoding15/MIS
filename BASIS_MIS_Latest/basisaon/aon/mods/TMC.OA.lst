1540 LET V0$="S",V1$="^",V2$="",V3$="",V4$="<CR>=Next SN  <M>=More Detail  <F4>=Done",V0=1,V1=74,V2=14
1550 GOSUB 7000; IF V3=4 THEN LET V3=0; GOTO 9900
