0079 REM 
0080 SETERR 9000
0090 ENTER key0$,FLAG$,CUST$,V3,CHAN[ALL]; REM "WA:205
0100 REM "OPEN FILES
0130 LET SYS01_DEV=UNT; OPEN (SYS01_DEV,ERR=9900)"SYS-01"
0140 LET X$=STBL("SYS01_DEV",STR(SYS01_DEV))
0220 IOLIST B0$,B1$(1)
0270 IOLIST X$,F0$,X$,X$,F4$,F5$
