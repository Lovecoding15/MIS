0010 REM "CSC - Enter Effective and Obsolete Dates
0020 REM "Program CSC.BN"
0022 REM "+-----------------------------------------------------------+"
0024 REM "| ADD+ON Software, Inc. Advantage/V Version 6.0.0 - 15May96 |"
0026 REM "|      Copyright (c) 1996 Open Systems Holdings Corp.       |"
0028 REM "|                  All Rights Reserved                      |"
0030 REM "+-----------------------------------------------------------+"
0031 REM "MAS * DCF * 4/28/99 * WA# 204 * BASIS
0040 REM 
0050 REM "EFFDATE$: Effective Date (Input/Returned)"
0060 REM "OBSDATE$: Obsolete Date (Input/Returned)"
0070 REM 
0080 SETERR 9000
0085 SETESC 9000
0090 ENTER EFFDATE$,OBSDATE$
0500 REM " --- Initializations"
0540 LET WIDTH=35,HEIGHT=5,WIN_X=25,WIN_Y=13,HEADING$="Additional Options"
0550 LET EFFECTIVE$=EFFDATE$,OBSOLETE$=OBSDATE$
0700 REM " --- Background"
0710 CALL "SYC.WA",MODE,WIDTH,HEIGHT,WIN_X,WIN_Y,HEADING$,NAME$
0720 PRINT 'SB',@(2,0),"Effective Date:",@(3,1),"Obsolete Date:",'SF',
0730 IF FNP$(EFFDATE$)<>"" THEN PRINT @(18,0),FNB$(EFFDATE$)
0740 IF FNP$(OBSDATE$)<>"" THEN PRINT @(18,1),FNB$(OBSDATE$)
1000 REM " --- Effective Date
1010 LET V0$="D",V1$="C",V2$=EFFDATE$,V3$="",V4$="",V0=3,V1=18,V2=0
1020 GOSUB 7000
1030 ON V3 GOTO 1040,1000,1000,1000,4000
1040 LET V$=V$+FILL(3),V$=V$(1,3)
1050 IF FNP$(V$)<>"" THEN PRINT @(V1,V2),FNB$(V$),
1060 LET EFFDATE$=V$
1200 REM " --- Obsolete Date
1210 LET V0$="D",V1$="C",V2$=OBSDATE$,V3$=""
1220 LET V4$="<F1> To Clear Date",V0=3,V1=18,V2=1
1230 GOSUB 7000
1240 ON V3 GOTO 1260,1250,1000,1200,4000
1250 LET V$=""
1260 LET V$=V$+FILL(3),V$=V$(1,3)
1270 IF FNP$(V$)<>"" THEN IF V$<=EFFDATE$ THEN GOTO 1200
1280 LET OBSDATE$=V$
4000 REM " --- Options"
4010 PRINT @(1,2),"Is The Data Correct (Y/N)?",
4020 LET V0$="Y",V1$="C",V2$="Y",V3$="",V4$="",V0=1,V1=28,V2=2
4030 GOSUB 7000
4040 ON V3 GOTO 4060,4000,4000,4000,4050
4045 IF OBSDATE$<>"   " THEN IF OBSDATE$<=EFFDATE$ THEN GOTO 1200
4050 LET EFFDATE$=EFFECTIVE$,OBSDATE$=OBSOLETE$,V$="Y"
4090 ON POS(V$="YN") GOTO 4000,9900,1000
7000 REM " --- Standard Input Routine (15May95)"
7010 CALL "SYC.IA",V0$,V1$,V2$,V3$,V4$,PGM(-2),V0,V1,V2,V$,V,V3,DISPLAY_LEN
7020 IF V3=999 THEN GOTO 7200
7030 IF V3=127 THEN GOTO 7100
7090 RETURN 
7100 REM " --- Escape During Input"
7110 CALL "SYC.ES",ERR=7200,PGM(-2),TCB(8),E$,E2,V3
7120 IF V3<>127 THEN GOTO 7000
7130 PRINT @(0,E2),'CL','CURSOR'("ON"),E$,'LF'
7200 REM " --- Error During Input"
7210 ESCAPE
7290 GOTO 7000
8000 REM " --- Functions"
8010 DEF FNA$(Q$,Q2$)=STR(MOD((ASC(Q$)-32)*POS(" "<>Q2$(2,1)),100):"00")
8020 DEF FNB$(Q1$)=FNA$(Q1$(2),Q1$)+"/"+FNA$(Q1$(3),Q1$)+"/"+FNA$(Q1$(1),Q1$)
8080 DEF FNP$(Q$)=CVS(Q$,2)
9000 REM " --- Standard Error Routine (15May95)"
9010 IF ERR=127 THEN GOTO 9300
9020 CALL "SYC.EA",ERR=9090,EXIT_CTRL,PGM(-2),ERR,TCB(5),E$,E1,E2
9030 IF E1=1 THEN GOTO 9100
9040 IF E1=3 THEN GOTO 9200
9080 PRINT @(0,E2),'CL','CURSOR'("ON"),E$,'LF'
9090 ESCAPE
9100 REM " --- Retry"
9190 RETRY
9200 REM " --- Return"
9290 GOTO 9900
9300 REM " --- Standard Escape Routine"
9310 CALL "SYC.ES",ERR=9350,PGM(-2),TCB(8),E$,E2,V3
9320 IF V3<>127 THEN GOTO 9390
9330 PRINT @(0,E2),'CL','CURSOR'("ON"),E$,'LF'
9350 ESCAPE
9390 RETURN 
9900 REM " --- Close Files and Exit
9910 IF NAME$<>"" THEN CALL "SYC.WD",NAME$
9950 EXIT 
9999 END
